.save-controls2-modal
  h1.modal-h1 Save work to a Collection
  hr
  include ../../../contact/templates/artwork_details
  ul.save-controls2-modal-collections
    for collection, i in collections
      li( class=(i == 0 ? 'is-selected' : '' ) )
        = collection.get('name')
        span.icon-check
  form.save-controls2-modal-new-collection
    input.bordered-input( placeholder="Create New Collection" )
    button.icon-plus-small
  button.avant-garde-button-black.save-controls2-modal-done Done