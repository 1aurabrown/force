#modal.auth
  .modal-close
    padding 25px 35px
    opacity 0.15
    &:hover
      opacity 1

  .modal-body
    padding 20px
    text-align center

#auth-header
  & > aside
    margin 20px
    font-size 26px
    line-height 1.3

  & > p
    margin 20px
    font-size 18px

#auth-header-errors
  color bad-red-color

#auth-header-logo
  margin 20px 0
  font-size 55px

.auth-options
  width 425px
  max-width 100%
  margin 10px auto
  > a
    display block
    width 100%
    margin 10px auto
    > i
      line-height 0
      margin-right 10px
      vertical-align middle

.auth-login-options
  margin 20px 0
  clearfix()
  .auth-login-option
    float left
    width 50%
    &:first-child
      border-right 1px solid light-gray-border-color
      padding 0 20px 0 40px

    &:last-child
      padding 0 40px 0 20px

.auth-form
.auth-form > input,
.auth-login-social
  margin 10px 0

.auth-form-options
  margin 10px 0
  clearfix()
  & > label
    float left
  & > a
    float right

.auth-register
  max-width 370px
  margin auto

.auth-reset
  margin 40px 0
  font-size 25px

#auth-footer
  margin-top 20px

  & > aside
    font-style italic
    font-size 15px
    margin 20px 0
    opacity 0.8
