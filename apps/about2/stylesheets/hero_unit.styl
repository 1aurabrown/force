@keyframes pulse
  0% {
    opacity 0.33
  }
  50% {
    opacity 1
  }
  100% {
    opacity 0.33
  }

.about-2-foreground
  background-color white
  position relative
  z-index 1

.about2-hero-unit
  width 100%
  height 100%
  background-color black
  overflow hidden

.about2-hero-unit-bgs
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 0
  opacity 0
  &.is-fade-in
    transition opacity 1s
    opacity 1
  // Prevent full page repaints as this sits
  // behind the foreground when scrolling
  force-hardware-acceleration()
  li
    position absolute
    width 100%
    height 100%
    background center center no-repeat
    background-size cover
    transition opacity 2s
    opacity 0
    &.is-active
      // Fade in is faster than fade out
      transition opacity 1s
      opacity 1

.about2-hero-unit-container
  position absolute
  top main-header-height
  right 0
  bottom 0
  left 0
  z-index 1

.a2huc-top
  height 70%

.a2huc-bottom
  height 30%

.about2-hero-unit-h1
  position relative
  width container-width
  margin 0 auto
  padding-right column-width
  overflow hidden
  > h1
    font-size 47px
    line-height 60px
    color white

.about2-nav
  display table
  position relative
  width container-width
  margin 0 auto
  height 65px
  transition opacity 1s
  a
    display table-cell
    width 16.6%
    height 100%
    padding 20px 0
    text-align center
    vertical-align middle
    avant-garde()
    font-size 13px
    letter-spacing 2px
    color white
    border-right 1px solid rgba(white, 0.6)
    &:last-child
      border-right 0
    &:hover span
      opacity 0.5
  span
    display inline-block
    vertical-align middle
    line-height 18px
    transition opacity 0.25s

.about2-chevron
  display block
  position relative
  width 100%
  height 65%
  text-align center
  animation pulse 2s infinite
  > a
    position absolute
    top 50%
    transform translateY(-50%)
    color white
    font-size 26px

html[data-useragent*="iPad"]
  .about2-hero-unit-bgs
    position absolute
  .about2-hero-unit
    margin-top -(main-header-height)
