extends ../../../components/main_layout/templates/index
include ../../../components/util/activator

block head
  include meta

append locals
  - assetPackage = 'galleries_institutions2'

block body
  .galleries-institutions2-page
    header.galleries-institutions2-header
      h1.galleries-institutions2-headline
        | Browse #{type === 'gallery' ? 'Galleries' : 'Institutions'}

      nav.galleries-institutions2-subnav
        a.fine-faux-underline( href='/#{type}-a-z' )
          | Aâ€“Z
        a.fine-faux-underline( href='/#{type}-partnerships' )
          | Partner with Artsy
        if type === 'gallery'
          a.fine-faux-underline( href='/gallery-insights' )
            | Gallery Insights

    include ../components/primary_carousel/template

    .js-partner-category-carousels
      each carousel in carousels
        - var category = carousel.category
        - var partners = carousel.partners.models
        .partner-category-carousel
          include ../components/partner_cell_carousel/template

    include ./footer
