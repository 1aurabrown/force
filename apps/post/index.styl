#main-layout-container
  margin-left 0
  margin-right 0

#post
  margin-top 50px
  .loading-spinner
    margin-top 200px
  .post-page-feature-item
    margin 30px 16px 0
    vertical-align top
    display inline-block
    width 250px
    text-align center

.post-page-section
  border-top 1px solid gray-lighter-color
  margin 30px 0
  a
    text-decoration none
  &:last-child
    margin-bottom (@margin * 2)
  .featured-posts-container
  .related-artists-container
    max-width default-max-page-width + 200
    margin 0 auto
    text-align center
    > h2
      margin 20px 0
      font-size 17px

.prai-name
  margin 20px 0 10px 0
  avant-garde()
  font-size 15px
.pfpi-title
  font-size 18px
.pfpi-author
  display block
  margin 10px auto 0
  avant-garde()
  font-size 11px
  max-width 80%
  overflow ellipsis
