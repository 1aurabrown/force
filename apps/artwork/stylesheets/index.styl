@import '../../../components/stylus_lib'
@import './deep-zoom'
@import './circle-buttons'
@import './view-in-room'
@import './layered-search'
@import '../components/contact'

artwork-detail-width = 250px
artwork-detail-item-height = 36px

#artwork-page
  padding 20px 0
  > section
    clearfix()
    margin 20px 0
    padding 20px 0
    border-top 1px solid gray-lighter-color
    h2
    h3
      margin 12px 0px 27px
      font-size 15px
    h2 a
      text-decoration none

.artwork-container
  clearfix()
  position relative
  width 100%
  height auto
  z-index 1

.artwork-image-zoom
  cursor -moz-zoom-in
  cursor -webkit-zoom-in

.artwork-overview
  float left
  width calc('100% - %s' % artwork-detail-width)
  height 100%
  padding-left artwork-detail-width
  margin-right -(artwork-detail-width)
  text-align center
  prevent-content-shift()
  // Better usage of space at smaller screen sizes
  @media screen and (max-width: 1024px)
    margin-right 0
    padding-left 20px
    #artwork-feature-navigation
      opacity 0 !important

.artwork-auction-results-button
  margin-top 10px
  margin-right 13px

.related-posts-add-button.avant-garde-header-small
  padding-left 0px

.artwork-left-section
  position absolute
  top 0
  left 0
  width 200px
  text-align left

#artwork-feature-navigation
  opacity 0
  transition opacity 0.5s
  a
    text-decoration none
  &:not(:empty)
    opacity 1

#the-artwork-image
  display inline-block
  max-width 100%
  max-height 100%

.artwork-additional-images
  margin 20px auto

.artwork-additional-image
  display inline-block
  height 45px
  margin 5px
  border 3px solid transparent
  vertical-align middle
  transition border-color 0.125s
  > img
    display inline-block
    height 100%
  &.is-active
  &[data-state='active']
    border-color purple-color

.artwork-image-actions
  padding 20px 0px 40px
  display inline-block
  position relative

.artwork-detail
  float right
  width artwork-detail-width
  margin-bottom 20px
  padding-left 20px
  font-size 17px
  // Buttons are narrower
  // and always block
  .avant-garde-button-black
    display block
    width 100%
    padding 13px 30px 10px
    &[data-state='loading'], &.is-loading
      &::before
        width 20px
        height 5px

  // Auction state
  &.is-auction
    // Hide some elements
    .artwork-meta-price
    .artwork-inquiry
    .artwork-contact-button
    #artwork-detail-contact
      display none

.artwork-detail-artist
  avant-garde()
  margin-right 5px
  display: inline-block
  > a
    text-decoration none
    &:hover
      text-decoration underline

.artwork-detail-title
  display block
  margin-bottom 10px
  > em
    font-style italic

.artwork-meta-photo-credit
  margin-top 10px
  font-size 11px
  line-height 1.2

.artwork-meta-partner
  margin-top 10px
  > a
    text-decoration none

.artwork-meta-price
  display table
  width 100%
  border-top 1px dotted
  border-bottom 1px dotted
  border-color transparify(gray-lighter-color, black)
  margin 10px 0
  line-height artwork-detail-item-height
.artwork-meta-price-label
.artwork-meta-price-amount
  display table-cell
.artwork-meta-price-amount
  text-align right
.artwork-meta-price-label
  &.is-sold
    avant-garde()
    font-size 15px
    color red-color

.artwork-actions
  margin-top 20px

// Auction
.artwork-auction-estimate
  margin 10px 0

.artwork-bidder-position-status
  margin 20px 0
  padding 10px 0
  border-top 2px solid
  border-bottom 2px solid
  font-size 17px
  &.is-highest
    color purple-color
  &.is-outbid
    color red-color

.artwork-bid-status
  margin 10px 0 20px
  padding-top 10px
  border-top 1px dotted
  border-color transparify(gray-lighter-color, black)
.abs-bid
  font-weight bold
.abs-count
  color transparify(gray-dark-color, black)
.abs-amount
  avant-garde()
  font-size 24px
  line-height 1.5

.artwork-bid-form
  margin-top 6px
  label
    display block
    margin 5px 0
  input
    width 100%
    border-color transparify(gray-lighter-color, black)
.abf-min-next
  margin 5px 0
  color transparify(gray-dark-color, black)
.abf-button
  margin 10px 0
.abf-validation-error
  display none
  margin 20px 0
  padding 10px 0
  border-top 2px solid
  border-bottom 2px solid
  color red-color
  font-size 15px
.abf-help
  margin 10px 0
  > a
    color transparify(gray-dark-color, black)
    font-size 15px
    font-style italic

#artwork-auction-clock
  margin 20px 0
  .auction-clock-value > li > small
    color transparify(#aaa, black)

  .clock-header
    text-align left
    letter-spacing 1px
    font-size 13px
  .auction-clock-value
    text-align left
    margin-top 6px
    font-size 24px
    li small
      text-align center

#auction-detail
#artwork-auction-clock
  opacity 0
  transition opacity 1s
  &.is-fade-in
    opacity 1

#auction-detail .artwork-meta-price
  display table

// Inquiry
.artwork-inquiry
  margin 20px 0
  text-align center
  > .small-caps
    font-size 11px
    line-height 1.2
    letter-spacing 0
    color gray-darker-color

.artwork-edition-sets
  margin 10px 0
.artwork-edition-set
  display block
  position relative
  padding 5px 0
  font-size 13px
  line-height 1.5
  border-bottom 1px dotted
  border-color transparify(gray-lighter-color, black)
  clearfix()
  &:first-child
    border-top 1px dotted
.aes-radio
.aes-details
  float left
.aes-radio
  margin-right 10px
.aes-edition-size
  color gray-darker-color
.aes-price
  position absolute
  top 5px
  right 5px

.artwork-actions-list
  margin-top 20px
  border-top 1px dotted
  border-color transparify(gray-lighter-color, black)
  > a
    display block
    position relative
    line-height artwork-detail-item-height
    padding-left @line-height
    text-decoration none
    transition all 0.125s
    border-bottom 1px dotted
    border-color transparify(gray-lighter-color, black)
    &.is-hidden
      display none
    > i
      position absolute
      line-height @line-height
      left 0
    > sup
      text-transform uppercase
      margin-left 0.5em
      // Tone down superscript a bit
      vertical-align 4px
    &:hover
      background-color purple-color
      border-color @background-color
      color white
      transition none

// Below the fold
.ari-left
.ari-right
  display inline-block
  vertical-align top
  text-align left
.ari-left
  width 63%
  max-width 660px
  height 100%
  .posts-add-button
    margin-left 10px
.ari-right
  width 30%
  padding-left 50px
  margin-left: 50px
  border-left 1px solid gray-lighter-color
  &.borderless
    border-left 0px solid gray-lighter-color
    margin-left 0px
    padding-left 0px

.ari-container
  width: 86%
  text-align center
  margin 0px auto

// Phone number container
.show-phone-number, .partner-phone-numbers
  margin-top -7px

.show-phone-number
  text-decoration underline
  margin-bottom 10px
  cursor pointer
  font-style italic

.partner-phone-numbers
  display none
  margin-bottom 10px
  .partner-phone-number
    margin-bottom 2px

// Bio and related works
.artwork-artist
  transition opacity 0.5s
  &[data-state='pending']
    opacity 0
  .avant-garde-header-center a
    text-decoration none

.artwork-artist-blurb
.artwork-blurb
  margin 4px 0px 10px
  font-size 17px
  line-height 1.5
  text-align left
  word-wrap break-word

#artwork-related-show-section, #artist-artworks-section
  display none
  opacity 0
  transition opacity 1s
  &.is-fade-in
    opacity 1

#artist-artworks-section
  .artworks-list
    margin-top 20px
  .artist-link-container
    text-align center
  .faux-underline-hover-large
    display inline-block
    text-align center
    avant-garde()
    font-size 13px
    text-decoration none
    margin-top 20px

.ars-metadata
  position relative
  margin 20px 0
.ars-partner-name
  avant-garde()
  margin-right 5px
.ars-show-name
  text-decoration none
.ars-buttons
  position absolute
  top 0
  right 0
  button
    margin-left 10px

#artwork-below-the-fold-section
  margin 20px auto
  opacity 0
  transition opacity 0.5s
  &[data-state='fade-in']
    opacity 1
  h2
    a
      text-decoration none

.monocle-zoom
  width 256px
  height 256px
  position absolute
  pointer-events none
  border-radius 256px
  background-repeat no-repeat
  background-color white
  box-shadow 0 10px 24px rgba(0,0,0,0.12)

.auction-clock-closed
  display none

.about-artwork-section.add-margin-bottom
  margin-bottom 40px

.artwork-video
  margin auto
  iframe, .artwork-video-img
    width 100%
    height 100%

.artwork-video-img
  position relative
  cursor pointer
  &::before
    height 150px
    width 100px
    top calc(50% \- (@height / 2))
    left calc(50% \- (@width / 2))
    transform rotateZ(-90deg)
    color white
    background black
    line-height @height
    display block
    position absolute
    transition background-color 0.3s
  &:hover::before
    background purple-color
