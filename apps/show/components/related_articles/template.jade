.show-related-articles
  .show-related-articles-title
    | Articles Related to the Show

  for article in articles
    .show-related-article
      .show-related-article-image
        a( href= article.href() ): img(
          src= crop(article.get('thumbnail_image'), { width: 300, height: 225 })
          alt= article.get('title')
        )

      .show-related-article-info
        a( href= article.href() )
          .show-related-article-title= article.get('thumbnail_title')
        a.show-related-article-author( href="/#{article.related().author.get('profile_handle')}" )
          | By #{article.related().author.get('name')}

  if remaining > 0
    .related-articles-show-all.avant-garde-button-white.is-block
      | Show More Related Articles (#{remaining})
