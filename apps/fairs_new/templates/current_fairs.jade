mixin current-fair-figure(fair)
  .fairs__current-fair
    .fairs__current-fair__image
      a.hoverable-image-link( href= fair.href() )
        .hoverable-image( style="background-image: url(#{fair.imageUrl('wide')});" )
      img.fairs__current-fair__image__icon( alt=fair.get('name'), title=fair.get('name'), src=fair.related().profile.icon().imageUrl('square') )
    .fairs-fair__name= fair.get('name')
    .fairs-fair__info 
      | #{fair.formatDates()}
      if fair.formatLocation() 
        | , #{fair.formatLocation()}

each row in currentFairRows
  .fairs__current-fair-row(class="fairs__current-fair-row--#{row.type}")
    each fair in row.fairs
      +current-fair-figure(fair)
    if row.type == 'two-third-promo' || row.type == 'half-promo'
      .fairs__current__promo
        a(href="https://iphone.artsy.net/")
          .mobile-section-iphone &nbsp;
          .fairs__current__promo__copy Download Artsy for iPhone for a personalized guide to the show.