@import '../components/grid'
@import '../../../components/stylus_lib'
@import './edit'

container-width = 1120px
container-margin = 50px
section-margin-top = 120px
hero-unit-height = 435px

//
// Page Container
//
.gallery-partnerships-container
  width container-width
  margin container-margin auto container-margin * 2 auto
  font-size 18px
  line-height 28px

//
// Hero Units
//
.gallery-partnerships-hero-unit-header
  margin-bottom 30px
  .grid-item
    vertical-align baseline

.gallery-partnerships-hero-unit-images
  position relative
  height hero-unit-height

.gallery-partnerships-hero-unit-image
  position absolute
  width 100%
  height 100%
  transition opacity 1.5s
  opacity 0
  &.is-active
    transition opacity 1s
    opacity 1

//
// Sections
//
.gallery-partnerships-section
  padding-top section-margin-top

//
// Scetion Nav
//
.gallery-partnerships-section-nav
  padding 13px 0
  &.stuck
    position fixed
    width 100%
    top 0
    left 0
    right 0
    background-color white
    border-bottom 1px solid gray-lighter-color
    z-index 3
    > nav
      width container-width
      margin 0 auto
    .gallery-partnerships-nav-link:not(.avant-garde-button-black)
      color gray-color
      &.is-active
        color purple-color
  > nav
    display flex
    justify-content space-between

.gallery-partnerships-nav-link
  avant-garde()
  text-decoration none
  font-size 13px
  line-height 14px
  padding 10px

//
// Section Header
//
.gallery-partnerships-section-header
  margin-bottom 60px
  &.audience
    position relative
    z-index 1
  &.apply
    text-align center
    h3
      margin-bottom 50px
    .apply-button
      font-size 30px
      padding 20px 60px
  .grid-item
    vertical-align top

//
// Content of Each Section
//
.gallery-partnerships-section-content
  //
  // Network
  //
  .support-liaison
  .network-gallery-info
    avant-garde()
    text-align center
    line-height 1.5em
    font-size 14px
    margin 15px 0 10px 0
  .support-liaison-location
  .network-gallery-location
    color gray-dark-color

  //
  // Audience
  //
  &.audience
    position relative
    height 475px - section-margin-top
  .audience-map
  .audience-quotes
    position absolute
    width 100%
  .audience-map
    height 475px
    top -120px
    z-index 0
  .audience-quotes
    bottom 0
    z-index 1

  //
  // Support
  //
  .support-liaisons
    display flex
    justify-content space-between
    margin-bottom 50px
  .support-liaison
    width 13%
    img
      width 100%
      margin-bottom 10px
  .support-quotes
    width 75%
    margin 0 auto

  //
  // Brwoser Images Slideshow
  //
  .browser-images-container
    position relative
    width 75%
    margin 0 auto
  .browser-frame, .browser-images
    &, img
      width 100%
  .browser-images
    position absolute
    top 0
  .browser-image
    position absolute
    left 0
    right 0
    padding 26px 3px 3px 3px
    transition opacity 1.5s
    opacity 0
    &.is-active
      transition opacity 1s
      opacity 1

  //
  // iPad/iPhone images Slideshos (override the Browser's)
  //
  .ipad-images-container
  .iphone-images-container
    display inline-block
  .ipad-images-container
    width 60%
  .iphone-images-container
    margin 0 10% 2%
    width 15%
  .ipad-image
    padding 30px 60px
  .iphone-image
    padding 42px 11px

  // Quotes
  .quote
    &:before
      content ''
      width 30%
      border-top 2px solid gray-darkest-color
      display inline-block
  .quote-text
    &:before
      content "\201C"
    &:after
      content "\201D"
  .quote-author
    margin-top 10px
    font-style italic
    &:before
      content "\2013"

//
// Page specific
//
.body-gallery-partnerships
  h1
    font-size 72px
  h2, h3
    font-size 42px
    line-height 1.15em
  h2
    font-style italic
    &:after
      content: "\2014"
  #main-layout-header
    position static
  #main-layout-container
    margin-top 0 !important
    height 100% !important
  #main-layout-footer
    display none
