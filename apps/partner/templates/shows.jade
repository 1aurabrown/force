mixin figureContent(show)
  .cover-image( style="background-image: url(#{show.posterImageUrl(isFeature)})")
    .overlay
  figurecaption
    //h5.partner-show-heading= show.getLeadHeading()
    if show.has('artists')
      h3.partner-show-artists= show.formatArtists()
    h4.partner-show-name= show.formatFeedItemHeading()
    h6.partner-show-time= show.get('start_at')

mixin figuresOfShows(shows)
  each show in shows
    figure.partner-show-summary
      if show.linkable()
        a( href=show.clientUrl() )
          +figureContent(show)
      else
        +figureContent(show)

if featured
  section.partner-shows-section.featured

if current.length > 0
  h2 Current Shows
  section.partner-shows-section.current
    +figuresOfShows(current)

if upcoming.length > 0
  h2 Upcoming Shows
  section.partner-shows-section.upcoming
    +figuresOfShows(upcoming)

if past.length > 0
  h2 Past Shows
  section.partner-shows-section.past
    +figuresOfShows(past)
