.show-related-shows-container
  max-width 1200px
  position relative
  width 90%
  // width calc('100% - %s' % (layout-side-margin * 2))
  margin 0 auto

.show-related-shows-title 
  font-size 30px
  padding-bottom 20px
  margin-bottom 70px
  border-bottom 1px solid #e5e5e5

.show-related-show-container
  max-height 270px
  margin-bottom 90px
