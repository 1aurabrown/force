- var show = highlight

.artwork-highlight
  .artwork-highlight__metadata
    h3.artwork-highlight__metadata__context
      | In Current Show
    h2.artwork-highlight__metadata__title: a( href= show.href )
      = show.name
    a.artwork-highlight__metadata__byline( href= show.partner.href )
      = show.partner.name
    .artwork-highlight__metadata__where-and-when
      | #{show.start_at}â€“#{show.end_at}

  .artwork-highlight__images
    for image in show.images
      a.artwork-highlight__images__image( href= show.href )
        img(
          src= image.thumb.url
          width= image.thumb.width
          height= image.thumb.hight
          alt= show.name
        )
