form.modal-contact-form
  if user
    input( type='hidden', name='name', value=user.get('name') )
    input( type='hidden', name='email', value=user.get('email') )
  else
    label( name='name' ) Your name
      input.bordered-input.is-block(
        type='text'
        name='name'
        autofocus= autofocus
        required
      )
    label( name='email' ) Your email
      input.bordered-input.is-block(
        type='email'
        name='email'
        required
      )
  textarea.bordered-input.is-block(
    placeholder= placeholder
    name='message'
    autofocus= autofocus && (user !== null)
    required
  )

  a#contact-submit.avant-garde-button-black.is-block(
    href='#'
    data-state='ok'
  )
    | Send
