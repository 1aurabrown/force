@require '../../stylus_lib'

.scontact-modal
  .modalize-body
    padding 30px

.scontact-errors
  color red-color

.scontact-headline
  garamond-size('l-body')
.scontact-errors
.scontact-description
.scontact-from
  garamond-size('s-body')

.scontact-description
  margin 15px 0
  padding 15px 0
  border-top 1px solid gray-lighter-color
  border-bottom @border-top

  .vam-cell:first-child
    padding-right 20px

.scontact-artwork-details
.scontact-show-details
  clearfix()
  img
    height 45px
    float left
    margin 0 15px 10px 0

.scontact-from
  > span
    color gray-darker-color
