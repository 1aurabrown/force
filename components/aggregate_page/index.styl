@import '../components/stylus_lib'

.aggregate-page
  padding 40px 0

.aggregate-page-header
  margin 40px 0
  font-size 36px

.aggregate-page-subheader
  margin 30px 0
  avant-garde()
  font-size default-avant-garde-font-size

.aggregate-page-items
  clearfix()
  margin 20px 0

.aggregate-page-items-featured
  float left
  width 75%
  padding-right 30px
  .aggregate-page-subheader
    padding-bottom 30px
    border-bottom 1px solid gray-lighter-color

.aggregate-page-items-upcoming
  float left
  width 25%
  padding-left 30px

.aggregate-page-items-featured-set
  block-margins(60px)

.ap-upcoming-item
  display block
  text-decoration none
  margin 20px 0
  width 100%
  > h3
    font-weight bold

.ap-featured-item
  width 100%
  height 350px
  margin 20px 0
  padding-bottom 20px
  border-bottom 1px solid gray-lighter-color
  clearfix()
  &:last-child
    padding 0
    border none
