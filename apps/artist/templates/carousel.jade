mixin carouselFigure(artwork)
  - var options = { height: 300 }
  - var image = artwork.defaultImage()
  - var dimensions = image.resizeDimensionsFor(options)
  a( href= artwork.href() )
    img(
      src= image.resizeUrlFor(options)
      alt= artwork.get('title')
      width= dimensions.width
      height= dimensions.height
    )

if artist.related().artworks.length >= 4
  - var carouselFigures = artist.related().artworks.models
  #artist-carousel.artist-carousel.carousel.is-loading
    include ../../../components/carousel/carousel.jade
