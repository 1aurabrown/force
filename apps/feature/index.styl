//
// Feature styles
//
#main-layout-container
  margin-left 0
  margin-right 0
  margin-top 53px !important

#feature
  .main-layout-container
    max-width 1150px

.feature-image
  background-position center center
  background-repeat no-repeat
  background-size cover
  height 300px
  margin 0
  width 100%

.feature-content
  margin-bottom 125px

.feature-title
  garamond()
  display inline-block
  font-size 41px
  line-height 1.25
  margin 50px 0 24px
  text-align center
  width 100%

.feature-share
  float right
  margin-top 35px
  position absolute
  right 50px
  .share-to-pinterest
    display none

.feature-description
  border-bottom 1px solid dark-gray-border-color
  border-top @border-bottom
  font-size 24px
  margin-bottom 50px
  padding 24px 100px 17px
  text-align center
  width 100%
  p
    line-height 1.33

.feature-set
  border-bottom 1px solid dark-gray-border-color
  margin-bottom 35px
  text-align center
  &:last-child
    border-bottom none

.feature-set-title
  font-size 30px
  margin-bottom 30px

.feature-set-description
  font-size 22px
  margin-bottom 30px

.feature-set-item
  display inline-block
  margin 0
  overflow hidden
  vertical-align top
  a
    text-decoration none

.feature-set-item-image-link
  background-color black
  display inline-block
  margin 0 0 14px 0
  position relative
  overflow hidden
  &:hover
    .feature-set-item-image
      opacity 0.5

.feature-set-item-image
  opacity 1
  transition opacity, 0.3s
  width 101%
  prevent-content-shift()

.feature-set-item-artist-list
  border-bottom 1px solid dark-gray-border-color
  margin-bottom 30px
  padding-bottom 10px

.feature-set-item-artist-list-heading
  avant-garde()
  font-size 13px
  margin-bottom 15px
  text-align center

.feature-set-item-artist-list-group
  display inline-block
  padding 0 25px
  width 50%
  vertical-align top
  &:last-of-type
    padding-right: 0

.feature-set-item-artist-link
  display block
  margin-bottom 12px
  overflow ellipsis
  text-align left
  text-decoration none
  transition color 0.25s
  &:hover
    color highlight-color

.feature-set-item-full
  width 100%

.feature-set-item-half
  margin 0 1.5%
  width 47%
  .feature-set-item-caption
    > *
      margin-left auto
      margin-right auto
      width 75%
    h1
      font-size 30px
      line-height 1.3
      margin-bottom 19px

.feature-set-item-third
  margin 0 1%
  width 31%

.feature-set-item-quarter
  margin 0 1%
  width 22.8%

  .feature-set-item-caption
    text-align left

.feature-set-item-caption
  margin-bottom 21px
  text-align center

  .feature-set-item-caption-heading
    font-size 21px
    line-height 1.15
    &:empty
      display none

  .feature-set-item-caption-subheading
    color dark-gray-text-color
    a
      color dark-gray-text-color
    &:empty
      display none

