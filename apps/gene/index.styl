@import '../../components/stylus_lib'

#gene-header
  padding-top 40px
  text-align center
  position relative
  h1
    font-size large-avant-garde-font-size
  .follow-button
    display inline-block
    margin-top 40px

#gene-share-buttons
  float right
  position absolute
  bottom 0
  right 0
  .icon-pinterest
    display none

#gene-description
  margin-top 40px

#gene-description-inner
  max-width 850px
  margin auto
  margin-top 20px

#gene-tabs
  text-align center
  margin 20px 0

#gene-artists
  position relative
  min-height 400px
  margin-bottom 100px

#gene-filter
  margin-top 30px

#gene-filter-nav
  margin-bottom 40px
  padding-top 20px
  text-align center
  border-top 1px solid light-gray-border-color
  label
    margin-right 10px
    display inline-block

.filter-fixed-header #gene-filter-nav
  margin 0
  padding 15px 0
  border-bottom 1px solid light-gray-border-color
  border-top 0

#gene-filter-all-artists
  margin-right 20px

#gene-artworks
  display none

#gene-filter[data-state='artworks']
  #gene-artworks
    display block
  #gene-artists
    display none

#gene-filter[data-state='artists']
  #gene-filter-artworks-nav
    .filter-button, .filter-dropdown
      &.is-active
        color black

#gene-info-left
  width 60%
  display inline-block
  vertical-align top

#gene-info-right
  width 40%
  display inline-block
  margin-top 40px
  padding-left 5%
  .avant-garde-header-center
    text-align left