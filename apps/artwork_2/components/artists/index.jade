if artwork.artists.length
  for artist in artwork.artists
    - var tabs = helpers.artists.build(artist)

    if tabs.length
      section.artwork-artist
        h2.artwork-artist__name
          | About #{artist.name}

        .artwork-artist__content
          .artwork-tabs(
            class='js-artwork-artist-tabs'
          )
            .artwork-tabs__nav
              for tab, i in tabs
                a.artwork-tabs__nav__link(
                  class='js-artwork-tabs__nav__link'
                  data-id= tab
                  data-state= (i === 0 ? 'active' : 'inactive')
                )
                  = helpers.artists.name(tab)

            .artwork-tabs__content
              for tab, i in tabs
                .artwork-tab(
                  class='js-artwork-tab'
                  data-id= tab
                  data-state= (i === 0 ? 'active' : 'inactive')
                )
                  case tab
                    when 'biography'
                      include ./templates/biography
                    when 'exhibition_history'
                      include ./templates/exhibition_history
                    when 'articles'
                      include ./templates/articles

              .artwork-artist__jump
                a( href= artist.href )
                  | Go to #{artist.name}â€™s Artist Page
