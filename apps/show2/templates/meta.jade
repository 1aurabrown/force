- title = ViewHelpers.toPageTitle(partner_show)
- description = ViewHelpers.toPageDescription(partner_show)

title= title
meta( property="og:title", content= title )
meta( name="description", content= description )
meta( property="og:description", content= description )
meta( property="twitter:description", content= description )
link( rel="canonical", href="#{sd.APP_URL}#{href}" )
link( rel="alternate", media= sd.MOBILE_MEDIA_QUERY, href="#{sd.CANONICAL_MOBILE_URL}#{partner_show.href}" )
meta( property="twitter:card", content="summary" )
meta( property="og:name", content= title )
meta( property="og:url", content="#{sd.APP_URL}#{partner_show.href}" )
meta( property="og:type", content="#{sd.FACEBOOK_APP_NAMESPACE}:exhibition" )
meta( property="og:start_time", content= (new Date(partner_show.start_at)).toISOString() )
meta( property="og:end_time", content= (new Date(partner_show.start_at)).toISOString() )
if partner_show.location
  meta( property="og:location", content= ViewHelpers.singleLine(partner_show.location) )
if partner_show.partner.name
  meta( property="og:host", content= partner_show.partner.name )
if partner_show.cover_image.meta_image_url
  meta( property="og:image", content= partner_show.cover_image.meta_image_url )
if sd.INCLUDE_ESCAPED_FRAGMENT
  meta( name="fragment", content="!" )
