.notifications-list-item
  header.notifications-list-item-header
    .is-pull-left
      h4: a( href=artist.href() )= artist.get('name')
      .notifications-works-added
        | #{count} work#{count === 1 ? undefined : 's'} added
    .notifications-list-item-timestamp.is-pull-right
      = publishedAt
  .notifications-published-artworks
    //- Rendered separately
  .notifications-see-more
    a.avant-garde-jump-link( href= "#{artist.href()}?sort=-published_at" )
      | See More
      i.icon-chevron-small-right
