extends ../../../components/main_layout/templates/minimal_header

append locals
  - assetPackage = 'auction_support'

block body
  #auction-registration-page
    .auction-bid-clock-container.js-auction-clock(data-id='#{sale.id}')
      include ../../../components/clock/template
    .auction-bid-form-container
      h2.garamond-header-center Confirm Your Bid
      .auction-bid-form.credit-card-form
        .small-artwork-container
          include ../../../components/credit_card/templates/small_artwork
        .user-bid-input-container
          include ./artwork-bid-status
          .bordered-bid-form-group.max-bid
            .bid-group-label Your Max. Bid:
            .bid-group-content
              .bid-input-container
                label.bid-dollar-sign $
                input.max-bid.bordered-input( name='bid', autocomplete='off', autofocus='true', value=maxBid, pattern="\d*" )
              .bid-input-help-text
                | Enter #{bidderPositions.minBid()} or higher
              a.bidding-question How Bidding Works
          .auction-bid-errors
        if isRegistered
          .registration-form-content
            .avant-garde-button-black.is-block Confirm Bid
        else
          .bid-section-header= sd.BIDDER_H1_COPY
          p.note= sd.BIDDER_H2_COPY
          .form-bottom
            .bid-registration-form-contents
              include ./registration-form
              .registration-form-content
                .avant-garde-button-black.is-block Confirm Bid
