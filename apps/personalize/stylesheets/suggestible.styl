#personalize-suggestions-container
  max-width 1080px
  margin 90px auto
  text-align center
  prevent-content-shift()
  > .personalize-suggestions-more-container
    display none
  &[data-state='loaded']
    > .personalize-suggestions-more-container
      display block
    .loading-spinner
      display none
  &[data-state='loading']
    opacity 0.5
    .loading-spinner
      display block
  > aside
    width 50%
    margin 20px auto
    text-align center
    font-size 18px
    > a
      white-space nowrap
      color gray-dark-color
      &:before
        border-bottom-color gray-color

#personalize-suggestions
  position relative
  text-align center
  min-height 200px
  .grid-item
    margin-bottom 20px
  .hoverable-image
    // Fallback to showing icons
    &.is-fallback
      width 100%
      background-color white
      background-repeat no-repeat
      background-size 50%
      border 1px solid gray-lighter-color
      z-index 1
    &.is-missing
      position relative
      &:before
        position absolute
        content attr(data-initials)
        color gray-dark-color
        avant-garde()
        font-size 27px
        line-height 0
        // 2% offset for Avant Garde baseline
        top 52%
        left 0
        right 0
        text-align center

#personalize-suggestions-unfollow-all
  display block
  position absolute
  font-size 16px
  top 0
  right 0

.personalize-suggestions-set
  margin 20px auto
  border-bottom 1px solid gray-lighter-color
  fadeIn()
  &:last-child
    border-bottom none

.personalize-suggestions-header
  position relative
  font-size 20px
  margin 90px auto 40px

.personalize-suggestions-set-header
  @extends .personalize-suggestions-header
  margin 40px 0

.pss-unfollow-all
  position absolute
  right 20px
  color gray-dark-color
  &:before
    border-color gray-lighter-color

.personalize-suggestion-row
  @extends .personalize-suggestions-set
  margin-bottom 0

.personalize-suggestion
  display inline-block
  position relative
  &.is-artist
    width 20%
    margin 0 0 30px 0
    > .personalize-suggestion-thumbnail
      width 90%
      height @width

.personalize-suggestion-thumbnail
  margin 0 auto
  line-height @height
  background-color gray-lightest-color
  > img
    max-width 100%
    max-height 100%
    vertical-align middle
    display inline-block

.personalize-suggestion-name
  margin-top 10px
  avant-garde()
  font-size 13px
  overflow ellipsis

.personalize-popover-name
  avant-garde()
  font-size 13px

.personalize-suggestion-location
  overflow ellipsis

.personalize-suggestion-info
  margin-bottom 10px
  color gray-darker-color
  overflow ellipsis

.personalize-suggestions-more-container
  margin-top 20px
  padding-top 20px
  text-align center
  border-top 1px solid gray-lighter-color
