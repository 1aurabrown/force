.article-es
  display none
  width 570px
  padding 60px 0px 30px 0px
  border-top 1px solid gray-lighter-color

.articles-insights-show
  display none
  width 100%
  padding 60px 0

.article-es-container
  display block
  position relative
  height 160px

.article-es-form
  display flex
  margin-top 30px
  input
    width 380px
    display inline
    margin-right 20px
  button
    avant-garde-size('body')
    display inline
    width 170px
    height 50px

.article-es-mainheader
  garamond-size('headline')

.article-es-subheader
  garamond-size('l-body')
  margin-top 10px

.article-es-thanks
  position absolute
  display none

.article-es-header
  position absolute
  width 100%