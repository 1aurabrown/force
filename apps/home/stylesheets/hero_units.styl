@import '../../../components/stylus_lib'

fade-duration = 0.2s
hhu-credit-height = 30px

.home-hero-unit
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  background center center no-repeat
  background-size cover
  transition opacity fade-duration ease-out
  opacity 0
  z-index 0
  &.home-hero-unit-active
    opacity 1
    z-index 1
    transition opacity fade-duration ease-in fade-duration
  .avant-garde-button
    padding 10px 20px
    border 3px solid black
    background transparent
    &:hover
    &:focus
    &:active
      background black

.hhu-frame
  display block
  position absolute
  top main-header-height
  right 0
  bottom 0
  left 0
  text-decoration none
  > .responsive-layout-container
  > .responsive-layout-container > .main-layout-container
    position relative
    height 100%
.hhu-inner
  padding-top hhu-credit-height
.hhu-header
  font-size 21px
  line-height 1
.hhu-title
  margin 25px 0 30px 0
.hhu-subheading
  margin 30px 0
  font-size 27px
  line-height 1.3
.hhu-credit
  position absolute
  left 0
  bottom 0
  line-height hhu-credit-height
  font-style italic
  font-size 11px
  opacity 0.65

.home-hero-unit-black
  .hhu-subheading
  .hhu-header
  .hhu-credit
    color white
  .avant-garde-button
    border-color white
    color white
    &:hover
    &:focus
    &:active
      background white

#home-hero-units-controls
  width 100%
  position relative
  height 60px
  text-align center
  button
    width 45px
    height @width
    background transparent
    border none
    position absolute
    top 10px
    cursor pointer
    border 3px solid transparent
    &:hover
      border-color black
  #home-hero-units-left-arrow
    left 0
    padding 0 3px 0 0
    margin-left 10px
  #home-hero-units-right-arrow
    right 0
    padding 0 0 0 3px
    margin-right 10px

#home-hero-unit-dots
  display inline-block
  margin-top 22px
  li
    width 8px
    height @width
    border-radius @width
    margin-right 10px
    background gray-color
    display inline-block
    cursor pointer
    transition background-color 0.3s
    &.hhud-active
    &:hover
    &:focus
    &:active
      background black
    &:last-child
      margin-right 0
