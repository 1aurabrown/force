page-height = 30px

.artwork-images
  position relative
  block-margins(10px)
  height 65vh

  &.artwork-images--multiple
    > .artwork-images__images
      bottom page-height

  &__images
    position absolute
    top 0
    right 0
    left 0
    bottom 0

    &__image
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      background-color white

      &[data-state='active']
        z-index 1

      &__placeholder
      &__display
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        background-size contain
        background-repeat no-repeat
        background-position center center

      &__display
        opacity 0
        background-color white
        transition opacity 0.25s
        &[data-state='loaded']
          opacity 1

  &__pages
    position absolute
    right 0
    bottom 0
    left 0
    height page-height
    block-margins(10px)
    display flex
    align-items center
    flex-direction row
    justify-content center

    &__page
      display inline-block
      padding 2px
      color gray-color
      cursor pointer
      font-family Verdana, sans-serif
      font-size 20px
      line-height 1
      transition color 0.2s ease-in-out
      user-select none
      &:hover
      &[data-state='active']
        color black

  &__arrows
    position absolute
    z-index 1
    top 50%
    left 0
    right 0
    opacity 0
    transition opacity 0.33s
    &__prev
    &__next
      position absolute
      transform translateY(-50%)
      padding 30px
      cursor pointer
      color gray-color
      transition color 0.25s
      &:hover
        color black
    &__prev
      left 0
      padding-left 0
    &__next
      right 0
      padding-right 0

  &[data-focus='active'] > .artwork-images__arrows
    opacity 1
  &[data-focus='inactive'] > .artwork-images__arrows
    opacity 0
