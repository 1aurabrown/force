extends ../../components/main_layout/templates/blank

append locals
  - assetPackage = 'style_guide'

block body
  #style-guide
    i#main-layout-welcome-logo.icon-logotype

    section.sg-components.sg-grid
      h2 Layout

      include ./partials/grid

    section.sg-components
      h2 Colors
      .grid-2-up.sg-color-swatches
        for hex, name in colors
          .grid-item.sg-color-swatch( style="background-color: #{hex};" )
            = name
            br
            = hex

    section.sg-components
      h2 Components

      include ./partials/buttons
      include ./partials/form
