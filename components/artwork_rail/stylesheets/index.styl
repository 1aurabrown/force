@import '../components/merry_go_round'
@import '../components/fillwidth_row'

arrow-offset = -90px

.arv-header
  garamond-size('headline', true)
  margin-bottom 20px

.arv-fillwidth-row
  padding-bottom 80px

.arv-carousel
  position relative
  max-width 100%
  max-height 320px

  &:hover
    .arv-carousel-arrow
      opacity 1

  .arv-carousel-arrow:hover
    opacity 0.5

.arv-carousel-nav
  position absolute
  width 100%
  height 100%
  top 0px
  left 0px
  pointer-events none

.arv-carousel-arrow
  cursor pointer
  pointer-events all
  transition opacity .25s
  opacity 0
  position absolute
  user-select none
  height 250px
  width 90px
  text-align center
  > i
    user-select none

.arv-carousel-arrow-next
  right arrow-offset
.arv-carousel-arrow-prev
  left arrow-offset



