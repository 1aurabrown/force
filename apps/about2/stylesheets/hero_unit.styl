@import './lib'
@import '../../../components/stylus_lib'

#about2-hero-unit
  width 100%
  height 100%

#about2-hero-unit-h1
  font-size 47px
  color white
  line-height 60px
  position relative
  margin-top 16%
  padding-right column-width

#about2-nav
  position relative
  margin-top 170px
  a
    width 16.6%
    color white
    avant-garde()
    font-size 13px
    letter-spacing 2px
    display inline-block
    border-right 1px solid rgba(255,255,255,0.6)
    text-align center
    padding 16px 0
    vertical-align top
    height 76px
    &:last-child
      border-right 0

#about2-hero-unit-bgs li
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  background center center no-repeat
  background-size cover