//
// Headers across the site usually big centered avant garde things
//

@require '../../stylus_lib'

.avant-garde-header
  avant-garde()

.avant-garde-header-center
  avant-garde()
  text-align center
  display block

.avant-garde-header-small
  avant-garde()
  font-size 11px
  text-decoration none

.garamond-header-center
  garamond()
  text-align center
  display block
  font-size 24px

.large-garamond-header
  garamond()
  text-align left
  display block
  font-size 30px

.bisected-header
  clearfix()
  margin 20px 0
.bisected-header-cell
  float left
  text-align left
  garamond-size('s-body')
  &:last-child
    width 40%
  &:first-child
    width 60%
    padding-right 20px
  h2
    margin-bottom 20px
    avant-garde-size('body')
  .bisected-header-cell-section
    margin-bottom 40px
    &:last-child
      margin-bottom 0
  @media screen and (max-width: 768px)
    float none
    block-margins(20px)
    &:first-child
    &:last-child
      width 100% !important
    &:first-child
      .bisected-header-cell-section:last-child
        margin-bottom 40px
.evenly-bisected-header-cell
  @extends .bisected-header-cell
  &:last-child
  &:first-child
    width 50%
