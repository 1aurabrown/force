body
  background-color black
  color white
  garamond-size('l-headline')

  video
    position fixed
    top 49.9%
    left 50%
    min-height 101vh
    min-width 100vw
    transform translate(-50%, -50%)
    z-index -1
  .header
    position fixed
    top 0
    left 0
    right 0
    margin 0 24px
    height 75px
    border-bottom 1px solid white
    display flex
    justify-content space-between
    align-items center
    &.solid
      background-color rgba(0,0,0,.3)
      color black
    img.logo
      height 30px
    img.planet-art
      height 25px
      display inline-block
    a
      color white
      text-decoration none
      font-size 14px
      font-weight 600
      span
        display inline-block
        line-height 15px
        margin-right 12px

  .content
    height 800vh
    .nav
      width 100%
      padding 0 24px
      position fixed
      top 95px
      header
        width 100%
        display flex
        justify-content space-between
        .left, .right
          border-top 1px solid

      article
        position relative
        overflow hidden
        height 100%
        .inner
          display flex
          justify-content space-between
          width 100%
          height 100%
          overflow hidden
          .spacer
            border-top 1px solid
            padding-bottom 30px
      footer
        display flex
        justify-content space-between
        .left, .right
          border-bottom 1px solid

  .main-title
    font-size 120px
    font-weight 500
    width 100%
    .inner
      .left
        display flex
        justify-content space-between
        align-items center
        width 100%
        bottom 0
        align-items center
  h2
    font-size 70px

.scroller
  height 100%
  overflow auto


.scroller
  section
    margin 0 auto
    padding-bottom 20px
    height 0
    &[data-section='0']
      .left
        width 100%
    &[data-section='1']
      .left
        width 70%
      .right
        width 27%
    &[data-section='2']
      .left
        width 45%
      .right
        width 52%
    &[data-section='3']
      .left
        width 62%
      .right
        width 35%
    &[data-section='4']
      .left
        width 17%
      .right
        width 80%
    &[data-section='5']
      .left
        width 55%
      .right
        width 42%
    &[data-section='6']
      .left
        width 40%
      .right
        width 57%
    &[data-section='7']
      .left
        width 55%
      .right
        width 42%

.page-content
  padding 24px
  min-height 100vh
  color black
  background-color white
  width 100vw
  section
    max-width 1024px
    width 100%
    margin 0 auto
    padding-top 72px
    .cover-image
      border-top 2px solid gray-lightest-color
      border-bottom 2px solid gray-lightest-color
      padding 30px 0
      margin-bottom 10px
      display flex
      justify-content space-between
      img
        width 100%
        height auto
      .left
        width 27%
        border-top 2px solid gray-lightest-color
        border-bottom 2px solid gray-lightest-color
      .right
        width 70%
        padding 30px 0
        border-top 2px solid gray-lightest-color
        border-bottom 2px solid gray-lightest-color
    .title
      display flex
      justify-content space-between
      border-bottom 2px solid gray-lightest-color
      padding-bottom 150px
      .chapter
        color gray-color

#recently-viewed-artworks
  display none