browse-container-width = 663px
browse-container-height = 442px
overview-container-height = (browse-container-height / 2)
small-section-height = (browse-container-height / 2)
left-column-width = 200px

.feature-image
  position absolute
  top 0px
  left 0px
  width 100%
  height 600px
  min-width feed-max-width
  background linear-gradient(to bottom, #ffffff 0%, #e4e4e4 100%)

#main-layout-header
  min-width feed-max-width

.fair-sections-container
  max-width feed-max-width
  margin: 0px auto
  position relative
  padding-left left-column-width
  margin-top 70px
  .fair-sections-small-heading
    font-size 22px
    margin-bottom 16px
  .sections-left, .sections-right
    width: 50%
    display inline-block
    vertical-align top
  .sections-left
    border-right 1px solid light-gray-border-color
  .sections-right
    padding-left 6%
    .mobile-section-heading
      font-size: 23px
      width: 82%
      vertical-align: top
      display: inline-block
      margin-top: 37px
      line-height: 130%
  .fair-search-options
    .fair-search-options-column
      width: 47%
      display inline-block
      vertical-align top
      margin-right 3%
      &:last-child
        margin-right 0%
      a
        display block
        text-transform: capitalize
        text-decoration none
        margin-bottom 5px
   .a-to-z-section-links
     text-decoration none
     margin-top 10px
     a
       text-decoration none
     .fair-spacer
       display inline-block
       padding 0px 5px

.fair-overview-top
  min-height browse-container-height
  position relative
  max-width feed-max-width
  line-height: 151%
  margin 25px auto 0px
  .fair-overview-top-left
    width left-column-width
    position absolute
    left 0px
    top 0px
  .fair-overview-right
    position absolute
    left left-column-width
    top 0px
  .large-profile-image
    background light-gray-border-color
  .fair-name
    margin-top: 23px

.overview-heading
  color white
  avant-garde()

.fair-overview-browse
  height browse-container-height
  width browse-container-width
  position relative
  display block
  .fair-overview-browse-image
    background light-gray-border-color
    position absolute
    top 0px
    left 0px
    height: browse-container-height
    width: browse-container-width
    background-color #000
    &:hover
      > .img
        opacity 0.5
  .fair-overview-browse-heading
    bottom 45px
    left 27px
    position absolute
  .fair-overview-browse-subheading
    color white
    bottom 20px
    left 27px
    position absolute

.fair-overview-below-top-container
  position: relative
  max-width: feed-max-width
  min-width feed-max-width
  margin 0px auto
  .fair-overview-below-top
    margin-left left-column-width

.large-section
  width: 100%
  display inline-block
  height overview-container-height
  text-decoration none
  .large-section-heading
    avant-garde()
    font-size 13px
    margin-top 60px
  .large-section-subheading
    margin-top 10px
    font-size 28px
    line-height: 142%
    width: 80%

.container-left, .container-right
  width: 50%
  display inline-block
  vertical-align top
.container-right
  text-align right

.small-section
  width: 50%
  display inline-block
  height: small-section-height
  width: small-section-height
  position relative
  vertical-align top
  background-color #000
  &:hover
    img
      opacity 0.5
  img
    opacity 1
    transition opacity 0.3s
    height: 100%
    width 100%
  .section-heading
    color white
    avant-garde()
    font-size 13px
    position absolute
    bottom 10px
    left 20px


.fair-overview-curator

  .small-section
    width 25%
    height auto
    text-align center
    color black
    background-color white
    border-right 1px solid light-gray-border-color
    text-decoration none
    &.third
      width: 33%
    &.half
      width: 50%
    &.full
      width: 100%
    &:last-child
      border-right 0px solid light-gray-border-color
    img
      width: 80px
      border-radius: 40px
      margin: 0px auto
    .section-heading
      position relative
      color black
      bottom auto
      left auto
      margin-top 16px

.fair-overview-post-container
  margin-top 30px
  border-top 1px solid light-gray-border-color
  .posts-left-side, .posts-right-side
    display inline-block
    width 50%
    vertical-align top

  .posts-left-side
    width: 48%
    margin-right: 2%

  .large-post
    position relative
    color white
    text-decoration none
    display block
    background-color #000
    &:hover
      img
        opacity 0.5

    .section-heading
      bottom 50px
      left 20px
      position absolute
      font-size 22px
      width 100%
    .section-subheading
      bottom 20px
      left 20px
      position absolute

  .section-subheading
    avant-garde()
    font-size 13px

  .small-post
    text-decoration none
    margin-bottom 10px
    display block
    img
      display inline-block
      width 150px
    .post-text
      display inline-block
      vertical-align top
      padding-left 20px
      border-bottom 1px solid light-gray-border-color
      height 128px
      width: 392px
      .section-heading
        font-size: 22px
        margin-top: 24px
      .section-subheading
        margin-top 3px
    &:last-child
      .post-text
        border-bottom 0px solid light-gray-border-color
  img
    width 100%
    opacity 1
    transition opacity 0.3s

.fair-overview-curator
  border-bottom 1px solid light-gray-border-color
  .overview-posts-link
    avant-garde()
    margin-top: 40px
    margin-bottom: 50px
    text-decoration none
    display inline-block
    font-size 13px

.overview-section-heading
  font-size: 30px
  margin-top: 35px
  margin-bottom: 35px

.overview-section-heading-small
  font-size 22px
  margin-bottom: 23px
  margin-top: 25px

.auction-clock
  margin-top 15px
  text-align: left
  .clock-header
    text-transform: none
    font-size: 17px
    margin-bottom: 5px