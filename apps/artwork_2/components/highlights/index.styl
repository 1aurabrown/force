.artwork-highlights
  //

.artwork-highlight
  display flex
  align-items center
  width 100%
  padding 30px 0
  border-bottom 1px solid gray-lighter-color
  &:last-child
    border-bottom none

  &__metadata
    max-width 355px
    padding-right 30px
    &__context
      avant-garde-size('s-headline')
    &__title
      margin 10px 0 5px 0
      garamond-size('s-headline')
      > a
        display block
        text-decoration none
    &__byline
      display block
      margin 5px 0
      avant-garde-size('body')
      text-decoration none
    &__where-and-when
      color gray-darker-color

  &__images
    &:first-child > .artwork-highlight__images__image
      margin 0 30px 0 0

    &__context
      avant-garde-size('s-headline')
      margin-bottom 20px

    &__image
      display inline-block
      margin 0 7px
      background-color gray-color
