header.auction-header
  .auction-header-primary
    if auction.isAuctionPromo()
      h4.auction-sub-header
        | Sale Preview

    h1.auction-title
      = auction.get('name')
    .auction-description
      != auction.mdToHtml('description')

  .auction-header-metadata
    .auction-header-metadata-cell

      unless auction.isAuctionPromo() || auction.isClosed()
        .auction-header-register-button
          .auction-info-register-button
            include ./registration_button

    include metadata/note
    include metadata/event
    include metadata/contact
