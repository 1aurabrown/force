@import '../stylus_lib'

#modal-buyers-premium
  h2
    garamond()
    letter-spacing 0
    text-transform none
    font-size 22px
    text-align left
    margin 30px 0 10px 0
  p
    font-size 17px
    line-height 1.3em

.buyers-premium-schedule
  li
    font-size 17px
    padding 15px 0
    border-bottom 1px solid gray-lightest-color
    margin-bottom 0 !important
    display flex
    justify-content center
    &:last-child
      border-bottom 0
    .artwork-bp-pre
      padding-right 4px
    .artwork-bp-perc
      padding-left 6px
    .artwork-bp-dots
      flex 1
      position relative
      top 1px
      overflow hidden
      font-size 14px
      &:after
        content '......................................................' // lolz
        position absolute
        left 0
        width 100%
