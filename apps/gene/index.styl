@import '../../components/stylus_lib'

#gene-header
  padding-top 40px
  text-align center
  position relative
  h1
    font-size large-avant-garde-font-size
    margin 10px 0
  .follow-button
    display inline-block
    margin 10px 0

#gene-share-buttons
  float right
  position absolute
  top 42px
  right 0
  .icon-pinterest
    display none

.gene-info
  clearfix()
  margin 20px 0
.gi-cell
  float left
  text-align left
  font-size 17px
  line-height 26px
  &:last-child
    width 40%
  &:first-child
    width 60%
    padding-right 20px
  h2
    margin 5px 0
    avant-garde()
    font-size default-avant-garde-font-size

#gene-tabs
  text-align center
  margin 20px 0

#gene-artists
  position relative
  min-height 400px
  margin-bottom 100px

#gene-filter
  margin-top 30px

#gene-filter-nav
  margin-bottom 40px
  padding-top 20px
  text-align center
  border-top 1px solid light-gray-border-color

.filter-fixed-header #gene-filter-nav
  margin 0
  padding 15px 0
  border-bottom 1px solid light-gray-border-color
  border-top 0

#gene-artworks
  display none

#gene-filter[data-state='artworks']
  #gene-artworks
    display block
  #gene-artists
    display none

#gene-filter[data-state='artists']
  #gene-filter-artworks-nav
    .filter-button, .filter-dropdown
      &.is-active
        color black
