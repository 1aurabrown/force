@require '../stylus_lib'

.cta-bar
  position fixed
  right 0
  bottom 0
  left 0
  padding 40px
  background-color black
  color white
  text-align center
  transform translateY(100%)
  transition transform 0.5s
  z-index 999
  > *
    opacity 0
    transition 1s
  &[data-state='in']
    transform translateY(0%)
    > *
      opacity 1

.cta-bar-headline
  font-size 30px
  line-height 1.2
.cta-bar-button
  min-width 340px
.cta-bar-defer
  > a
    color gray-darker-color
    font-size 17px
    text-decoration none
    border-bottom 1px solid darken(gray-darker-color, 25%)
.cta-bar-button
.cta-bar-form
  margin 20px 0
.cta-bar-form
  height 50px
  > input
  > button
    height 100%
    margin 0 5px
  > input
    background-color white
    border none
    width 340px

// Gallery Insights Signup
.cta-bar-small
  width 100%
  display inline-flex
.cta-bar-header
  width 50%
  float left
  display block
  text-align left
  > h2
    font-size 30px
  > h3
    font-size 17px
    margin-top 10px
.cta-bar-small-form
  width 50%
  display flex
  > button
    min-width 130px
    margin-left 10px
  > .cta-bar-defer
    display inline
    margin auto 0px auto 40px
  > input
    width 100%
    background-color white
    border none
.cta-bar-thanks
  width 100%
  display none
.cta-bar-container
  max-width 1250px
  height 54px
  margin auto

// Editorial Signup
.cta-bar-header-editorial
  h2
    garamond-size('l-headline')
    margin-bottom 10px
  h3
    garamond-size('s-headline')
    margin-bottom 40px
.cta-bar-defer-editorial
  position absolute
  top 40px
  right 40px
  > a
    color gray-darker-color
    font-size 40px
    text-decoration none
    border-bottom none
  > a:hover
    color white
.cta-bar-form-editorial
  height 50px
  > input
  > button
    height 100%
    margin 0 10px
    width 170px
  > input
    background-color white
    border none
    width 617px
.cta-bar-thanks-editorial
  text-align center
  height 179px
