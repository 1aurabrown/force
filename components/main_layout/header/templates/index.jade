include ../../../util/activator

header#main-layout-header(class= sd.HEADER_CLASS ? sd.HEADER_CLASS : '')
  unless user || sd.HIDE_HEADER
    #main-layout-welcome-header
      #main-layout-welcome-header-aside
        .mlwha-outer
          .mlwha-inner
            | Discover art from leading galleries,
            br
            | museums, and private collections.
      i#main-layout-welcome-logo.icon-logotype

  nav.mlh-navbar
    a#main-layout-header-home-logo( href='/', class=activeClass('/') ): i.icon-logo
    #main-layout-header-left.mlh-navbar-cell
      include ../../../search_bar/templates/index
    #main-layout-header-center.mlh-navbar-cell
      a.mlh-top-nav-link( data-priority='8' href='/artists', class= activeClass('/artists') ) Artists
      a.mlh-top-nav-link( data-priority='7' href='/browse', class= activeClass('/browse') ) Artworks
      a.mlh-top-nav-link( data-priority='3' href='/shows', class= activeClass('/shows') ) Shows
      a.mlh-top-nav-link( data-priority='2' href='/galleries', class= activeClass('/galleries') ) Galleries
      a.mlh-top-nav-link( data-priority='1' href='/institutions', class= activeClass('/institutions') ) Museums
      a.mlh-top-nav-link( data-priority='4' href='/art-fairs', class= activeClass('/art-fairs') ) Fairs
      a.mlh-top-nav-link( data-priority='6' href='/auctions', class= activeClass('/auctions') ) Auctions
      a.mlh-top-nav-link.js--post-split-test( data-priority='5' href='/articles', class= activeClass('/articles') )= sd.POSTS_SECTION_NAME

      span.mlh-top-nav-link.hover-pulldown( data-mode='hover' )
        | More
        .hover-pulldown-menu
          div.mlh-pulldown-top
            a.mlh-pulldown-top-link( data-priority='8' href='/artists', class= activeClass('/artists') ) Artists
            a.mlh-pulldown-top-link( data-priority='7' href='/browse', class= activeClass('/browse') ) Artworks
            a.mlh-pulldown-top-link( data-priority='3' href='/shows', class= activeClass('/shows') ) Shows
            a.mlh-pulldown-top-link( data-priority='2' href='/galleries', class= activeClass('/galleries') ) Galleries
            a.mlh-pulldown-top-link( data-priority='1' href='/institutions', class= activeClass('/institutions') ) Museums
            a.mlh-pulldown-top-link( data-priority='4' href='/art-fairs', class= activeClass('/art-fairs') ) Fairs
            a.mlh-pulldown-top-link( data-priority='6' href='/auctions', class= activeClass('/auctions') ) Auctions
            a.mlh-pulldown-top-link.js--post-split-test( data-priority='5' href='/articles', class= activeClass('/articles') )= sd.POSTS_SECTION_NAME
          div.mlh-pulldown-bottom
            a.mlh-pulldown-bottom-link( href='/about' ) About Artsy
            a.mlh-pulldown-bottom-link( href='/gallery-partnerships' ) Artsy for Galleries
            a.mlh-pulldown-bottom-link( href='/institution-partnerships' ) Artsy for Museums
            a.mlh-pulldown-bottom-link( href='/feature/artsy-education' ) Artsy for Education
            a.mlh-pulldown-bottom-link( href='/categories' ) The Art Genome Project
            a.mlh-pulldown-bottom-link( href='/about/jobs' ) Jobs
            a.mlh-pulldown-bottom-link( href='/press' ) Press
            a.mlh-pulldown-bottom-link( href='/contact' ) Contact Artsy

    #main-layout-header-right.mlh-navbar-cell
      include ./user
      include ./notifications
