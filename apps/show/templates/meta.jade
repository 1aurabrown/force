- title = show.toPageTitle()
- description = show.toPageDescription()

title= title
meta( property="og:title", content= title )
meta( name="description", content= description )
meta( property="og:description", content= description )
meta( property="twitter:description", content= description )
link( rel="canonical", href="#{sd.APP_URL}#{show.href()}" )
link( rel="alternate", media= sd.MOBILE_MEDIA_QUERY, href="#{sd.CANONICAL_MOBILE_URL}#{show.href()}" )
meta( property="twitter:card", content="summary" )
meta( property="og:name", content= show.get('title') )
meta( property="og:url", content="#{sd.APP_URL}#{show.href()}" )
meta( property="og:type", content="#{sd.FACEBOOK_APP_NAMESPACE}:exhibition" )
meta( property="og:start_time", content= show.startAtDate().toISOString() )
meta( property="og:end_time", content= show.startAtDate().toISOString() )
if show.location()
  meta( property="og:location", content= show.location().singleLine() )
if show.partnerName()
  meta( property="og:host", content= show.partnerName() )
if show.metaImageUrl()
  meta( property="og:image", content= show.metaImageUrl() )
if sd.INCLUDE_ESCAPED_FRAGMENT
  meta( name="fragment", content="!" )
