@require '../../stylus_lib'
@require '../../../node_modules/artsy-ezel-components/spinners'
@require '../../user_interests/index'

.inquiry-questionnaire-modal
  .modalize-close
    display none
  .modalize-body
    min-height 100%
    padding 40px 35px

.inquiry-questionnaire
  height 100%

.iq-steps
  avant-garde-size('s-headline', true)
  > span
    text-transform lowercase

.iq-headline
.iq-headline-caption
  display table
  width 100%
  position relative
  > span
    display table-cell
    vertical-align bottom
    &:first-child
      padding-right 20px
    &:last-child
      padding-left 20px
      text-align right
      garamond-size('s-body')
      color gray-darker-color

.iq-headline
  margin 15px 0 10px
  garamond-size('l-body')
.iq-headline-caption
  margin 10px 0
  garamond-size('s-body')

.iq-body
  margin 20px 0
  garamond-size('s-body')
  span
    color gray-darker-color

.iq-form
  margin 20px 0

.iq-search
  > span
    left 20px
    > .icon-search
      position absolute
      top 50%
      left 0
      transform translate(-50%, -50%)
      font-size 20px
      color gray-color
  > .bordered-input
    padding-left 35px

.iq-multiple-choice
  margin 50px 0
  > a
    garamond-size('s-body')

.iq-next
  margin 30px 0 !important

.iq-nevermind
  display block
  margin-top 40px
  text-decoration none
  color gray-darker-color
  garamond-size('s-body')

.iq-account
  > *
    transition opacity 0.25s
    opacity 1
  &.is-loading
    &:before
      display block
      content ''
      spinner(20px, 5px, black)
    > *
      opacity 0

.iq-account-logotype
  display block
  margin 0 auto
  text-align center
  font-size 55px
  line-height 1

.iq-account-sub
  display flex
  justify-content space-between
  block-margins(20px)
  garamond-size('s-body')
  color gray-darker-color

.iq-form-errors
  color red-color
  &:first-letter
    text-transform uppercase
