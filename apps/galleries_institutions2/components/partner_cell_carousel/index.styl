@import '../../../../components/stylus_lib'
@import '../partner_cell'

cell-margin = 30px

.partner-category-carousel
  block-margins(55px)

.partner-category-carousel .partner-cell
  display inline-block
  width calc(33.333% \- (cell-margin * 2 / 3))
  margin-right cell-margin

  @media screen and (max-width: 1024px)
    cell-margin = cell-margin / 2
    width calc(33.333% \- (cell-margin * 2 / 3))
    margin-right cell-margin

.pcc-header
  border-bottom 2px solid gray-lighter-color
  margin-bottom 30px
  height 55px
  garamond()

.pcc-header-left
  garamond-size('headline')
  bottom 12px
  left 0

.pcc-header-right
  bottom 20px
  right 0

.pcc-body
  position relative

.pcc-content
  white-space nowrap
  overflow hidden

.pcc-prev
.pcc-next
  > i
    offset = partner-cell-metadata-height/2
    top calc('50% - %s' % offset)
    user-select none