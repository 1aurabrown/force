@import '../stylus_lib'

.clock
  text-transform uppercase
  font-size 13px
  text-align center
  .clock-header
    font-size 12px

.clock-value
  avant-garde()
  prevent-content-shift()
  list-style none
  font-size 17px
  li
    display inline-block
    margin 0 3px
    vertical-align top
    small
      display block
      color transparify(gray-dark-color, black)
      font-size 9px

.clock-closed
  border-top 2px solid black
  border-bottom 2px solid black
  avant-garde()
  // Often overwritten unintentionally
  text-transform uppercase !important
  // Avant Garde sits high on the baseline
  // Account for this with extra padding on top
  padding 18px 0 15px
  text-align center
  font-size 13px
  position relative
