@import '../../../components/stylus_lib'

#notifications-page
  padding-top 50px
  position relative

#notifications-header
  margin-bottom 80px
  h1
    garamond-size('xl-headline')

#notifications-filter
  position absolute
  width 300px
  .artsy-checkbox
    display block
    margin 32px 0px

.notifications-sub-header
  font-size 25px

#notifications-works
  float right
  width 800px

#notifications-feed-spinner
  position relative
  height 250px

.notifications-list-item
  margin 20px 0
  border-top 1px solid gray-lighter-color

.notifications-list-item-header
  margin 20px 0
  clearfix()
  h4
    avant-garde()
    font-size default-avant-garde-font-size
  a
    text-decoration none

.notifications-works-added
  color gray-darker-color

.notifications-see-more
  margin 20px 0
  text-align right
  a
    font-size 13px
