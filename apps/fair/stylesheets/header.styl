@import '../../../components/stylus_lib'

.fair-page-header
  margin-top 100px
  position relative
  max-width feed-max-width
  .fair-logo
    display inline-block
    vertical-align top
    .profile-badge-icon
      width 100px
      height @width
      background-size @width
  #fair-search-container
    display inline-block
    vertical-align top
    margin 25px 0 0 90px
    input
      width 400px
      border-color transparify(gray-color, black)
      &:hover
      &:active
        border-color purple-color
  .fair-tabs
    position absolute
    top 37px
    right 0px

#microsite-header-right
  margin-right 20px
  avant-garde()
.mshr-nav-link
  display inline-block
  font-size 13px
  text-decoration none
  line-height home-logo-size
.mshr-garamond-nav-link
  display inline-block
  margin-left 10px
  text-decoration none
  line-height home-logo-size
.mshr-spacer
  display inline-block
  margin 0 15px -2px 15px
  width 1px
  height 0.9em
  vertical-align baseline
  background-color transparify(gray-color, black)
