// Overview Section Rails
.artist-related-rail
  mgr-n-up(4, 30px, (3/4))
  padding-top 20px
  margin 20px 0 60px 0
  border-top 1px solid gray-lighter-color
  &__header
    margin-bottom 15px
    position relative
    h1
      garamond-size('headline', true)

  &__view-all
    faux-underline(black)
    position absolute !important
    right 0
    top 0

  .view-all-rail-cell
    border 1px solid gray-lighter-color
    &__inner
      padding-bottom 75%
    &__link
      text-decoration none
      display block
      position absolute
      display flex
      align-items center
      justify-content center
      left 0
      right 0
      top 0
      bottom 0
    &__text
      avant-garde-size('body')

  .artist-rail-cell
    display inline-block
    &__link
      &:hover
      &.is-hover
        .hoverable-image-link:after, .hoverable-image-link:after
          opacity 0.5
  .hoverable-image-link
    width 100%

  &[data-id='artists']
    .artist-rail-cell
      padding 10px
      border 1px solid gray-lighter-color
    .mgr-arrow-left
    .mgr-arrow-right
      margin-top 0
      top 50%
    .view-all-rail-cell
      height 100%
      &__inner
        padding-bottom 0
        height 100%
        border 0