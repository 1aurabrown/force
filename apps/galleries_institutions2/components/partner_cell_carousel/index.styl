@import '../../../../components/stylus_lib'
@import '../partner_cell'

arrow-offset = -30px
cell-margin = 30px

.partner-category-carousel
  margin-bottom 50px

.partner-category-carousel .partner-cell
  display inline-block
  width calc(33.333% \- (cell-margin * 2 / 3))
  margin-right cell-margin

  @media screen and (max-width: 1024px)
    cell-margin = cell-margin / 2
    width calc(33.333% \- (cell-margin * 2 / 3))
    margin-right cell-margin

.partner-cell-carousel-header *
  position absolute

.partner-cell-carousel-header
  position relative
  border-bottom 2px solid gray-lighter-color
  margin-bottom 30px
  height 55px
  garamond()

.partner-cell-carousel-header-left
  garamond-size('headline')
  bottom 12px
  left 0

.partner-cell-carousel-header-right
  bottom 20px
  right 0

.partner-cell-carousel-body
  position relative

.partner-cell-carousel-content
  white-space nowrap
  overflow hidden

.partner-cell-carousel-arrow-left
  left (arrow-offset)
  transform translate(-25px, -50%)
  @media screen and (max-width: 1024px)
    left (arrow-offset / 2)

.partner-cell-carousel-arrow-right
  text-align right
  right (arrow-offset)
  transform translate(25px, -50%)
  @media screen and (max-width: 1024px)
    right (arrow-offset / 2)

.partner-cell-carousel-arrow
  position absolute
  offset = partner-cell-metadata-height/2
  top calc('50% - %s' % offset)
  user-select none
