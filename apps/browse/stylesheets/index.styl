@import '../../../components/stylus_lib'
@import './categories'

#browse-page
  padding-top 40px

#browse-page-see-all
  margin 10px 0
  text-align right
  font-size default-avant-garde-font-size

// Featured gene section
.browse-featured-gene-set
  text-align center

.browse-featured-gene
  display inline-block
  position relative
  background-color black
  width 49%
  width calc('50% - 5px')
  text-decoration none
  &:hover
    > .bfg-image
      opacity 0.5
  &:first-child
    margin-right 5px
  &:last-child
    margin-left 5px

// Popular categories section
.browse-popular-categories
  clearfix()
  margin 20px auto

.large-garamond-header
  margin 5px 0 30px 0

.bpc-column
  float left
  padding 0 20px
  width 33.33%
  border-right 1px solid gray-lighter-color
  &:first-child
    padding-left 0
  &:last-child
    border-right none
  > h3
    margin-bottom 15px
    avant-garde()
    font-size 13px

.highlight-link
  display block
  padding 5px 0
  font-size 17px
  overflow ellipsis

// Browse filter
#browse-filter-header
  border-bottom 1px solid gray-lighter-color
  padding 40px 0 25px 0
#browse-filter
  margin-top 20px
#browse-artworks
  margin-top 20px
