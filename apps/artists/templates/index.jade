extends ../../../components/main_layout/templates/index

block head
  include meta

append locals
  - assetPackage = 'artists'

block body
  #artists-page.main-layout-container
    nav.alphabetical-index
      .alphabetical-index-label
        | Browse over 40,000 artists
      .alphabetical-index-range
        for letter in letters
          a( href='/artists/artists-starting-with-#{letter}' )
            = letter

    for set in featured_artists
      h1.avant-garde-header-center
        = set.name

      .artists-featured-carousel
        .afc-prev: i.icon-chevron-left
        .afc-next: i.icon-chevron-right
        .afc-track-container
          .afc-track
            for artist in set.artists
              .afc-artist
                a.hoverable-image-link( href= artist.href )
                  img(
                    src= artist.image.thumb.url
                    alt= artist.title
                    title= artist.title
                  )

                .afc-artist-information
                  .afc-artist-information-left
                    h2.afc-artist-name
                      a( href= artist.href )
                        = artist.title

                    if artist.subtitle
                      p.afc-artist-notes
                        = artist.subtitle

                  .afc-artist-information-right
                    a.avant-garde-button-white.follow-button(
                      data-id= artist.id
                    )

    for set in featured_genes
      .artists-featured-genes
        for gene in set.genes
          .artists-featured-genes-gene
            h4
              a.avant-garde-jump-link( href='#{gene.href}/artists' )
                = gene.name
                i.icon-chevron-small-right

            .grid-4-up
              for artist in gene.trending_artists
                .afg-artist.grid-item
                  if artist.image
                    a.hoverable-image-link( href= artist.href )
                      .hoverable-image.is-four-three.is-cropped(
                        data-initials= artist.initials
                        style= artist.image.url && 'background-image: url(#{artist.image.url})'
                      )

                  .afg-artist-information
                    h2.afg-artist-name: a( href= artist.href )
                      = artist.name
                    if artist.nationality
                      .afg-nationality= artist.nationality
                    if artist.years
                      .afg-years= artist.years
                    a.avant-garde-button-white.follow-button.is-small(
                      data-id= artist.id
                    )
