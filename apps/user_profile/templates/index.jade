extends ../../../components/main_layout/templates/index

block head
  include meta
  meta( property="og:profile-type", content="Person" )

append locals
  - assetPackage = 'user_profile'
  - bodyClass = bodyClass + ' body-no-margins'

block body
  #profile
    include ../../../components/profile_header/template
    header#profile-tabs
      .garamond-tablist
        a.garamond-tab( href="/#{profile.get('id')}/articles" ) Articles
        span.garamond-tab-separator
        a.garamond-tab( href="/#{profile.get('id')}/favorites" ) Favorites
      #profile-favorites-header.garamond-header-center Favorites
    #profile-spinner
      .loading-spinner
    #profile-feed.feed.main-layout-container
    #profile-favorites.main-layout-container
    #profile-favorites-spinner
      .loading-spinner
    #profile-feed-none #{profile.get('owner').name} has no articles.
  include ../../../components/main_layout/templates/json_ld
