.artwork-tabs
  clearfix()
  width 100%
  block-margins(gutter / 2)

  &__nav
  &__content
    float left

  &__nav
    width 25%
    padding 0 20px 0 0
    border-right 1px solid gray-lighter-color
    > a
      display block
      sans('body')
      padding distance(10px) 0
      color gray-darker-color
      &:first-child
        padding-top 0
      &:last-child
        padding-bottom 0
      &:hover
      &[data-state='active']
        color black

  &__content
    width 75%
    padding 0 gutter

.artwork-tab
  display none
  &[data-state='active']
    display block

  > p
    block-margins(gutter / 2)
    > a
      fine-faux-underline()
