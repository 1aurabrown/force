@import '../../../components/stylus_lib'

#notifications-header
  padding-top 25px
  padding-bottom 25px
  span.garamond-header-center
    text-align left
    display inline
  .notifications-header-follow
    float right

#notifications-manage-follow
  font-size default-avant-garde-font-size
  margin 10px 0
  text-align right

.notifications-list-item
  h4
    avant-garde()
    font-size default-avant-garde-font-size
    margin-bottom 20px
    span
      float right
      text-transform none
      color gray-darker-color
      garamond()
      letter-spacing 0px
      font-size 15px

  border-top 1px solid gray-lighter-color
  padding-top 20px
  margin-bottom 20px