@import '../components/stylus_lib'

.artwork-columns
  margin-bottom 80px
  white-space nowrap

.artwork-column
  display inline-block
  margin 0 40px
  vertical-align top
  width calc('33% - 80px')
  .artwork-item
    margin 0
    margin-bottom 40px
    &:last-child
      margin-bottom 0
    .artwork-item-image
      display inline
      height auto
      max-height 400px
      max-width 100%
      width auto
  .overlay-container
    bottom 12px

.artwork-column-artist-list-heading
  avant-garde()

.artwork-column-artist-list
  display inline-block
  vertical-align top
