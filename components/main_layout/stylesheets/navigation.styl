.garamond-tablist
  text-transform uppercase
  letter-spacing 2px
  white-space nowrap

.garamond-tab
  position relative
  text-decoration none
  border-bottom 1px solid transparent
  transition border-bottom-color 0.125s
  &:hover
  &:focus
    border-bottom-color black
  &.is-active
    color purple-color
    border-bottom-color purple-light-color

.garamond-tab-separator
  display inline-block
  margin 0 15px -2px 15px
  width 1px
  height 0.9em
  vertical-align baseline
  transform rotate(30deg)
  background-color gray-darker-color

.contextual-return-link
  display block
  avant-garde()
  font-size 13px
  text-decoration none
  > .icon-chevron-small-left
    font-size 16px
    margin-right 5px
    vertical-align -2px
    line-height 0

.avant-garde-jump-link
  display block
  avant-garde()
  text-decoration none
  font-size 15px
  > .icon-chevron-small-right
    font-size 19px
    line-height 0
    margin-left 5px
    vertical-align -3px
    color gray-color
    transition color 0.25s
  &:hover > .icon-chevron-small-right
    color black

// Hoverable images
.hoverable-image-link
  display inline-block
  background-color black
  overflow hidden
  &:hover > .hoverable-image
  &:hover > img
    opacity 0.5

.hoverable-image-link > img
.hoverable-image
  // Q: Why 101%?
  // A: The hack to prevent content from shifting on hover
  // ensures that sub-pixel widths are rounded. Since the background
  // color is black that means that at certain browser widths some of the
  // columns will have an extra pixel. So we intentionally overflow to prevent that.
  width 101%
  transition opacity 0.33s
  prevent-content-shift()
  &.is-three-two
  &.is-four-three
    line-height 0
    background-size cover
    background-position center center
  &.is-three-two
    padding-bottom 66.67%
  &.is-four-three
    padding-bottom 75%
