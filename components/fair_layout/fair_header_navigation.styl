@require '../stylus_lib'

.fair-page-header
  margin-top 63px
  position relative
  max-width feed-max-width
  .fair-layout-logo
    display inline-block
    vertical-align top
    .profile-badge-icon
      width 100px
      height @width
      background-size @width
  #fair-search-container
    display inline-block
    vertical-align top
    margin 20px 0 0 90px
    input
      width 330px
      border-color transparify(gray-color, black)
      &:hover
      &:active
        border-color purple-color
  .fair-tabs
    position absolute
    top 37px
    right 0px
