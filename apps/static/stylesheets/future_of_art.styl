@import '../../../components/stylus_lib'

#future-of-art-cover-banner
  position relative
  img
    width 100%
  figcaption
    color white
    position absolute
    left 10px
    bottom 10px
    font-style italic
    font-size 12px
    a
      color white
      text-decoration none

#future-of-art-copy
  width 460px
  margin 54px auto
  margin-bottom 200px
  line-height 1.4em
  h1
    font-size 48px
    line-height 58px
    margin-bottom 28px
  h2
    font-size 21px
    line-height 33px
  p
    line-height 25px
    margin-top 1.4em
  small
    avant-garde()
    font-size 10px
    display block
    margin 41px 0 26px
  .avant-garde-button-white
    border 2px solid black
    font-size 10px
    padding 14px 34px
    display block
    margin 0 108px
    display inline-block

#future-of-art-copy-text
  position relative
  &::after
    content '.'
    width 100%
    height 140px
    position absolute
    bottom 0
    border-bottom 40px solid white
    left 0
    color transparent
    display block
    position absolute
    z-index 2
    background linear-gradient(top, rgba(0,0,0,0), white)