- section = sections[0]

.about2-container
  h1.about2-section-header!= section.header
  p.about2-section-preamble= section.preamble

//- "Our collection comes from leading..."
.about2-container
  #about2-section1-images1-left.span3
    +pull-blurb(section.pullBlurb1)
    for image in secondHalf(section.pullBlurb1.images)
      a.about2-image-container.is-pin-right( href= image.href )
        img( src= image.src )
        .about2-avant-garde-caption
          = image.caption.split(' - ')[0]
          em= image.caption.split(' - ')[1]
        .about2-garamond-caption: em!= image.credit
  #about2-section1-images1-right.span3
    for image in firstHalf(section.pullBlurb1.images)
      a.about2-image-container( href= image.href )
        img( src=image.src )
        .about2-avant-garde-caption
          = image.caption.split(' - ')[0]
          em= image.caption.split(' - ')[1]
        .about2-garamond-caption: em!= image.credit

//- "We cover international show..."
.about2-container
  #about2-section1-images2-left.span3
    for image in section.pullBlurb2.leftImages
      a.about2-image-container.is-pin-right( href= image.href )
        img( src= image.src )
        .about2-garamond-caption: em= image.caption
  .span3
    +pull-blurb(section.pullBlurb2)
    for image in section.pullBlurb2.rightImages
      a.about2-image-container.span2( href=image.href )
        img( src=image.src )
        .about2-avant-garde-caption= image.author
        p= image.caption

//- "Save works and curate sets on Artsy..."
.about2-container
  .span2
    +pull-blurb(section.pullBlurb3)
    button.avant-garde-button-white.about2-signup-button.is-block
      = section.pullBlurb3.button
  #about2-section1-pull-blurb-3-artworks.span4
    .span2
      for artwork in firstHalf(section.pullBlurb3.artworks)
        a.about2-image-container( href= artwork.href )
          img( src=artwork.src )
          .icon-heart
          include artwork_details
    .span2
      for artwork in secondHalf(section.pullBlurb3.artworks)
        a.about2-image-container( href= artwork.href )
          img( src=artwork.src )
          .icon-heart
          include artwork_details

//- "Access from anywhere..."
.about2-container
  .span2
    +pull-blurb(section.pullBlurb4)
    form#about2-phone-link
      label.avant-garde-form-label Text me a download link:
      .bordered-input-with-button
        input.bordered-input( placeholder='Enter your phone number', type='tel', required )
        button.avant-garde-button-black Send
  .span2: img( src=section.pullBlurb4.src )
