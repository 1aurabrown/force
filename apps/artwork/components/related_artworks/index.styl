@require '../tabs'
@require '../../../../components/artwork_masonry'

.artwork-related-artworks
  //

  headerHeight = 37
  &__header
    height headerHeight
    margin-bottom gutter

    &__name
      serif('headline')

  &__tabs
    //

    &__nav
      // Offset for sticky
      margin-top -(gutter / 2)
      padding-top (gutter / 2)

      // Trick borders into lining up with offset
      border none
      > a
        border-right 1px solid gray-lighter-color

    &__content
      padding-top headerHeight + gutter
