@import '../../stylus_lib'

// Placeholder mixins
bordered-input-placeholder()
  garamond()
  font-size default-garamond-font-size
  color placeholder-color
  transition opacity 0.5s
bordered-input-placeholder--focus()
  opacity 0

.bordered-input
  margin 0
  padding 10px
  border 2px solid light-gray-border-color
  border-radius 0
  box-shadow none
  garamond()
  font-size default-garamond-font-size
  background-color transparent
  transition border-color 0.5s
  placeholder(bordered-input-placeholder)
  &:focus, &:active
    border-color highlight-color
    outline none
    placeholder(bordered-input-placeholder--focus)
  &:disabled
    border dotted 2px light-gray-border-color
  &[data-state=error],
  &.is-error
    border-color bad-red-color

// Textarea-specific
textarea.bordered-input,
textarea.bordered-input-full-width
  resize none
  padding 5px

// Variants
.bordered-input-full-width
  @extends .bordered-input
  display block
  width 100%
