logo-size = 30px

#main-layout-footer
  padding 18px
  background #000
  clearfix()
  margin-top -60px
  a, span
    display inline-block
    margin 0 7px
    height logo-size
    line-height logo-size
    vertical-align middle
    color #fff
    text-decoration none
    transition opacity 0.25s
    &:first-child
      margin-left 0
    &:last-child
      margin-right 0
  a
    &:hover
      opacity 0.8

#main-layout-footer-internal
  float left

#main-layout-footer-external
  float right

#main-layout-footer-logo, .mlf-social
  display inline-block
  font-size 18px

#main-layout-footer-logo
  font-size logo-size
  margin-right 20px

.mlf-social
  width 20px
  height @width
  background-size @width
  margin-left 20px

@media screen and (min-width: 768px)
  .mlf-social
    display none

.mlf-links
  // Visual vertical center
  padding-top 1px
