.home-explore-sections
  margin 30px 0

.home-explore-section
  display table
  table-layout fixed
  text-decoration none
.hes-image
.hes-details
  display table-cell
  vertical-align top
.hes-image
  width 45%
  > img
    max-width 100%
.hes-details
  width 55%
  padding-left 20px
  > h3
    font-size 28px
    line-height 1
  > h4
    color gray-dark-color
