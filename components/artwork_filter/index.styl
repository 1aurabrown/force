@require '../stylus_lib'

small-avant-garde-size = 11px
sidebar-width = 26%

.artwork-section
  position relative
  min-height 500px
  clearfix()
.artwork-filter
.artwork-section__content > .artwork-section__artworks
  transition opacity 0.25s
  &[data-state='loading']
    opacity 0.5
    pointer-events none
.artwork-section__content
.artwork-filter
  padding 20px 0
.artwork-section__content
  width (100% - sidebar-width)
  float right
  > .artwork-columns
    margin-bottom 40px
  h2
    margin 5px 0 20px 0
    font-style italic
.artwork-filter
  width sidebar-width
  float left
  padding-right 40px
  section
    margin 20px 0
  h2
  h3
    margin 5px 0
  h2
    garamond()
    font-size 26px
    margin-bottom 20px
  h3
    avant-garde()
    font-size small-avant-garde-size
  li
    line-height 1.6

.link-and-spinner
  &[data-state='loading']
    #artwork-see-more
      display none
    .loading-spinner
      display block

  &[data-state='loaded']
    #artwork-see-more
      display block
      margin 20px auto
    .loading-spinner
      display none

.artwork-filter-reset
  display block
  overflow ellipsis
  avant-garde()
  font-size small-avant-garde-size
  transition color 0.25s
  > i
    font-size @font-size
    margin-right 0.25em
  &:hover
    color red-color

.artwork-filter-for-sale
  margin 0
  .artwork-filter-count
    float none

.artwork-filter-criterion
  display block
  clearfix()
  font-size 18px
  text-decoration none
  transition color 0.25s
  &:hover
    color gray-darker-color
  &.is-active
    .artwork-filter-label
      max-width 65%
    .artwork-filter-label
    .artwork-filter-count
      color purple-color
  &.is-disabled
    a:first-child
      cursor arrow
      pointer-events none
    .artwork-filter-label
    .artwork-filter-count
    .artwork-filter-remove
      color gray-dark-color
.artwork-filter-label
.artwork-filter-count
  float left
.artwork-filter-label
  overflow ellipsis
  max-width 80%
.artwork-filter-count
  margin-left 0.25em
  color gray-darker-color
.artwork-filter-remove
  margin-left 0.25em
  color purple-color
  text-decoration underline
.artwork-filter-sort-count-pulldown
  float right
  margin-right 9px
  margin-top -10px
.artwork-filter-sort-count
  clearfix()
.artwork-filter-view-mode
  float right
  margin-top -10px
  border 2px solid gray-lighter-color
  height 40px
  overflow hidden
.artwork-filter-view-mode__toggle:first-child
  border-right 2px solid gray-lighter-color
.artwork-filter-view-mode__toggle
  display inline-block
  text-align center
  padding 2px 2px
  cursor pointer
  fill gray-lighter-color
  overflow hidden
  svg
    width 32px
    display inline-block
  &.is-active svg, &:hover svg
    fill black
#artwork-section__header
  h2
    float left
.artwork-spinner-container
  position relative
