.garamond-tablist
  text-transform uppercase
  letter-spacing 1px
  white-space nowrap

.garamond-tab
  position relative
  text-decoration none
  &.is-active
    color highlight-color
    border-bottom 1px solid highlight-underline-color

.garamond-tab-separator
  display inline-block
  margin 0 15px -2px 15px
  width 1px
  height 0.9em
  vertical-align baseline
  transform rotate(30deg)
  background-color dark-gray-text-color

.contextual-return-link
  display block
  avant-garde()
  font-size 13px
  text-decoration none
  > .icon-chevron-small-left
    font-size 16px
    margin-right 5px
    vertical-align -2px
