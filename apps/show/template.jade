extends ../../components/main_layout/templates/index
include ../../components/share/template

block head
  include meta

append locals
  assetPackage = 'show'

block body
  #show
    header.show-header
      if profile
        .profile-badge-small
          include ../../components/profile_badge/template
      nav.show-share
        +share(show.shareTitle())
      h1.show-heading-title!= show.title()

    section.show-installation-shot-carousel.carousel( style="display: #{show.carouselDisplay()}")
      .loading-spinner

    header.show-header.show-header-last
      h2.show-subheading
        if partner.has('default_profile_id') && partner.get('default_profile_public')
          a( href= partner.href() )!= partner.get('name')
        else
          != partner.get('name')
      h2.show-subheading!= show.runningDates()
      if location
        h2.show-subheading!= location.singleLine()

    section.show-artworks.artworks-columns( style="display: #{show.artworksDisplay()}" )
      .loading-spinner
