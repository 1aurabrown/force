- var noun = state.mode().copy !== 'Other' ? state.mode().copy : ''

form.stacked-form
  input.bordered-input( type='text', name='name', value= form.get('name'), placeholder="#{noun} Name", required )

  .grid-2-up
    .grid-item: input.bordered-input.is-block( type='text', name='first_name', value= form.get('first_name'), placeholder='First Name', required )
    .grid-item: input.bordered-input.is-block( type='text', name='last_name', value= form.get('last_name'), placeholder='Last Name', required  )

  input.bordered-input( type='text', name='title', value= form.get('title'), placeholder="Title #{noun ? ('at ' + noun) : ''}" )

  input.bordered-input( type='text', name='phone_number', value= form.get('phone_number'), placeholder='Phone number' )

  input.bordered-input( type='email', name='email', value= form.get('email'), placeholder='E-mail', required )

  button.avant-garde-button-black Next
