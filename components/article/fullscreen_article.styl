@require '../stylus_lib'

@keyframes pulse
  0%
    opacity 0.33
  50%
    opacity 1
  100%
    opacity 0.33

body.body-fullscreen-article
  #articles-show.main-layout-container
    margin-left: 0px
    margin-right 0px
    max-width: 100%
  .article-fullscreen-content-container
    max-width default-max-page-width
    margin 0px auto
    position: relative
  #articles-show
    margin-top: 0px

.article-content.article-fullscreen-content
  background: white
  z-index: 1
  position: relative
  h1.large-garamond-header, .article-lead-paragraph, .article-author-date, .article-social.article-share-top
    display: none

.article-fullscreen-video
  width: 100%
  height: 100vh
  overflow: hidden
  &.hidden
    opacity: 0
  &.article-sa-fullscreen-video
    h1, .article-lead-paragraph
      text-align: left
      margin-left: 0px
    h1
      margin-bottom: 60px
    .main-layout-container
      margin-top: 0px
  a
    color: white
  .article-lead-paragraph-container
    position: relative
  .main-layout-container
    transition: opacity 0.3s
    opacity: 0
    position: relative
    &.visible
      opacity: 1
  .article-fullscreen-text-overlay
    position: relative
    z-index: 1
  .article-date
    color: gray-lighter-color
  .article-author-date
    margin-bottom: 20px
  .article-sa-artsy-logo
    color: white
    margin-bottom: 100px
  .article-sa-primary-logos
    position: absolute
    z-index: 1
    top: 80px
  .article-sa-related-container
    position: absolute
    top: 0px
    right: 0px
    z-index: 2
    max-width: 410px
    color: white
    .article-sa-related
      margin-left: 0px
      a, a:hover
        font-size: 22px
        color: white
        border-color: white
        background: transparent

.article-fullscreen-down-arrow
  position: absolute
  bottom: 40px
  z-index: 3
  font-size: 24px
  text-align: center
  color: white
  width: 100%
  .icon-chevron-down
    animation pulse 2s infinite

.article-share-fixed-fullscreen
  position: absolute
  top: 80px
  right: 0px
  z-index: 1
  a
    color: white
    text-decoration: none
.article-fullscreen-video-container
  position: absolute
  top: 0px
  left: 0px
  height: 100vh
  width: 100vw
  z-index: 1
.article-fullscreen-video-overlay
  position: absolute
  top: 0px
  left: 0px
  background: black
  opacity: 0.5
  min-height: 500px
  height: 100vh
  width: 100vw
  z-index: 1
.article-fullscreen-text-overlay
  color: white
.article-fullscreen-video-player
  height: 100vh
  width: 100vw
  object-fit: cover
  z-index: 0
.article-container h1.article-fullscreen-title
  font-size: 72px
  font-style italic
  line-height: 110%
.article-fullscreen-intro.article-lead-paragraph
  font-size: 25px
  line-height: 120%
  width: 750px
