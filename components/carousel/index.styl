@import '../stylus_lib'

height = 480px

.carousel
  width 100%
  margin-bottom 20px
  user-select none
  &.carousel-loading .carousel-figures-clip
    opacity 0
  img
    height height
    opacity 1
    transition opacity 0.25s

.carousel-figures-clip
  min-height height
  margin 0 0 20px 0
  opacity 1
  overflow hidden
  transition opacity 0.5s

.carousel-track
  position relative
  transition transform 0.5s
  white-space nowrap
.carousel-set
  display inline-block
.carousel-figure
  display inline-block
  position relative
  vertical-align bottom
  padding 0 15px
  &.loading img
    opacity 0

.carousel-controls
  clear both
  height 46px
.carousel-arrow-left, .carousel-arrow-right
  border 3px solid transparent
  cursor pointer
  float left
  height 45px
  left 20px
  line-height 1.2
  padding-left 2px
  position absolute
  transition border 0.2s ease-in-out
  width 45px
  z-index 1
  &:hover
    border 3px solid black
.carousel-arrow-right
  float right
  left auto
  padding-left 5px
  right 20px
.carousel-dots
  font-family Verdana, sans-serif
  font-size 20px
  line-height 1
  margin 0 auto
  position relative
  text-align center
  top 13px
.carousel-dot
  color gray-color
  cursor pointer
  display inline-block
  margin 0 2px
  transition color 0.2s ease-in-out
  &:hover, &.carousel-active
    color black
