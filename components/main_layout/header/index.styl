@import '../../../components/stylus_lib'
@import './search_bar'

#main-layout-header
  border-bottom 1px solid light-gray-border-color
  top 0
  left 0
  width 100%
  background white
  nav
    display flex

#main-layout-header-left
  float left
  clearfix()
  flex 1
#main-layout-header-home-logo, #main-layout-search-bar-container
  float left
#main-layout-search-bar-container
  height home-logo-size
#main-layout-header-home-logo
  width home-logo-size
  height home-logo-size
  font-size (home-logo-size - 20px)
  padding 10px
  display block
  text-decoration none

#main-layout-header-right
  float right
  avant-garde()
  a
    text-decoration none
    padding 17px 20px 13px 20px
    display inline-block
    font-size 13px
    border-right 1px solid light-gray-border-color
    &:last-child
      border-right none
    &:first-child
      border-left 1px solid light-gray-border-color

#main-layout-welcome-header
  position relative
  border-bottom 1px solid light-gray-border-color

#main-layout-welcome-header-aside
  position absolute
  top 0
  bottom 0
  left 0
  > .mlwha-outer
    display table
    height 100%
    > .mlwha-inner
      height 100%
      padding 0 50px
      vertical-align middle
      display table-cell
      text-transform uppercase
      letter-spacing 1px
      line-height 1.35
      font-size default-garamond-font-size - 1

#main-layout-welcome-logo
  display block
  font-size 44px
  line-height 1
  text-align center
  padding 20px 0

#main-layout-header-home-logo, #main-layout-header-right a
  position relative
  &:after
    content '.'
    color transparent
    border 3px solid black
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
    z-index 2
  &:hover:after
    opacity 1
