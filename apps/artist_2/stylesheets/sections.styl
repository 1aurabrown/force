@require '../../../components/gradient_blurb/index'

// Books
.merchandisable-items
  position relative
  display flex
  flex-direction row
  flex-wrap wrap
.merchandisable-item
  width 20%
  padding-right 20px
  text-decoration none
.merchandisable-item-metadata
  margin 20px 0
.merchandisable-item-image > img
  max-width 100%
  max-height 100%
.merchandisable-item-title
  font-weight bold
.merchandisable-item-publish-date
  color gray-darker-color

// Exhibitions
.filterable-list-item-travel
  margin-left 1em

// CV
.artist-cv-link-year
  margin-right 15px
  display inline-block

// Overview
.artist-overview-header
  margin-bottom 20px
  .sixty-forty-bisected-header
    margin 0
.artist-blurb
  fade-in()
#main-layout-footer
  transition opacity 1s
.gradient-blurb-read-more-container
  width 100%
  height 32px
  .gradient-blurb-read-more
    padding 8px 29px
    avant-garde-size(s-headline)
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    background-color white
    border 1px solid gray-lighter-color

  &::before
    content ''
    position absolute
    bottom 50%
    left 0
    right 0
    border-bottom 2px dotted gray-lighter-color


// Overview Section Rails
.artist-related-rail
  padding-top 20px
  margin-top 20px
  border-top 1px solid gray-lighter-color
  &__header
    margin-bottom 15px
    position relative
    h1
      garamond-size('headline', true)

  &__view-all
    faux-underline(black)
    position absolute !important
    right 0
    top 0

  .artist-rail-cell
    percent = 25%
    width percent
    display inline-block

  .hoverable-image-link
    width 100%

  &[data-id='artists']
    .rail-content-outer
      overflow hidden
    .rail-content-inner
      margin 0 -25px
    .artist-rail-cell
      padding 15px
    .artist-rail-cell-inner
      padding 10px
      box-shadow 0 0 20px rgba(black, .12)

// Related Artists section
.artist-related-artists-section
  display none
  fade-in()

// Section Grid Views
.artist-related-shows-content
.artist-related-artists-content
  margin-bottom 60px
  grid-4-up(30px, 40px)

// Artwork Rail
.artist-artworks-rail .mgr-horizontal-nav
  .mgr-arrow-left
  .mgr-arrow-right
    top 90px