@require '../stylus_lib'

save-button()
  display none
  iconfont-styling()
  width 40px
  height @width
  cursor pointer
  color white
  background-color gray-dark-color
  background-color transparify(gray-dark-color, black)
  text-align center
  border-radius 50%
  font-size 16px
  line-height @height

  &:before
    content '\e622' // icon-heart
  &:hover
    background-color black

  &[data-state='saved']
    display block
    background-color purple-color
    &:hover
      background-color red-color
      &:before
        content '\e621'
      &.is-clicked
        background-color purple-color

.artwork-brick
  &__image
    background-color gray-color
    position relative

    &__img
      position absolute
      top 0
      left 0
      width 100%
      vertical-align bottom

    &__save
      position absolute
      right (gutter / 3)
      bottom @right
      save-button()

    &:hover .artwork-brick__image__save
      display block

  &__metadata
    serif('l-caption')
    margin distance(gutter / 2) 0 distance(gutter) 0
    color gray-darker-color
    lines = 4
    height ((@line-height * @font-size) * lines)
    overflow hidden

    &__artists
    &__title
    &__partner
    &__sale-message
    &__contact
      display block
      overflow ellipsis

      &
      > a
        color gray-darker-color
        text-decoration none

    &__contact > a
      text-decoration underline

    &__artists
      font-weight bold
