      margin-bottom 120px
.show-related-show-container
  clearfix()

.show-related-show-info
  float left
  max-width 270px
  height 100%

.show-related-show-show-title
  font-size 30px
  line-height 1.25
  
.show-related-show-partner-name
  avant-garde()
  font-size 13px
  > a
    text-decoration none 

.show-related-show-images
  float left 
  margin-left 40px 
  width 890px
  max-height 270px

.show-related-show-image
  padding-right 6px

