.feed-right-column
  figure
    margin 0px
    padding: 30px 0px
    &:last-child
      padding-bottom: 0px
    &:first-child
      padding-bottom: 0px

.feed-left-column
  .body
    margin-bottom: 20px
    overflow: hidden
    h1
      font-size: 34px
      line-height: 123%
      margin-bottom: 20px
      word-wrap: break-word
      a
        text-decoration: none

    h2
      avant-garde()
      font-size: 13px
      text-align: left
      padding: 0px
      margin: 0px
      a
        text-decoration: none
        &:hover
          color: $artsy-bright

    a
      text-decoration: underline
    strong, b
      font-weight: bold
      font-size: 17px
      line-height: 150%
    em, i
      font-style italic
      font-size: 17px
    p
      font-size: 17px
      line-height: 150%
      margin: 1.4em 0
      &:first-child
        margin-top: 0px
      &:last-child
        margin-bottom: 0px

  .profile-badge-icon, .profile-badge-initials
    float: left
    height: 33px
    width: 33px
    margin-right 9px

  .post-title
    font-size: 34px
    line-height: 123%
    margin-bottom: 20px
    word-wrap: break-word
    text-decoration none

  .featured-by
    avant-garde()
    font-size: 13px
    color: #888
    line-height: 138%
    padding: 0px
    margin: 0px
    padding-bottom: 12px

  .posted-at
    avant-garde()
    color: #888
    font-size: 9px
    text-align: left
    margin-top: -5px

.feed-item-post-label
  margin-bottom: 26px

.post-modifier-actions
  border-top: 1px dotted light-gray-border-color
  padding-top: 8px
  position: relative
  a
    avant-garde()
    display: inline-block
    font-size: 13px
    margin-right: 0px
    padding-top: 2px
    text-transform: uppercase
    text-decoration: none
    &:hover
      color: $artsy-bright
      text-decoration: none
    &.unrepost, &.repost
      display: none

