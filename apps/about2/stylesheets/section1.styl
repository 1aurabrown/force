iphone-top-margin = 99px
ease-in-out-quart = cubic-bezier(0.165, 0.840, 0.440, 1.000)

@keyframes touch-scroll
  0% {
    top 0
  }
  10% {
    top 0
  }
  20% {
    top -300px
  }
  30% {
    top -300px
  }
  35% {
    top -300px
  }
  45% {
    top -700px
  }
  60% {
    top -700px
  }
  70% {
    top -1000px
  }
  80% {
    top -1000px
  }
  90% {
    top -1000px
  }
  100% {
    top -1000px
  }

#about2-section1-images1-left
#about2-section1-images1-right
  .about2-image-container:nth-child(even) > *
    span(2)

#about2-section1-images2-left
  .about2-image-container:nth-child(even) > *
    span(2)

.icon-heart
  width 50px
  height @width
  border-radius 50%
  top 10px
  right @top
  position absolute
  color white
  z-index 1
  line-height @width
  text-align center
  background-color purple-color
  transform-style preserve-3d
  transition transform 0.5s, opacity 0.3s
  transform rotateX(-180deg)
  backface-visibility visible
  opacity 0
  &.is-active
    opacity 1
    transform rotateX(0deg)

.about2-section1-phone-error
  color red-color
  display none
  margin 5px 0 15px 0
  line-height 1.2em
  font-size 16px

.about2-section1-phone-plate
.about2-section1-phone-bg
  width 100%
  height 800px
  background-size contain

.about2-section1-phone-plate
  background-image url("/images/about_iphone_plate.png")
  z-index 2
  height 674px

.about2-section1-phone-container
  position relative

.about2-section1-phone-img-wrapper
  overflow hidden
  position absolute
  top iphone-top-margin
  left 0
  padding 0 23px 0 28px
  width 100%
  height calc(100% \- (iphone-top-margin * 2))
  z-index -1

.about2-section1-phone-bg
  width 100%
  background-image url("/images/about_iphone_bg.jpg")
  height 1544px
  width 100%
  position relative
  transition top 0.7s ease-in-out-quart
  animation touch-scroll 3.4s infinite alternate