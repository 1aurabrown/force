@require "../../../components/stylus_lib"

.fair-info2-content-wrapper
  display flex
  margin-top 40px

.fair-info2-nav
  margin-right 100px
  avant-garde()
  width 20%
  a
    display block
    text-decoration none
    font-size 17px
    margin-bottom 30px
    color gray-color
  a.is-active
    color black

.fair-info2-body
  width 100%
  .fair-info2-map
    width 100%

  .fair-info2-content
    margin-top 40px
    .visitor-title
      avant-garde()
      font-size 17px
      margin-bottom 10px

  input.fair-info2-directions-input
    width 240px
    border-color transparify(gray-color, black)
    margin-top 10px
    border 1px solid #e5e5e5
    margin-bottom 20px

  .get-directions-link
    avant-garde()
    font-size 15px

  .location-caption
    margin-bottom 10px
    a
      avant-garde()
      font-size 15px

  .fair-info-line
    margin 60px 0px

  .grid-item
    word-wrap break-word

.fair-info2-mobile-section
  display flex
  margin-bottom 100px

  .iphone-heading-section
    garamond()
    font-size 30px
    line-height 1.5
    width 70%
    .block-link
      display block
      width 150px
      margin-top 30px
  .iphone-app-section
    background-image url("/images/fair-iphone-promo.png")
    background-repeat no-repeat
    width 30%

