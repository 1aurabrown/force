suggestion-row-width = 850px

#personalize-suggestions-container
  width suggestion-row-width
  margin 90px auto
  text-align center
  prevent-content-shift()
  > .personalize-suggestions-more-container
    display none
  &[data-state='loaded']
    > .personalize-suggestions-more-container
      display block
    .loading-spinner
      display none

#personalize-suggestions
  position relative
  text-align center
  min-height 200px

.personalize-suggestions-more-container
  padding-top 20px
  text-align center
  border-top 1px solid gray-lighter-color

.personalize-suggestions-set
  margin 20px auto
  border-bottom 1px solid gray-lighter-color
  &:last-child
    border-bottom none

.personalize-suggestions-header
  position relative
  font-size 20px
  margin 90px auto 40px

.personalize-suggestions-set-header
  @extends .personalize-suggestions-header
  margin 40px 0

.pss-unfollow-all
  position absolute
  right 20px
  color gray-dark-color
  &:before
    border-color gray-lighter-color

.personalize-suggestion-row
  @extends .personalize-suggestions-set
  margin-bottom 0

.personalize-suggestion
  display inline-block
  position relative
  &.is-profile
    width (suggestion-row-width / 4)
    margin 0 0 30px
    > .personalize-suggestion-thumbnail
      width 177px
      height 117px
  &.is-artist
    width (suggestion-row-width / 5)
    margin 0 0 30px 0
    > .personalize-suggestion-thumbnail
      width 120px
      height @width

.personalize-suggestion-thumbnail
  margin 0 auto
  line-height @height
  background-color gray-lightest-color
  > img
    max-width 100%
    max-height 100%
    vertical-align middle
    display inline-block

.personalize-suggestion-name
  margin-top 10px
  avant-garde()
  font-size 13px
  overflow ellipsis

.personalize-popover-name
  avant-garde()
  font-size 13px

.personalize-suggestion-location
  overflow ellipsis

.personalize-suggestion-info
  margin-bottom 10px
  color gray-darker-color
  overflow ellipsis
