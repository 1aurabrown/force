@import '../../../components/stylus_lib'
@import '../../../node_modules/nib'

#home-top-featured-links
  position relative
  min-height 120px

.home-top-feature-link
  display inline-block
  padding 20px
  border-right 1px solid light-gray-border-color
  border-bottom @border-right
  width 25%
  vertical-align top
  &:first-child
    padding-left 0
  &:last-child
    border-right 0
    padding-right 0
  img
    max-width 95px
    max-height @max-width
    float left
    margin-right 10px
  h4
    font-size 15px
  h3
    font-size 11px
    color #666

.home-top-feature-link-details
  avant-garde()

.home-featured-header
  font-size 38px
  padding 30px 0
  border-top 1px solid light-gray-border-color
  clear both
  &:first-of-type
    border-top 0

.home-featured-list
  position relative
  min-height 300px

.home-browse-all
  margin 30px 0
  float right
  font-size 14px

#home-featured-artworks li
  display inline-block
  width 25%
  vertical-align top
  padding-right 40px
  img
    width 100%
  figure
    margin 0

.home-featured-show
  display inline-block
  vertical-align top
  width (home-page-width / 4)
  padding-right 40px
  padding-bottom 20px
  .home-featured-cover-img
    height ((home-page-width / 4) / 1.5)
  &:nth-child(6), &:nth-child(10), &:nth-child(2)
    padding-right 0
  &:first-child, &:nth-child(2)
    width (home-page-width / 2)
    .home-featured-cover-img
      height ((home-page-width / 2) / 1.5)
  h6
    color dark-gray-text-color
    font-size 12px
  h4
    avant-garde()
    font-size 13px
  h5
    font-size 18px
  h4, h5, h6
    overflow ellipsis
  .home-featured-cover-img
    margin-bottom 10px

.home-featured-cover-img
  overflow hidden
  background no-repeat center center
  background-size cover
  img
    display none

.home-featured-post-link
  display inline-block
  vertical-align top
  margin-right 34px
  width 206px
  img
    width 100%
    margin-bottom 10px
  h5
    avant-garde()
    font-size 11px
    margin-top 3px
  &:first-child
    float left
    width 412px
    h4
      font-size 24px
      line-height 1.2em
  &:nth-child(4)
    margin-right 0
  &:last-child
    margin-right 0
  &:nth-child(1), &:nth-child(2), &:nth-child(3)
    margin-bottom 23px

.home-featured-artist-link
  display inline-block
  vertical-align top
  width 25%
  padding 0 25px
  img
    max-width 100%
  &:last-child
    padding-right 0
  &:first-child
    padding-left 0
  h4, h5
    avant-garde()
    text-align center
  h4
    margin 12px 0 6px 0
    font-size 13px
  h5
    font-size 11px
    line-height 1.6em
  .home-featured-cover-img
    height 184px
