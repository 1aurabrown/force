// Vertical centering
.vam-outer
.vam-inner
  width 100%
  height 100%
.vam-outer
  display table
.vam-inner
  display table-cell
  vertical-align middle

// Horizontal centering
.is-center-aligned
  text-align center

.blurb
  overflow hidden
  transition height 0.25s

.scrollbar-measure
  position absolute
  top -9999px
  width 50px
  height 50px
  overflow scroll
