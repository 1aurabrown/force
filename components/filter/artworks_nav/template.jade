nav.filter-nav
  a.filter-button.filter-artworks-nav-allworks All Works
  .filter-dropdown.filter-artworks-nav-price
    .filter-nav-main-text Price
    .filter-nav-active-text
    .icon-triangle-down
    nav
      a( data-range='-1:1000' ) Under $1,000
        span.icon-check
      a( data-range='1000:5000' ) $1,000 to $5,000
        span.icon-check
      a( data-range='5000:10000' ) $5,000 to $10,000
        span.icon-check
      a( data-range='10000:50000' ) $10,000 to $50,000
        span.icon-check
      a( data-range='50000:1000000000000' ) Over $50,000
        span.icon-check
      a( data-range='-1:1000000000000' ) All for Sale
        span.icon-check
  if mediums
    .filter-dropdown.filter-artworks-nav-medium
      .filter-nav-main-text Medium
      .filter-nav-active-text
      .icon-triangle-down
      for name, slug in mediums
        nav
          a( data-medium=slug ) name
            span.icon-check
  .filter-dropdown.filter-artworks-nav-size
    .filter-nav-main-text Size
    .filter-nav-active-text
    .icon-triangle-down
    nav
      a( data-size='24' ) Small
        span.icon-check
      a( data-size='48' ) Medium
        span.icon-check
      a( data-size='84' ) Large
        span.icon-check