.garamond-tablist
  text-transform uppercase
  letter-spacing 2px
  white-space nowrap

.garamond-tab
  position relative
  text-decoration none
  &.is-active
    color purple-color
    border-bottom 1px solid purple-light-color
  &:hover, &:focus
    border-bottom 1px solid

.garamond-tab-separator
  display inline-block
  margin 0 15px -2px 15px
  width 1px
  height 0.9em
  vertical-align baseline
  transform rotate(30deg)
  background-color gray-darker-color

.contextual-return-link
  display block
  avant-garde()
  font-size 13px
  text-decoration none
  > .icon-chevron-small-left
    font-size 16px
    margin-right 5px
    vertical-align -2px
    line-height 0

.avant-garde-jump-link
  display block
  avant-garde()
  text-decoration none
  font-size 15px
  > .icon-chevron-small-right
    font-size 19px
    line-height 0
    margin-left 5px
    vertical-align -3px
    color gray-color
    transition color 0.25s
  &:hover > .icon-chevron-small-right
    color black
