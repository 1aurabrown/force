.artwork-tabs
  clearfix()
  width 100%
  block-margins(15px)
  padding 30px 0

  &__nav
  &__content
    float left

  &__nav
    width 250px
    padding 0 20px 0 30px
    border-right 1px solid gray-lighter-color
    > a
      display block
      padding 10px 0
      avant-garde-size('body')
      color gray-darker-color
      &:hover
        color black

  &__content
    padding 0 30px
