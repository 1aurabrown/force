@require '../../../components/stylus_lib'

@require '../components/banner/index'
@require '../components/images/index'
@require '../components/actions/index'
@require '../components/metadata/index'

.artwork-page
  padding 15px 0

.artwork
  display table
  position relative
  width 100%
  height auto
  table-layout fixed
  z-index 1

  &__overview
  &__metadata
    display table-cell
    vertical-align top

  &__metadata
    width 229px
    padding 0 20px

  &__overview
    text-align center
    border-bottom 1px solid gray-lighter-color

.artwork-fold
  block-margins(20px)
