#iframe-popover iframe
  z-index 100
  overflow scroll

#iframe-popover iframe
#iframe-loading-spinner
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  display none

.body-iframe-popover
  #main-layout-container
    opacity 0
  #iframe-popover iframe, #iframe-loading-spinner
    display block
  #iframe-loading-spinner
     opacity 1
  overflow hidden