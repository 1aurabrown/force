//
// Styles for loading spinners of all varieties.
//

@keyframes spin
  100%
    transform rotate(360deg)

spinner(width=25px, height=6px, color=black)
  background color
  width width
  height height
  position absolute
  top calc('50% - (%s / 2)' % height)
  left calc('50% - (%s / 2)' % width)
  animation spin 1s infinite linear

.loading-spinner
  spinner(25px, 6px)

.loading-spinner-small
  spinner(20px, 4px)

.loading-spinner-white
  @extends .loading-spinner
  background white

.loading-spinner-small-white
  @extends .loading-spinner-small
  background white
