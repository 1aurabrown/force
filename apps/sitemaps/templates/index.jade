doctype xml
sitemapindex(
  xmlns='http://www.sitemaps.org/schemas/sitemap/0.9'
)
  sitemap
    loc=sd.APP_URL + '/sitemap-misc.xml'

  for resource, i in resources
    for n, j in new Array(allPages[i])
      sitemap
        loc=sd.APP_URL + '/sitemap-' + resource + '-' + j + '.xml'

  for slug in citySlugs
    url
      loc=sd.APP_URL + '/shows/' + slug

  for n, i in new Array(articlePages)
    sitemap
      loc=sd.APP_URL + '/sitemap-articles-' + i + '.xml'
      

