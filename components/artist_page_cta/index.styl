@require '../stylus_lib'

.artist-page-cta
  position fixed
  right 0
  bottom 0
  left 0
  height 100px
  width calc(100%)
  background-color white
  transform translateY(0%)
  z-index 999
  border-top 2px solid purple-color
  .main-layout-container
    margin-top 20px
  &__image
    vertical-align middle
    display inline
    width 60px
    border-radius 60px
    margin-right 15px
  &__headline
    vertical-align middle
    display inline-block
    font-size 20px
    &__artist-name
      font-weight bold
