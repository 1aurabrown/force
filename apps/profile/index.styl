@import '../../components/stylus_lib'

#profile
  margin-top 50px
  .profile-header
    border-bottom 0
  #profile-feed, #profile-favorites
    display none
  &[data-state=posts]
    #profile-feed
      display block
  &[data-state=favorites]
    #profile-favorites
      display block
  &[data-state=postsfavorites]
    #profile-feed
      display block
  &[data-state='']
    #profile-feed-none
      display block
  &[data-state]
    #profile-spinner
      display none

#profile-spinner
  position relative
  padding 200px

#profile-feed-none
  text-align center
  padding 30px 0
  font-style italic
  font-size 18px
  display none

#profile-favorites-header
  display none
  font-size 28px

#profile-tabs
  text-align center
  font-size 18px
  padding-bottom 20px
  border-bottom 1px solid light-gray-border-color
  .garamond-tablist
    opacity 0
  &[data-state=posts], &[data-state=''], &[data-state=favorites]
    .garamond-tablist
      display none
  &[data-state=favorites]
    #profile-favorites-header
      display block
  &[data-state=postsfavorites]
    .garamond-tablist
      opacity 1

#profile-favorites
  padding layout-side-margin