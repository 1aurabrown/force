extends ../../components/main_layout/templates/index

block head
  include meta

block locals
  assetPackage = 'browse'

block body
  #browse-page
    section#browse-page-featured-genes
      //- for featuredGene in featuredGenes.models
      - featuredGene = featuredGenes.at(0)
      h2.garamond-header-center
        //- = featuredGene.get('name')
        | Featured Genes

      .browse-featured-gene-set
        for gene in featuredGene.get('items').models
          a.browse-featured-gene( href=gene.get('href') )
            img.bfg-image( src=gene.imageUrl('large_rectangle') )
            .bfg-title= gene.get('title')

    section#browse-page-categories
      .browse-popular-categories
        .bpc-column.bpc-dynamic
          h2.garamond-header-center
            | Browse by Popular Categories
          for categorySet in popularCategories.at(0).get('items').models
            .bpc-subcolumn
              h3= categorySet.get('name')
              for category in categorySet.get('items').models
                a.highlight-link( href=category.get('href') )
                  = category.get('title')

        .bpc-column.bpc-fixed
          .bpc-column-subsection
            h2.garamond-header-center Browse by Price
            a.highlight-link( href='/filter/artworks/price_range=-1:5000' ) Up to $5,000
            a.highlight-link( href='/filter/artworks/price_range=-1:10000' ) Up to $10,000
            a.highlight-link( href='/filter/artworks/price_range=-1:25000' ) Up to $25,000
            a.highlight-link( href='/filter/artworks/price_range=-1:50000' ) Up to $50,000
            a.highlight-link( href='/filter/artworks/price_range=-1:100000' ) Up to $100,000
            a.highlight-link( href='/filter/artworks/price_range=100000:1000000000000' ) Above $100,000

          .bpc-column-subsection
            h2.garamond-header-center Browse All
            a.highlight-link( href='/filter/artworks' ) See all artworks
            a.highlight-link( href='/genes' ) See all genes
            a.highlight-link( href='/galleries' ) See selected galleries
            a.highlight-link( href='/institutions' ) See selected institutions

    section#browse-page-gene-categories
      for categorySet in geneCategories.at(0).get('items').models
        h2.garamond-header-center
          = categorySet.get('name')
        .browse-gene-category-set
          for gene in categorySet.get('items').models
            a.browse-gene-category( href=gene.get('href') )
              img.bgc-image( src=gene.imageUrl('medium_rectangle') )
              .bgc-title= gene.get('title')

    section#browse-page-see-all
      a.avant-garde-button-text( href='/genes' ) See All Genes on Artsy
