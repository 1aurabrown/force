include ../dropdown-mixin
nav.filter-nav.filter-artworks-nav
  a.filter-button.filter-nav-all( href=filterRoot ) All Works
  +filter-dropdown('Price', 'Prices', 'price_range', {
    'Under $1,000': '*-1000',
    '$1,000 to $5,000': '1000-5000',
    '$5,000 to $10,000': '5000-10000',
    '$10,000 to $50,000': '10000-50000',
    'Over $50,000': '50000-*',
    'All For Sale': '*:*'
  }, filterRoot)
  if mediums
    +filter-dropdown('Medium', 'Medium', 'medium', mediums)
  +filter-dropdown('Size', 'Sizes', 'dimensions', {
    'Small': '*-24.0',
    'Medium': '24.0-48.0',
    'Large': '48.0-84.0',
    'Very Large': '84.0-*',
  }, filterRoot)
