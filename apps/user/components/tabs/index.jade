include ../../../../components/util/activator

mixin tab(name, path)
  a.avant-garde-tablist__tab(
    class='js-avant-garde-tablist__tab'
    href= path
    data-state= activeState(path)
  )= name

nav.avant-garde-tablist
  +tab('Saves & Follows', '/user/saves')
  +tab('Settings', '/user/edit')
  +tab('Profile', '/profile/edit')
