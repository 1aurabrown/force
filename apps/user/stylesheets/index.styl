@require '../../../components/stylus_lib'

@require '../components/sections'

@require '../pages/delete'
@require '../pages/profile'
@require '../pages/saves'
@require '../pages/settings'

.avant-garde-tablist
  clearfix()
  margin gutter 0
  border-bottom 2px solid gray-lighter-color
  &__tab
    display block
    float left
    avant-garde-size('body')
    padding (gutter / 2)
    color gray-darker-color
    border-bottom 2px solid gray-lighter-color
    margin-bottom -2px
    transition color 0.25s, border-color 0.25s
    text-decoration none
    &:hover
    &[data-state='active']
      color black
      border-bottom-color gray-darker-color
    &:first-child
      padding-left 0

.settings-page
  padding 15px 0

  &__header
    &__name
      garamond-size('s-headline')

  &__content
    clearfix()

    &__sections
    &__main
      float left

    &__sections
      width 25%

    &__main
      width 75%

.settings-subnav
  //

.settings-section
  position relative
  width 75%
  block-margins(gutter)
  padding gutter 0 (gutter * 2) 0
  border-top 1px solid gray-lighter-color
  &:first-child
    border-top 0
    padding-top 0

  &__name
    block-margins(gutter)
    garamond-size('s-headline')

  &__main
    //

.settings-disable-link
  color gray-dark-color

.faux-underline-hover-large:hover
  text-decoration underline
  &:before
    display none
