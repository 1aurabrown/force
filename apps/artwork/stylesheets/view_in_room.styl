room-width = 6578px
room-height = 1368px
wall-color = #dfdbd8
wall-height = 43.5%

#artwork-page[data-route-pending='view-in-room']
#artwork-page[data-route='view-in-room']
  // Toggle buttons and additional information
  .artwork-image-actions
  .artwork-view-in-room-link
  .artwork-related-information
  .artwork-additional-images
  #artwork-related-show-section
  #artwork-below-the-fold-section
    display none
  #artist-artworks-section
    display none !important
  .artwork-exit-view-in-room-link
    display block
  // Visibly toggle without affecting layout
  .artwork-related-content
  .artwork-detail
    visibility hidden
  .artwork-related-content
  .artwork-overview
    cursor default
    pointer-events none

.artwork-view-in-room
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 1
  &[data-state='in']
    .vir-room
      opacity 1
    #vir-artwork
      box-shadow 0 2px 5px rgba(0,0,0,0.4)

.view-in-room-close
  > i
    color #dfdbd8

.vir-room
  position absolute
  width room-width
  height room-height
  top 50%
  left 50%
  margin-top -(room-height / 2)
  margin-left -(room-width / 2)
  background wall-color url('https://d1ycxz9plii3tb.cloudfront.net/misc/room.jpg') bottom center no-repeat
  transition opacity 0.5s
  opacity 0

#vir-placeholder
#vir-artwork
  position fixed
  z-index 2

#vir-placeholder
  left 50%
  visibility hidden

#vir-artwork
  &.is-transition
    transition all 0.75s
  &.is-notransition
    transition none
