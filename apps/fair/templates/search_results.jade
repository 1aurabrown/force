.fair-search-results
  if fairResults.length > 0
    .search-query
      if term
        | Search results for
        em
          | &ldquo;
          span#search-term= term
          | &rdquo;
        | at 
        = fair.get('name')
  
  .search-results
    if fairResults.length > 0
      for result in fairResults
        include ../../search/search_result
    else
      .garamond-header-center
        | Sorry, no results for 
        em
          | &ldquo;
          span#search-term= term
          | &rdquo;
        | at 
        = fair.get('name')

