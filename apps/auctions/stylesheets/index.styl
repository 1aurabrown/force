@import '../../../components/stylus_lib'

.af-hero-image
  width 100%
.af-name
  margin 20px 0
  garamond-size('headline')
.af-metadata
  clearfix()
  margin 20px 0
.af-stats
.af-clock
  float left
  margin-right 40px
.af-clock .clock-header
  text-transform uppercase
  text-align left
  font-size inherit
.af-stats-status
  avant-garde-size('body', true)
  margin-bottom 5px
  &.is-open
    color #00cc66
.af-stats-count
  garamond-size('s-body')
.af-go-button
  float right
.af-thumbnail
  display inline-block

.ap-featured-item--small
  margin-bottom 30px
  display table
  width 100%

  a
    text-decoration none

.ap-featured-item__thumb
.ap-featured-item__title
.ap-featured-item__clock
  display table-cell
  width auto
  vertical-align middle

.ap-featured-item__thumb
  vertical-align top
  width 252px
  height 175px
  line-height 0

.ap-featured-item__logo
  margin-bottom 20px

.ap-featured-item__title
  padding 0 30px
  max-width 300px

  h3
    margin 0
    line-height 32px

.ap-featured-item__clock
  text-align right

  .af-clock
    float right

  .af-clock .clock-header
    text-align right

#auctions-page > .aggregate-page-items
  margin-bottom 30px

.aggregate-page-items-featured-set
  margin 0

.auctions-list
  block-margins(30px)
  .leader-dots-list-item
    garamond-size('l-body')
    &:after
      font-size 12px
      line-height 2.2

// Preview state
.auctions-placeholder
  display table
  width 100%
.auctions-placeholder-metadata
.auctions-placeholder-hero
  display table-cell
  height 100%
  vertical-align middle
  text-align center
.auctions-placeholder-metadata
  width 33.33%
  padding 0 50px 0 20px
  > h2
    garamond-size('l-headline')
    // Visually center. Due to line-height and hard-edged bottom button
    margin -((@font-size * (@line-height - 1)) * 2) auto 10px
  > p
    margin 20px 0
    padding 0 20px
    garamond-size('l-body')
  > a
    white-space nowrap
.auctions-placeholder-hero
  width 66.66%
  > img
    width 100%

.apu-clock
  margin 20px 0 30px
  .clock-header
    display none
