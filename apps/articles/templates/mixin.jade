mixin remainingStickies(vertical, articles, width, height)
  - var remainingArticles = 4 - vertical.get('featured_links').length
  - var i = 0
  while remainingArticles > 0
    - var stickyArticle = articles.models[i]
    if stickyArticle.isTopTier()
      li.grid-item
        a( href=stickyArticle.href() )
          img( src=crop(stickyArticle.get('thumbnail_image'), {
            height: height, width: width }) )
          p= stickyArticle.get('thumbnail_title')
      - remainingArticles = remainingArticles - 1
    - i = i + 1