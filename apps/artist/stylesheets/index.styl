@import './header'

.artist-works-section
  border-top 1px solid light-gray-border-color
  h3
    padding 10px 0
    avant-garde()
    font-size 13px
  .loading-spinner
    position relative
    margin 150px 0

.artist-related-section
  border-top 1px solid light-gray-border-color
  margin 40px 0
  h3
    margin 30px 0 10px 0
  .main-layout-container
    position relative
    min-height 200px

.artist-related-see-more
  margin 20px auto

.artist-info-section
  border-top 1px solid light-gray-border-color
  margin 40px 0
  padding-top 30px
  .avant-garde-header-center
    margin 0 0 20px 0

.artist-info-left
  width 60%
  display inline-block
  vertical-align top
  padding-right 5%
  .avant-garde-header-center
    text-align left
    font-size 15px
  > *
    margin-top 40px
    &:first-child
      margin-top 0

// To replace with avant-garde-jump-link
.artist-auction-results-link
  display block
  avant-garde()
  text-decoration none
  font-size 15px
  > .icon-chevron-small-right
    font-size 19px
    line-height 0
    margin-left 5px
    vertical-align -3px
    color dark-gray-border-color
    transition color 0.25s
  &:hover > .icon-chevron-small-right
    color black

.artist-info-right
  width 40%
  display inline-block

.artist-info-center
  width 52%
  margin 0 auto
  display block

// Related genes module
.artist-related-genes
  a
    color #6a0bc1
    text-decoration none
    &:hover
      text-decoration underline
.artist-works-sort
  text-align right
  float right
  padding-top 8px
  *
    text-align left
  > span
    margin-right 10px
  &:hover > .bordered-pulldown-options
    display block
    border-color dark-gray-border-color
  .bordered-pulldown
    width 170px

.artist-share
  position absolute
  right 0
  top 42px
