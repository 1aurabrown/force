section#about2-section3.about2-container
  h1.about2-section-header!= sections[2].title
  .about2-spacer( style="height: 60px" )
  #about2-section3-preamble
    p.about2-section-preamble= sections[2].preamble.text
    img( src=sections[2].preamble.src )

  // "Works are given a genome..."
  .about2-spacer( style="height: 200px" )
  section#about2-section3-pull-blurb-1
    .about2-pull-blurb
      h1= sections[2].pullBlurb1.h1
      h2= sections[2].pullBlurb1.h2
      p= sections[2].pullBlurb1.p

  // "This Work's Genome"
  .about2-spacer( style="height: 100px" )
  section#about2-section3-example-work-left
    img( src=sections[2].exampleWork.src )
    strong= sections[2].exampleWork.artist
    br
    em= sections[2].exampleWork.title
    | ,&nbsp;
    = sections[2].exampleWork.date
    br
    = sections[2].exampleWork.partner
  section#about2-section3-example-work-right
    h1
      span This work's Genome
    ul
      for gene in sections[2].exampleWork.genes
        li= gene

  // "Characterstics are used to connect artworks"
  .about2-spacer( style="height: 100px" )
  section#about2-section3-pull-blurb-2
    .about2-pull-blurb
      h1= sections[2].pullBlurb2.h1
      h2= sections[2].pullBlurb2.h2
      p= sections[2].pullBlurb2.p