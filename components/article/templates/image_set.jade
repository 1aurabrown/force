.image-set-modal

  .mgr-cells.js-mgr-cells

    for item, i in items
      .mgr-cell.js-mgr-cell
        .image-set-modal__container
          if item.type === 'artwork' && item.artists
            .image-set-modal__artist-container
              a.image-set-modal__artist-name(href="/artist/#{item.artists[0].slug}")= item.artists[0].name
              a.entity-follow.artist-follow(data-id=item.artists[0].slug)

          - var image = resize( (item.image || item.url || ''), { height: 900 } )
          img.image-set-modal__image(src=image)

          .image-set-modal__metadata
            .image-set-modal__pagination= (i + 1) + "/" + length
            if item.type === 'image'
              .image-set-modal__caption!= item.caption

            if item.type === 'artwork'
              .image-set-modal__title-container
                .image-set-modal__title
                  = item.title
                  span
                    = ", " + item.date
              .image-set-modal__partner= item.partner.name
              a.image-set-modal__link(href="/artwork/#{item.slug}") View Details

  nav.mgr-navigation.js-mgr-navigation
    include ../../../components/merry_go_round/templates/horizontal_navigation

.loading-spinner
