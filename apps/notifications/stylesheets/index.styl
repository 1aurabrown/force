@import '../../../components/stylus_lib'

#notifications-page
  padding-top 50px

#notifications-page[data-state=loading]
  #notifications-works, #notifications-artist-works
    display none
  #notifications-spinner
    display block

#notifications-page[data-state=artist]
  #notifications-spinner, #notifications-works
    display none
  #notifications-artist-works
    display block

#notifications-page[data-state=recent-works]
  #notifications-spinner, #notifications-artist-works
    display none
  #notifications-works
    display block

#notifications-header
  margin-bottom 80px
  h1
    garamond-size('xl-headline')

#notifications-filter
  position absolute
  width 250px
  padding-right 10px
  .artsy-checkbox
    display block
    margin-top 20px
    padding 36px 0px
    border-top 1px solid gray-lighter-color
  .filter-artist
    display block
  .filter-artist-count
    display inline
    color gray-dark-color
  .filter-artist-name
    text-decoration none
    display inline
    line-height 2em
  .filter-artist-clear
    display none
  .filter-artist[data-state=selected]
    .filter-artist-clear
      display inline
      text-decoration underline
      cursor pointer
    .filter-artist-name, .filter-artist-count, .filter-artist-clear
      color purple-color

.notifications-sub-header, .notifications-works-sub-header
  font-size 25px

#notifications-works, #notifications-artist-works
  width 900px
  margin-left 250px
  .empty-content
    padding-top 32px
    border-top 1px solid gray-lighter-color

#notifications-artist-works
  margin-top 43px

.notifications-artist-sub-header
  display none
  padding 32px 0px
  border-top 1px solid gray-lighter-color
  i , .artist-name
    display inline-block
  i
    color gray-dark-color
    font-size 15px
    line-height 15px
  .artist-header-name
    avant-garde-size('m-headline')
    text-decoration none
  .artist-work-count
    garamond-size('l-caption')
    color gray-dark-color
    font-style italic

#notifications-artist-feed
  width 100%

#notifications-spinner
  position relative
  height 250px

.notifications-list-item
  margin 20px 0
  border-top 1px solid gray-lighter-color

.notifications-list-item-header
  margin 20px 0
  clearfix()
  h4
    avant-garde()
    font-size default-avant-garde-font-size
  a
    text-decoration none

.notifications-works-added
  color gray-darker-color

.notifications-see-more
  margin 20px 0
  text-align right
  a
    font-size 13px

.notifications-search-header
  avant-garde('body')
  margin 40px 0 20px 0

#notifications-search-container
  margin-bottom 50px
