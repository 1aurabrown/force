extends ../../../../components/main_layout/templates/blank.jade

append locals
  - assetPackage = 'editorial_features'
  - sections = curation.get('sections')

block body
  - var superArticle = article
  include ../../../../components/article/templates/super_article_sticky_header.jade

  .eoy-feature
    video(class='video' autoplay='autoplay' loop='loop' muted='').eoy-feature__background
      source(src='https://artsy-vanity-files-production.s3.amazonaws.com/videos/year-end-six.mp4' type='video/mp4')
    nav.eoy-feature__menu
      a(href='/')
        img.logo(src='https://artsy-vanity-files-production.s3.amazonaws.com/images/artsy_logo.png')
      a(href='#')
        span
          | Presented in <br />
          | Partnership with
        img.planet-art(src='https://artsy-vanity-files-production.s3.amazonaws.com/images/planetart.svg')
    .eoy-feature__content
      .scroller
        .scroller__items
          section(data-section='0')
            article.main-title
              .inner
                .top
                  .item
                    h1 The Year In Art
                .spacer
                .bottom
                  .item
                    h1 2016
          section(data-section='1')
            article
              .inner
                .left
                .right
                  .item
                    h2=sections[0].headline
          section(data-section='2')
            article
              .inner
                .left
                  .col
                  .col
                  .col
                .right
                  .col
                  .item
                    h2=sections[1].headline
          section(data-section='3')
            article
              .inner
                .left
                  .item
                    h2=sections[2].headline
                  .col
                .col.spacer
                .right
                  .col
                  .col
          section(data-section='4')
            article
              .inner
                .left
                  .col
                .right
                  .item
                    h2=sections[3].headline
          section(data-section='5')
            article
              .inner
                .left
                  .item
                    h2=sections[4].headline
                .right
          section(data-section='6')
            article
              .inner
                .left
                  .col
                  .col
                .right
                  .item
                    h2=sections[5].headline
          section(data-section='7')
            article
              .inner
                .left
                  .col
                .right
                  .item
                    h2=sections[6].headline
                  .col
          section(data-section='8').last
            article
              .inner
                .left
                  .col
                .right
                  .item
                    h2=sections[7].headline
          section(data-section='9').last
            article
              .inner
                .left
                  .col
                  .item
                    h2=sections[8].headline
                .col.spacer
                .right
                  .col
          section(data-section='10').last
            article
              .inner
                .left
                  .col
                  //- .col
                .right
                  .col
                  .item
                    h2=sections[9].headline
    .article-body
      .article-body__intro
        .article-body__intro-header
          .col
        .article-body__intro-inner
          h3 Article Intro statement: Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus. Vestibulum id ligula porta felis euismod semper. Curabitur blandit tempus porttitor.
      .article-body__content
        for section, i in curation.get('sections')
          section(data-section='#{i + 1}')
            .article-body--section
              header
                .article-body--section__title
                  h2=section.headline
                .article-body--section__cover-image
                  .image
                    if section.image.indexOf('mp4') > -1
                      video
                        source(src=section.image)
                    else
                      img(src=section.image width='800')
                    .caption!= markdown(section.caption)
              article
                .article-body--section__text!= markdown(section.body)
                .article-body--section__sub-text
                  .image
                    if section.image_second.indexOf('mp4') > -1
                      video
                        source(src=section.image_second)
                    else
                      img(src=section.image_second width='800')
                    .caption!= markdown(section.caption_second)
                  .spacer
                  .callout
                    if i != 5
                      p=section.callout
                    else
                      img(src='https://artsy-vanity-files-production.s3.amazonaws.com/images/gettyimages-540076468.jpg')
                      .caption This image and its caption are manually edited.
              if i == 0
                .article-body--section__sub-image
                  img(src='https://artsy-vanity-files-production.s3.amazonaws.com/images/gettyimages-595247584.jpg')
                  .caption This image and its caption are manually edited.
                  .spacer

      include ../../../../components/article/templates/super_article_footer.jade
    #recently-viewed-artworks
