.eoy-artist-item
  width 25%
  display inline-block
  margin-bottom 20px
  clearfix()
  text-align left
  @media (max-width: 1450px)
    width 33%
  @media (max-width: 1100px)
    width 50%
  &__thumbnail
    display inline-block
    vertical-align middle
    img
      border-radius 45px
      width 45px
      height 45px
  &__name
    display inline-block
    vertical-align middle
    avant-garde-size('body')
    padding-top 5px
    padding-left 10px
    line-height 1
    &__follow-button
      margin-left -5px      
