mixin filter-dropdown(mainText, attr, values)
  .filter-dropdown
    .filter-nav-main-text= mainText
    .filter-nav-active-text
    .icon-arrow-down
    nav
      for val, label in values
        a( data-attr=attr, data-val=val )
          span.filter-dropdown-text= label
          span.filter-dropdown-count
          span.icon-check