overflow-width = 1100px
body-width = 570px
gutter-size = 30px

#articles-show
  margin-top 120px
  h1
    width 900px
    margin auto
    font-size 40px
    line-height 48px
    text-align center
    padding-bottom (gutter-size / 2)

  h2
    text-align center

.body-welcome-header #articles-show
  margin-top 180px

#articles-lead-paragraph, .articles-section-text
  font-size 20px
  line-height 27px
  width body-width
  margin auto
  p
    margin-bottom 1em

#articles-lead-paragraph
  margin (gutter-size / 2) auto

#articles-slideshow-container
  height 600px
  #articles-slideshow-inner
    position absolute
    left 20px
    width calc(100% \- @left)
  .carousel-figure
    vertical-align top
  img
    height 400px

#articles-slideshow
  position relative
  margin-bottom gutter-size

#articles-slideshow li
  display inline-block
  vertical-align top
  margin-right gutter-size
  img
    height 500px

#articles-show-author, .articles-social
  vertical-align middle

#articles-show-date
  avant-garde()
  font-size 11px
  margin-bottom 5px
  color gray-darker-color

#articles-show-author
  avant-garde()
  font-size default-avant-garde-font-size

.articles-social
  text-align center
  padding 10px 0 20px 0

  .articles-social__header
    avant-garde()
    font-size default-avant-garde-font-size
    margin-bottom 10px

  &.add-bottom
    margin-bottom (gutter-size * 3)

.articles-section-image
  width overflow-width
  margin auto
  margin-bottom gutter-size
  img
    max-width 100%
    display block
    margin auto
  figcaption
    margin-top 10px
    font-style italic
    color gray-dark-color
    text-align left

.articles-section-artworks
  position relative
  min-height (body-width * .33)

.articles-section-artworks[data-layout="column_width"]
  width body-width
  margin auto
  li
    margin-bottom gutter-size
  .artwork-item-image-link
    width 100%
    img
      width 100%
.articles-section-artworks[data-layout="overflow_fillwidth"]
  width (overflow-width + gutter-size)
  margin 0 auto gutter-size auto
  text-align center
  &.is-loading
    [data-id]
      opacity 0
    height 500px
    .loading-spinner
      display block
  .loading-spinner
    display none
  [data-id]
    display inline-block
    vertical-align top
    padding 0
  .artwork-item-image-container img
    height auto
  .overlay-container
    display none

.articles-section-video
  width body-width
  margin auto
  margin-bottom 1em
  iframe
    margin auto
    width body-width
    height (9 / 16 * body-width)

#articles-footer
  width body-width
  margin 80px auto
  h1
    avant-garde()
    font-size default-avant-garde-font-size - 1
  li, h1
    margin-bottom 20px
    padding-bottom 20px
    border-bottom 1px solid gray-lighter-color
  .articles-footer-list-left
    width 260px
    padding-right 40px
    img
      max-width 100%
  .articles-footer-list-right
    width 310px
    h2
      font-size 26px
      line-height 1.3em
      margin-bottom 10px
    h3
      avant-garde()
      font-size 12px
    a
      text-decoration none
  .articles-footer-list-right, .articles-footer-list-left
    vertical-align top
    display inline-block

@media (max-width: 600px)
  .body-responsive
    #articles-show h1
    #articles-lead-paragraph, .articles-section-text
    #articles-slideshow-container #articles-slideshow-inner
    .articles-section-image
    .articles-section-artworks
      width 100% !important
    #articles-show
      margin-top 80px
      h1
        font-size 32px
        line-height 1.2em
    #articles-footer
      width 100%
      .articles-footer-list-left
        margin-bottom 10px
        padding 0
      .articles-footer-list-right, .articles-footer-list-left
        display block
        width 100%
      .articles-footer-list-right
        font-size 22px
        line-height 1.2em
    [data-layout="overflow_fillwidth"] [data-id]
      padding 0
      margin-bottom 20px
