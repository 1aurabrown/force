@import '../../../components/stylus_lib'
@import '../../../components/credit_card/stylesheets'

#main-layout-footer
  display none
#auction-registration-page
  margin-bottom: 100px
  margin-top: 100px
  .registration-form-header
    border-top 1px solid light-gray-border-color
    padding-top 10px
    padding-bottom 10px

  .avant-garde-header-center
    font-size: 24px
    margin-top: 25px
    margin-bottom: 25px

  p.note
    margin-top: 9px
    margin-bottom: 18px

  .registration-form-section
   .register
     margin-top 10px

  .bid-input-container
    position relative
    .bid-dollar-sign
      position absolute
      top: 13px
      left: 15px
      font-size: 15px
    .max-bid
      padding-left 30px
  .bid-input-help-text
    color: light-gray-text-color
    margin-top 3px
    margin-bottom 5px

  .current-bid
    margin-top 10px
    margin-bottom 10px
    .bid-group-label, .bid-group-content
      display inline-block
    .bid-group-content
      margin-left 4px

  .bidding-question
    margin-bottom 10px
