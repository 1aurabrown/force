mixin artists-a-to-z
  - aToZGroup = artistsAToZGroup
  if aToZGroup
    h1.large-garamond-header 
      | Artists at 
      = fair.get('name')
    section.fair-artists-list.a-to-z-container
      include ../../../components/a_to_z_list/template

mixin exhibitors-a-to-z
  - aToZGroup = exhibitorsAToZGroup
  if aToZGroup
    h1.large-garamond-header 
      | Exhibitors at 
      = fair.get('name')
    section.fair-exhibitors-list.a-to-z-container
      include ../../../components/a_to_z_list/template
 
.browse-sections.main-layout-container
  .browse-section.artists-a-to-z
    +artists-a-to-z
  .browse-section.exhibitors-a-to-z
    +exhibitors-a-to-z
  .browse-section.booths
    h1.large-garamond-header
    .feed
  .browse-section.artworks
    h1.large-garamond-header
    .artworks
  .browse-section.artist
    h1.large-garamond-header
    .feed
