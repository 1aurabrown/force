#artists
  .artists-group, .artists-column
    display inline-block
    vertical-align top

  .artists-group
    .artists-column
      padding-left 50px
    &:first-child
      border-right 1px solid #ccc
      .artists-column
        padding-left 0
        padding-right 50px

  // Generating artists column styles
  for i in 1 2 3 4 5 6
    .artists-group-{i}-columns
      width (100 / 6 * i)%
      .artists-column
        width (100 / i)%

  // Special treatment for single column
  .artists-group-6-columns:first-child
    border none
    .artists-column
      padding-left 25px
      padding-right 25px

  .artists-group-label
    font-size 14px

  .artists-groups-container
    margin-bottom 50px
    border-bottom 1px solid #ccc

  .artists-columns-container
    margin 30px 0
  .artists-column
    > li
      margin-bottom 10px
    a
      font-size 16px
      text-decoration none
      line-height 1.35
      margin-bottom 10px
      &:hover
        text-decoration underline
    .artist-name
      color #666

  .partner-artist-info, .partner-artist-artworks
    margin-bottom 50px
  .partner-artist-info-left, .partner-artist-info-right
    display inline-block
    vertical-align top
  .partner-artist-info-left
    width (100 / 3) %
  .partner-artist-info-right
    width (100 / 3 * 2) %
    padding-left (100 / 30) %
  .partner-artist-artworks
    min-height 350px
    padding-bottom 50px
    border-bottom 1px solid #ccc
  .partner-artist-name
    avant-garde()
  .follow-button
    margin-top 20px
