.article-section-image-set
  margin auto
  width 580px
  display block
  cursor pointer

.article-section-image-set__images
  float left
  height 150px
  img
    display none
    height 150px
    margin-right 10px

.article-section-image-set__remaining
  avant-garde-size('s-headline')
  height 150px
  border 2px solid gray-lighter-color
  vertical-align top
  padding 10px
  min-width 40px
  width auto
  overflow hidden
  svg
    width 32px
  span
    display table-caption

.article-section-image-set__preview
  text-align center
  margin 25px 0px 20px 0px

.article-section-image-set__text
  text-align center

.article-section-image-set-modal
  display block
  width 500px
  height 500px