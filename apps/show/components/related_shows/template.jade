.show-related-shows-title
  = title
  for show in shows
    .show-related-show-container
      .show-related-show-info
        if show.has('fair')
          .show-related-show-title
            a( href=show.partnerHref() )
              = show.partnerName()
          .show-related-show-title-fair
            a( href= show.related().fair.href() )
              = show.fairName()
          .show-related-show-partner
            a.entity-link( href=show.partnerHref() )
              = show.partnerName()
          if show.get('fair_location')
            .show-related-show-fair-booth
              = show.get('fair_location').display
        else
          .show-related-show-title
            a( href=show.href() )
              = show.title()
          .show-related-show-partner
            a.entity-link( href=show.partnerHref() )
              = show.partnerName()
          .show-related-show-running-dates
            | #{show.date('start_at').format('MMMM DD')} â€“ #{show.date('end_at').format('MMMM DD')}

