padding-unit = 15px

.cf-sidebar
  width 25%
  display inline-block
  vertical-align top
  padding-top padding-unit
  float left

.cf-sidebar__filter
  padding padding-unit 0
  margin-right padding-unit
  border-top 2px solid gray-lighter-color

  &:last-child
    border-bottom 2px solid gray-lighter-color

.cf-sidebar__size > div, .cf-sidebar__price > div
  margin-bottom 20px

.cf-right
  float left
  width 74%
  min-height 100%
  vertical-align top
  hr
    margin (padding-unit * 2) padding-unit

.cf-artworks
  transition opacity 0.25s
  .artwork-column
    margin 0 padding-unit
    width: calc(33% \- (padding-unit * 2))
  .artwork-item-image-container img
    width 100%
  &[data-loading='true']
    opacity 0.5
    pointer-events none

.cf-pagination
  padding 0 padding-unit

@require '../filters/medium'
@require '../../../node_modules/artsy-ezel-components/pagination'
@require '../../slider/index'
@require '../filters/color'
@require '../views/headline'
@require '../views/pillbox'
@require '../views/sort'
