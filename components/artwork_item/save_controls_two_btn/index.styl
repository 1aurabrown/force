.save-controls-two-btn-container
  position absolute
  right 5px
  top 5px

.save-controls-two-btn-container .overlay-button, .save-controls-two-btn-add-to-collection
  width 40px
  height @width
  background-color gray-dark-color
  background-color transparify(gray-dark-color, black)
  border-radius (@width / 2)
  line-height @height
  text-align center
  display inline-block
  &:hover
    background-color black

.save-controls-two-btn-container .overlay-button
  iconfont-styling()
  display inline-block
  cursor pointer
  color white
  background-color gray-dark-color
  background-color transparify(gray-dark-color, black)
  font-size 16px
  opacity 1
  &[data-state='saved']
    opacity 1
    background-color purple-color
    &:hover
      background-color red-color
      &:before
        content '\e621'
      &.is-clicked
        background-color purple-color

.save-controls-two-btn-container .overlay-button-save
  @extends .overlay-button
  &:before
    content '\e622'

.artwork-item
  &:hover
    .save-controls-two-btn-container .overlay-button-save
    .save-controls-two-btn-add-to-collection
      opacity 1
  .save-controls-two-btn-container .overlay-button-save
  .save-controls-two-btn-add-to-collection
    display inline-block
    opacity 0
    &[data-state='saved']
      opacity 1

.save-controls-two-btn-add-to-collection
  margin-left 5px
  position relative
  top 2px
  svg
    width 18px
    height 18px
    display inline-block
    margin-top 11px

.save-controls-two-btn-modal
  padding default-modal-padding
  clearfix()

.save-controls-two-btn-modal-done
  float right
  margin-top 10px
  padding 16px 40px 14px 40px
