@import '../components/stylus_lib'

.artwork-columns
  margin-bottom 80px
  white-space nowrap

.artwork-column
  display inline-block
  margin 0 40px
  vertical-align top
  width calc('33% - 80px')
  .artwork-item
    margin 0
    margin-bottom 40px
    &:last-child
      margin-bottom 0
    .artwork-item-image
      display inline
      height auto
      max-height 400px
      max-width 100%
      width auto
  .overlay-container
    bottom 12px

.artwork-column-artist-list-heading
  avant-garde()

.artwork-column-artist-list
  display inline-block
  vertical-align top

// Sale variant
.artwork-columns-sale
  .artwork-column
    border-right 1px solid dark-gray-border-color
    border-left 1px solid dark-gray-border-color
    margin-left 0
    margin-right 0
    width calc(33.33%)
    &:first-child
      margin-right -1px
      border-left 0px solid white
      .artwork-item
        padding-left 0
    &:last-child
      margin-left -1px
      border-right none
      .artwork-item
        padding-right 0

    .artwork-item
      border-bottom 1px solid dark-gray-border-color
      padding 0 30px 30px 30px
      &:last-child
        border-bottom none
      .artwork-item-image-link
        display block
        width 100%
        text-align center
      img
        max-height 400px
