#personalize-categories
#personalize-category-anything-else
  max-width 950px
  margin 20px auto
  text-align center
  h2
  h3
    margin 20px 0
    avant-garde()
    font-size 15px
  img
    max-width 100%

#personalize-category-anything-else
  display none

#personalize-categories
  position relative
  min-height 200px

.personalize-category
  margin 20px 0
  border-bottom 1px solid gray-lighter-color
  &:first-child
    padding-top 20px
    border-top 1px solid gray-lighter-color

.personalize-category-metadata
  position relative
  padding 20px 0
  > .follow-button
    position absolute
    top 50%
    right 0
    transform translateY(-50%)

.personalize-secondary-category
  display table
  width 100%
  padding 20px 0
  border-bottom 1px solid gray-lighter-color
  &:first-child
    padding-top 0
  > .personalize-category-image
  > .personalize-category-metadata
    display table-cell
    height 100%
    vertical-align middle
    text-align left
    padding 0
  > .personalize-category-image
    width 150px
  > .personalize-category-metadata
    padding 0 20px
    > h3
      margin 0
