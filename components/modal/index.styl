@import '../stylus_lib'

// Disable scroll on body when open
body.is-modal
  overflow hidden

#modal
  z-index 3
  transition opacity 0.25s
  opacity 0
  &[data-state='open'], &.is-open
    opacity 1
    > .modal-backdrop
      > .modal-dialog
        // Avoid transitioning the initial open
        transition all 0.25s, width 0

  &.is-loading
    > .modal-backdrop::before
      display block
      content ''
      spinner(20px, 5px, #fff)

  &.confirm
    .modal-body
      text-align center
      padding-top 100px
      padding-bottom 100px
    .avant-garde-header-center
      font-size 22px
    h3
      margin-top 20px
      font-size 24px
    .avant-garde-button-black
      width 80%
      margin-top 13px
      &.bid-close-button
        margin-top 10px

  .markdown-content
    padding 60px 80px

.modal-h1
  garamond()
  font-size 22px

#modal
.modal-backdrop
  position fixed
  top 0
  right 0
  bottom 0
  left 0

.modal-backdrop
  background-color rgba(0, 0, 0, 0.5)

.modal-dialog
  position fixed
  overflow-y auto
  background-color #fff
  max-width 90%
  max-height 90%
  prevent-content-shift()
  &.is-notransition
    transition none !important

.modal-close
  position absolute
  top 24px
  right 27px
  font-size 65px
  cursor pointer
  transition opacity 0.25s
  opacity 0.15
  font-size 50px
  prevent-content-shift()
  &:hover
    opacity 1

.modal-dialog
.modal-body
  transition opacity 0.25s
  &[data-state='fade-out'], &.is-fade-out
    opacity 0
  &[data-state='fade-in'], &.is-fade-in
    opacity 1
