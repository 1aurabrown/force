@import '../../../components/stylus_lib'
@import '../../../components/search_bar'

#main-layout-header
  border-bottom 1px solid gray-lighter-color
  top 0
  left 0
  width 100%
  background white
  position absolute
  z-index 2
  nav
    display flex

#main-layout-header-home-logo
#main-layout-header-right > a
  position relative
  &:after
    content '.'
    color transparent
    border 3px solid black
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
    z-index 2
  &:hover:after
    opacity 1
  &:hover, &:focus, &:active, &.is-active
    color purple-color

#microsite-header-right
  margin-right 20px
  avant-garde()
  a
    font-size 12px
    text-decoration none
    display inline-block
    line-height home-logo-size
  .header-spacer
    display inline-block
    color gray-lighter-color
    margin 0 10px

#main-layout-header-left
  float left
  clearfix()
  flex 1
  .header-text
    text-decoration none
    display inline-block
    line-height home-logo-size
    margin-left 5px

#main-layout-header-home-logo
#main-layout-search-bar-container
  float left

#main-layout-search-bar-container
  height home-logo-size

#main-layout-header-home-logo
  width home-logo-size
  height home-logo-size
  font-size (home-logo-size - 20px)
  padding 10px
  display block
  text-decoration none
  &:after
    border-left none

#main-layout-header-right
#main-layout-header-user-nav
  avant-garde()
  a, .header-user-name
    text-decoration none
    padding 15px 20px 15px 20px
    display inline-block
    font-size 13px
    border-right 1px solid gray-lighter-color

#main-layout-header-right
  float right
  text-align center
  a
    &:last-child
      border-right none
    &:first-child
      border-left 1px solid gray-lighter-color
    &.header-post-button
      font-size 32px
      padding 10px 12px 10px 14px
      vertical-align top
    &.is-active
      color purple-color
  .header-user-name
    position relative
    text-align center
    border none
    min-width 130px
    white-space nowrap
    &:hover
      #main-layout-header-user-nav
        display block

#main-layout-header-user-nav
  display none
  position absolute
  top 0
  right 0
  left 0
  z-index 2
  background-color white
  // Faux borders:
  // Top border
  &:before
  // Left border
  &:after
  // Bottom border
  a:last-child:after
    display block
    content ''
    position absolute
    background-color black
  &:before
    top 0
    bottom 0
    left 0
    width 3px
  &:after
    top 0
    left 0
    width 100%
    height 3px
  a
    display block
    text-align center
    width 100%
    border none
    border-top 1px solid gray-lighter-color
    &:first-child
      border none
    &:last-child:after
      bottom 0
      left 0
      width 100%
      height 3px
    &:hover
      background-color gray-lightest-color
    &.user-nav-no-link
      cursor default

#main-layout-welcome-header
  position relative
  border-bottom 1px solid gray-lighter-color

#main-layout-welcome-header-aside
  position absolute
  top 0
  bottom 0
  left 0
  > .mlwha-outer
    display table
    height 100%
    > .mlwha-inner
      height 100%
      padding 0 50px
      vertical-align middle
      display table-cell
      text-transform uppercase
      letter-spacing 1px
      line-height 1.35
      font-size default-garamond-font-size - 1

#main-layout-welcome-logo
  display block
  font-size 44px
  line-height 1
  text-align center
  padding 20px 0
