mixin rail(title, viewAllUrl, section)
  .artist-overview-related-rail(id= 'artist-overview-' + section + '-rail')
    .artist-rail-header
      h1= title
      a.artist-rail-view-all(href= viewAllUrl) View All
    .artist-overview-related-rail-content.js-artist-rail.mgr-horizontal-nav(data-key= section)
      ul.mgr-cells.js-mgr-cells.artist-related-rail-content-inner
        //- Rendered client-side

      nav.mgr-navigation.js-mgr-navigation
        include ../../../../components/merry_go_round/templates/horizontal_navigation

.artist-overview-header
  .sixty-forty-bisected-header
    - var artistMeta = viewHelpers.artistMeta(artist)
    if artist.blurb || artistMeta.length
      .bisected-header-cell
        .artist-blurb.bisected-header-cell-section
          h2 Biography
          if artist.blurb
            .blurb!= viewHelpers.mdToHtml(artist, 'blurb')
          if artist.blurb && artistMeta.length
            br
          if artistMeta.length
            .artist-meta-detail!= artistMeta

    .bisected-header-cell
      .artist-related-genes.related-links.bisected-header-cell-section
        //- Rendered client-side

- var hasWorks = artist.statuses.artworks
include ./works

if statuses.shows
  +rail('Shows on Artsy', artist.href + '/shows', 'shows')

if statuses.articles
  +rail('Articles about ' + artist.name, artist.href + '/articles', 'articles')

if statuses.artists
  +rail('Related Artists', artist.href + '/related-artists', 'artists')

