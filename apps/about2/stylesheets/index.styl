@import '../../../components/stylus_lib'
@import './edit'
@import './lib'

.body-about2
  #main-layout-header
    position absolute
  #main-layout-container
    margin-top 0 !important
    height 100% !important
  #main-layout-footer
    display none

.about2-spacer
  width 100%
  display block

.about2-container
  width container-width
  margin auto
  font-size 18px
  line-height 28px

.about2-section-header
  font-size 42px
  line-height 54px
  avant-garde()
  position relative
  text-align center
  padding 120px 0 60px 0
  letter-spacing 2px
  &::after
    content '.'
    color transparent
    width 50px
    height 3px
    background black
    bottom 48px
    display block
    position absolute
    left calc(50% \- @width / 2)

.about2-section-preamble
  width (gutter-width * 2) + (column-width * 2)
  line-height 28px
  &:first-letter
    font-size 40px

.about2-pull-blurb
  h1
    avant-garde()
    small-avant-garde()
  h2
    font-size 42px
    line-height 48px
  h1 + h2
    margin-top 3px
  h2 + p
    margin-top 30px

.about2-avant-garde-caption
  avant-garde()
  small-avant-garde()
  em
    color gray-dark-color
    font-style normal
    &:before
      content 'â€“'
      padding 0 5px
      display inline-block

.about2-left-half-width-column
  width column-width * 3 + gutter-width * 4
  margin-right gutter-width * 2

.about2-right-half-width-column
  width column-width * 3 + gutter-width * 4

.about2-left-half-width-column, .about2-right-half-width-column
  display inline-block
  vertical-align top
  img
    max-width 100%
    margin-bottom 8px

.about2-section
  overflow hidden
