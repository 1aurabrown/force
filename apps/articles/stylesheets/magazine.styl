@import '../../../components/stylus_lib'
@import './lib'

gutter-unit = 15px

#articles-magazine-page
  padding 40px 0
  position relative

// Top structure
.am-featured
  position relative
  display table
.am-featured-hero
.am-featured-also
  display table-cell
.am-featured-hero
  position relative
  width 60%
  vertical-align top
.am-featured-also
  width 40%
  padding-top 7.5%
  padding-left (gutter-unit * 2)
  vertical-align bottom

// Hero pullout
.am-featured-hero
  .article-figure
    position static
  .article-figure-img-container
    display block
    width 100%
  .article-figure-img
    background-color black
    width 100%
    // 8:5 ratio
    padding-bottom 62.5%
  .article-figure-figcaption
    display block
    position absolute
    bottom 0
    right 0
    width 75%
    height auto
    padding (gutter-unit * 2) 0 0 (gutter-unit * 2)
    background-color white

// Also featured
.am-featured-also
  .article-figure
    block-margins(gutter-unit * 2)
  .article-figure-img-container
    width 33.33%
  .article-figure-figcaption
    padding-left gutter-unit
    .article-figure-title
      font-size 24px
      line-height 1.2
    .article-figure-author
      font-size 12px

// Feed
.am-feed
  width 100%
  padding 0 (gutter-unit * 2)
.am-feed-articles
  margin 50px auto
  .article-figure-img-container
    display table-cell
    padding 0 gutter-unit 0 16%
    width 50%
  .article-figure-img
    display block
    width 100%
    // 8:5 ratio
    padding-bottom 62.5%
  .article-figure-figcaption
    width 50%
    padding 0 10% 0 gutter-unit
  .article-figure-share
    right 10%

.am-feed-item
  block-margins(50px)

  &[data-tier='1']
    direction rtl
    .article-figure-img-container
    .article-figure-figcaption
      direction ltr
    .article-figure-img-container
      padding gutter-unit 0 0 0
    .article-figure-figcaption
      padding 0 (gutter-unit * 2) 0 16%
    .article-figure-share
      right auto
