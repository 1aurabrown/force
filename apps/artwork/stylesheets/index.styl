@import '../../../components/stylus_lib'

artwork-detail-width = 250px
artwork-detail-item-height = 36px

#artwork-page
  padding 20px 0
  > section
    clearfix()
    margin 20px 0
    padding 20px 0
    border-top 1px solid gray-lighter-color
    h2
    h3
      margin 12px 0 27px
      font-size 15px
    h2 a
      text-decoration none

.artwork-container
  clearfix()
  position relative
  width 100%
  height auto
  z-index 1

.artwork-image-zoom
  cursor -moz-zoom-in
  cursor -webkit-zoom-in

.artwork-overview
  float left
  width calc('100% - %s' % artwork-detail-width)
  height 100%
  padding-left artwork-detail-width
  margin-right -(artwork-detail-width)
  text-align center
  prevent-content-shift()
  // Better usage of space at smaller screen sizes
  @media screen and (max-width: 1024px)
    margin-right 0
    padding-left 20px
    #artwork-feature-navigation
      opacity 0 !important

.artwork-left-section
  position absolute
  top 0
  left 0
  width 200px
  text-align left

#artwork-feature-navigation
  opacity 0
  transition opacity 0.5s
  a
    text-decoration none
  &:not(:empty)
    opacity 1

#the-artwork-image
  display inline-block
  max-width 100%
  max-height 100%

.artwork-additional-images
  margin 20px auto

.artwork-additional-image
  display inline-block
  height 45px
  margin 5px
  border 3px solid transparent
  vertical-align middle
  transition border-color 0.125s
  > img
    display inline-block
    height 100%
  &.is-active
  &[data-state='active']
    border-color purple-color

.artwork-image-actions
  padding 20px 0 40px
  display inline-block
  position relative

// Below the fold

// Hack around empty state
.artwork-related-information
  padding-top 0
  border-top none !important
#artwork-artist-related-extended
  margin-top 0
  padding-top 20px
  border-top 1px solid gray-lighter-color
  &:empty
    display none

.ari-container
  margin 20px auto
  text-align center
.ari-cell
  display inline-block
  padding 0 40px
  vertical-align top
  text-align left
  font-size 17px
  line-height 1.5
  // The order is important here:
  &:last-child
    border-left 1px solid gray-lighter-color
  &:first-child
    width 66.666%
    border-left none
  &.artwork-related-articles
    width 33.333%

// Bio and related works
.artwork-blurb
.artwork-artist-blurb
  margin 20px 0
  text-align left
  word-wrap break-word
  p
    block-margins(20px)

#artwork-related-show-section
#artist-artworks-section
  display none
  opacity 0
  transition opacity 1s
  &.is-fade-in
    opacity 1

#artist-artworks-section
  .artworks-list
    margin-top 20px
  .artist-link-container
    text-align center
  .faux-underline-hover-large
    display inline-block
    text-align center
    avant-garde()
    font-size 13px
    text-decoration none
    margin-top 20px

.ars-metadata
  position relative
  margin 20px 0
.ars-partner-name
  avant-garde()
  margin-right 5px
.ars-show-name
  text-decoration none
.ars-buttons
  position absolute
  top 0
  right 0
  button
    margin-left 10px

#artwork-below-the-fold-section
  margin 20px auto
  opacity 0
  transition opacity 0.5s
  &[data-state='fade-in']
    opacity 1
  h2 a
    text-decoration none

.monocle-zoom
  width 256px
  height 256px
  position absolute
  pointer-events none
  border-radius 256px
  background-repeat no-repeat
  background-color white
  box-shadow 0 10px 24px rgba(black, 0.12)

.clock-closed
  display none

.about-artwork-section.add-margin-bottom
  margin-bottom 40px

.artwork-image
  position relative

.artwork-video
  margin auto
  height 100%
  width 100%
  position absolute
  top 0
  left 0
  z-index 2
  &:hover .play-button
    background-color purple-color
  iframe
    z-index 1
    position relative

#artwork-buyers-premium-link
  color rgba(0,0,0,0.4)
  font-size 15px
  a
    color currentColor

#modal-buyers-premium
  h2
    garamond()
    letter-spacing 0
    text-transform none
    font-size 22px
    text-align left
    margin 30px 0 10px 0
  p
    font-size 17px
    line-height 1.3em

.artwork-bp-schedule
  li
    font-size 17px
    padding 15px 0
    border-bottom 1px solid gray-lightest-color
    margin-bottom 0 !important
    display flex
    justify-content center
    &:last-child
      border-bottom 0
    .artwork-bp-pre
      padding-right 4px
    .artwork-bp-perc
      padding-left 6px
    .artwork-bp-dots
      flex 1
      position relative
      top 1px
      overflow hidden
      font-size 14px
      &:after
        content '......................................................' // lolz
        position absolute
        left 0
        width 100%

#artwork-lot-number
  avant-garde()
  font-size 13px
  padding-bottom 5px

@import './deep_zoom'
@import './circle_buttons'
@import './view_in_room'
@import './layered_search'
@import './detail'
@import './related_articles'
@import '../components/contact'
@import '../components/partner_phone_number'
