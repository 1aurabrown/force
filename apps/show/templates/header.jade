header.show-header( class= hasCarousel ? 'has-carousel' : undefined )
  .show-header-cell
    h1.show-title
      if show.has('fair')
        = partner.get('name')
        br
        em= fair.get('name')
      else
        = show.title()

    if show.get('description')
      .show-description
        != show.mdToHtml('description')

  .show-header-cell
    .show-partner
      .entity-with-follow
        if partner.isLinkable()
          a.entity-link( href= partner.href() )
            = partner.get('name')
        else
          span.entity-link= partner.get('name')
        a.entity-follow.profile-follow( data-id= partner.get('default_profile_id') )

      nav.show-share.js-show-share
        +share(show.shareTitle())

    .show-metadata
      if show.has('fair')
        include metadata/fair
      else
        .show-dates
          = show.runningDates()
        if location
          include metadata/location
        if show.related().showEvents.length
          include metadata/events
