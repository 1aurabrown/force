      span(2)

.icon-heart
  width 50px
  height @width
  border-radius 50%
  top 10px
  right @top
  position absolute
  color white
  z-index 1
  line-height @width
  text-align center
  background-color purple-color
  transform-style preserve-3d
  transition transform 0.5s, opacity 0.3s
  transform rotateX(-180deg)
  backface-visibility visible
  opacity 0
  &.is-active
    opacity 1
    transform rotateX(0deg)
