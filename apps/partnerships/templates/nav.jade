.partnerships-section-nav
  nav
    if path.indexOf('gallery') > 0
      for section, i in sections.slice(0, -1)
        a.partnerships-nav-link.internal( href="/gallery-partnerships/#{section.slug}", data-section=section.title )
          span= section.title
      a.partnerships-nav-link.partnerships-nav-apply-link.avant-garde-button-black.is-small.apply-link-cta.internal(
        href='/gallery-partnerships/apply'
        data-section='Apply'
      )
        span=sections[sections.length - 1].title
    else
      for section, i in sections.slice(0, -1)
        a.partnerships-nav-link.internal( href="/institution-partnerships/#{section.slug}", data-section=section.title )
          span= section.title
      a.partnerships-nav-link.partnerships-nav-apply-link.avant-garde-button-black.is-small.apply-link-cta.internal(
        href='/apply/institution'
        data-section='Apply'
      )
        span=sections[sections.length - 1].title
