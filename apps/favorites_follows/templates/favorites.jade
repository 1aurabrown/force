extends ../../../components/main_layout/templates/index

block head
  include meta

append locals
  - assetPackage = 'favorites_follows'
  - bodyClass = bodyClass + ' body-infinite-scroll'

block body
  #favorites.favorites-container
    .main-layout-container
      if user.get('lab_features').indexOf('Set Management') != -1
