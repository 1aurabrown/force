@import '../../../../components/stylus_lib'
@import '../partner_cell'

.partner-category-carousel
  block-margins(55px)

.pcc-header
  border-bottom 1px solid gray-lighter-color
  margin-bottom 30px
  height 55px
  garamond()

.pcc-header-left
  garamond-size('headline')
  bottom 12px
  left 0

.pcc-header-right
  bottom 20px
  right 0

.pcc-body
  position relative

.pcc-content
  white-space nowrap
  overflow hidden

.pcc-prev
.pcc-next
  > i
    offset = partner-cell-metadata-height/2
    top calc('50% - %s' % offset)
    user-select none
