extends ../../../../components/main_layout/templates/blank.jade

append locals
  - assetPackage = 'editorial_features'
  - sections = curation.get('sections')

block body
  .eoy-feature
    video(class='video' autoplay='autoplay' loop='loop' muted='').eoy-feature__background
      source(src='https://artsy-vanity-files-production.s3.amazonaws.com/videos/year-end-six.mp4' type='video/mp4')
    nav.eoy-feature__menu
      a(href='/')
        img.logo(src='https://artsy-vanity-files-production.s3.amazonaws.com/images/artsy_logo.png')
      a(href='#')
        span
          | Presented in <br />
          | Partnership with
        img.planet-art(src='https://artsy-vanity-files-production.s3.amazonaws.com/images/planetart.svg')
    .eoy-feature__content
      .scroller
        .scroller__items
          section(data-section='0')
            article.main-title
              .inner
                .top
                  .item
                    h1 The Year In Art
                .spacer
                .bottom
                  .item
                    h1 2016
          section(data-section='1')
            article
              .inner
                .left
                .right
                  .item
                    h2=sections[0].headline
          section(data-section='2')
            article
              .inner
                .left
                  .col
                  .col
                .right
                  .item
                    h2=sections[1].headline
          section(data-section='3')
            article
              .inner
                .left
                  .item
                    h2=sections[2].headline
                .right
                  .col
                  .col
          section(data-section='4')
            article
              .inner
                .left
                  .col
                .right
                  .item
                    h2=sections[3].headline
          section(data-section='5')
            article
              .inner
                .left
                  .item
                    h2=sections[4].headline
                .right
          section(data-section='6')
            article
              .inner
                .left
                  .col
                  .col
                .right
                  .item
                    h2=sections[5].headline
          section(data-section='7')
            article
              .inner
                .left
                  .col
                .right
                  .item
                    h2=sections[6].headline
          section(data-section='8').last
            article
              .inner
                .left
                  .col
                .right
                  .item
                    h2=sections[7].headline
          section(data-section='9').last
            article
              .inner
                .left
                  .item
                    h2=sections[8].headline
                .right
                  .col
          section(data-section='10').last
            article
              .inner
                .left
                  .col
                .right
                  .item
                    h2=sections[9].headline
    .article-body
      for section, i in curation.get('sections')
        section(data-section='#{i + 1}')
          header
            .article-body__cover-image
              .image
                img(src=section.image)
              .caption=section.caption
            .article-body__title
              h2=section.headline
              h2.chapter= i + 1
          article
            .article-body__text= section.body
            .callout=section.callout

    #recently-viewed-artworks