.feature-image
  position absolute
  top 0px
  left 0px
  width 100%
  height 500px

.fair-sections-container
  max-width feed-max-width
  margin: 0px auto
  position relative
  padding-left 200px
  margin-top 70px
  .fair-sections-small-heading
    font-size 22px
    margin-bottom 16px
  .sections-left, .sections-right
    width: 45%
    display inline-block
    vertical-align top
  .sections-left
    border-right 1px solid light-gray-border-color
  .sections-right
    padding-left 6%
    .mobile-section-heading
      font-size: 23px
      width: 82%
      vertical-align: top
      display: inline-block
      margin-top: 37px
      line-height: 130%
  .fair-search-options
    .fair-search-options-column
      width: 47%
      display inline-block
      vertical-align top
      margin-right 3%
      &:last-child
        margin-right 0%
      a
        display block
        text-transform: capitalize
        text-decoration none
   .a-to-z-section-links
     text-decoration none
     margin-top 10px
     a
       text-decoration none
     .fair-spacer
       display inline-block
       padding 0px 5px
