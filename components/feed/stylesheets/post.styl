// feature (admins)
.posts-dialog
  display: none
  background-color: #fff
  border: 1px solid black
  margin-top: -280px
  margin-left: 60px
  opacity 0
  padding: 20px 10px
  position: absolute
  width: 350px
  z-index: -1
  display: none
  avant-garde()
  .close
    cursor: pointer
    width: 20px
    height: 20px
    background-position: center center
    position: relative
    float: right
    top: -6px
    left: -6px
  &.on
    display: block
    opacity 1
    z-index: 99
  .menu
    ul
      padding: 10px 0 0 10px
      margin: -2px 20px 0 10px
      li
        cursor: pointer
        border-bottom: 1px solid #eee
        margin-bottom: 1px
        padding: 2px
        width: 90%
        a.working
          color: #eee
        a.feature_attachment
          text-decoration: none
          &:before
            content: 'Post On'
        a.unfeature_attachment
          text-decoration: underline
          &:before
            content: 'Remove From'
        &.slug
          border: none
          input.post
            margin-left: 5px
            margin-right: 5px
            width: 150px
          span.feature_by_slug
            text-decoration: underline
          .error
            garamond()
            color: bad_red_color
            font-size: 12px
            margin-left: 45p
