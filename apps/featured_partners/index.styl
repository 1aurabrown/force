@import '../../components/stylus_lib'

page-width = 1090px

#featured-partners
  width page-width
  margin content-margin-top auto 0 auto
  padding-top 40px
  > section
    margin-bottom 40px
  > footer
    text-align right
    .featured-partners-nav
      float none

.featured-partners-title
  clear both
  font-size 33px
  padding 24px 0
  text-align center

.featured-partners-header-info
  float left
  margin-bottom 40px

.featured-partners-nav
  float right
  margin-bottom 40px
  a
    text-decoration none
    text-transform uppercase
    white-space nowrap
    &:hover
      text-decoration underline

.featured-partners-counts
  display none

.featured-partner-profile
  display inline-block
  min-height 250px
  margin 20px 30px 20px 0
  text-align center
  width 250px
  vertical-align top
  &:nth-child(4n)
    margin-right 0
  img
    margin-bottom 15px
  a
    text-decoration none
    vertical-align baseline
  h3
    avant-garde()
    font-size 13px
    line-height 1.45
  h4
    font-size 17px
