if article.get('contributing_authors') && article.get('contributing_authors').length
  - var a = article.get('contributing_authors')
  - var l = a.length
  - var nameArray = []
  - var profileArray = []
  - for(i = 0; i < l; i++)
      if a[i].name
        - nameArray.push(a[i].name)
      if a[i].profile_id
        - profileArray.push(sd.APP_URL + '/' + a[i].profile_id)
  meta( name='author', content=nameArray.join(',') )
  meta( property='article:author', content=profileArray.join(',') )
