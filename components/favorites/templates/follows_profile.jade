.follows-profile( id= profile.id )
  a.follows-profile-icon(
    href= profile.href()
    style="background-image: url(#{profile.icon().imageUrl('square')});"
  )
  .follows-profile-metadata
    a.follows-profile-metadata-name( href= profile.href() )
      = profile.related().owner.get('name')
    br
    .plus-follow-button
      .icon-follow-circle
      .follow-button-text
