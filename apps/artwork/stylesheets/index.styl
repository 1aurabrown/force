@import '../../../components/stylus_lib'
@import './more-info'
@import './share'
@import './deep-zoom'
@import './circle-buttons'

artwork-detail-width        = 220px
artwork-detail-item-height  = 36px

#artwork-page
  padding 20px 0

.artwork-container
  clearfix()
  position relative
  width 100%
  height auto

.artwork-image-zoom
  cursor -moz-zoom-in
  cursor -webkit-zoom-in

.artwork-more-info
  display none

.artwork-overview
  float left
  width calc('100% - %s' % artwork-detail-width)
  height 100%
  padding-left artwork-detail-width
  margin-right -(artwork-detail-width)
  text-align center
  prevent-content-shift()
  // Better usage of space at smaller screen sizes
  @media screen and (max-width: 1024px)
    margin-right 0
    padding-left 20px

#the-artwork-image
  display inline-block
  max-width 100%
  max-height 100%

.artwork-additional-images
  margin 20px auto

.artwork-additional-image
  display inline-block
  height 45px
  padding 3px
  margin 5px
  vertical-align middle
  transition background-color 0.125s
  > img
    height 100%
  &.is-active
  &[data-state='active']
    background-color highlight-color

.artwork-image-actions
  padding 10px

.artwork-detail
  float right
  width artwork-detail-width
  margin-bottom 20px
  padding-left 20px
  font-size 17px

.artwork-detail-artist
  avant-garde()
  > a
    text-decoration none
    &:hover
      text-decoration underline

.artwork-detail-title
  font-style italic
  margin-bottom 10px

.artwork-meta-photo-credit
  margin-top 10px
  font-size 11px
  line-height 1.2

.artwork-meta-partner
  margin-top 10px
  > a
    text-decoration none

.artwork-meta-price
  display table
  width 100%
  border-top 1px dotted
  border-bottom 1px dotted
  border-color light-gray-border-color
  border-color rgba(0,0,0,.125)
  margin 10px 0
  line-height artwork-detail-item-height
.artwork-meta-price-label
.artwork-meta-price-amount
  display table-cell
.artwork-meta-price-amount
  text-align right
.artwork-meta-price-label
  &.is-sold
    avant-garde()
    font-size 15px
    color bad-red-color

.artwork-actions
  margin-top 20px
  .avant-garde-button-black
    display block
    padding 13px 30px 10px

.artwork-inquiry
  margin 20px 0
  text-align center
  > .small-caps
    font-size 11px
    line-height 1.2
    letter-spacing 0
    color dark-gray-text-color

.artwork-edition-sets
  margin 10px 0
.artwork-edition-set
  position relative
  padding 5px 0
  font-size 13px
  line-height 1.5
  border-bottom 1px dotted
  border-color light-gray-border-color
  border-color rgba(0,0,0,.125)
  &:first-child
    border-top 1px dotted
.aes-edition-size
  color dark-gray-text-color
.aes-price
  position absolute
  top 5px
  right 5px

.artwork-actions-list
  margin-top 20px
  > a
    display block
    position relative
    line-height artwork-detail-item-height
    padding-left @line-height
    text-decoration none
    transition all 0.125s
    border-bottom 1px dotted
    border-color light-gray-border-color
    border-color rgba(0,0,0,.125)
    &.is-hidden
      display none
    > i
      position absolute
      line-height @line-height
      left 0
    > sup
      text-transform uppercase
      margin-left 0.5em
      // Tone down superscript a bit
      vertical-align 4px

    &:first-child
      border-top 1px dotted
      border-color light-gray-border-color
      border-color rgba(0,0,0,.125)
    &:hover
      background-color highlight-color
      border-color @background-color
      color white
      transition none

// Follow button states
.artwork-artist-follow-button
  > span:before
    content 'Follow artist'
  &[data-state='following']
    color highlight-color
    > span:before
      content 'Following artist'

// Below the fold
.artwork-related-information
  clearfix()
  margin 20px 0
  padding 20px 0
  border-top 1px solid light-gray-border-color
  h3
    margin 10px 0
    font-size 15px

.ari-left
.ari-right
  padding 0 10px
  text-align center

.ari-left
  width 60%
  float left
  padding-right 5%
  transition opacity 0.5s
  &[data-state='pending']
    opacity 0

.ari-right
  width 40%
  float right

.artwork-artist-blurb
.artwork-blurb
  margin 20px 0
  font-size 17px
  line-height 1.5
  text-align left

.artwork-artist-blurb-link
  display inline-block
  text-align center
  avant-garde()
  font-size 13px
  text-decoration none

#artwork-artist-artworks-container
  opacity 0
  transition opacity 1s
  &.is-loaded
    opacity 1

.artwork-artist-artworks
  margin 20px 0

.artwork-artist-artwork
  position relative
  display inline-block
  max-width 50%
  margin 5px 10px
  overflow hidden
  > img
    height 125px
  &:hover
    .overlay-button-save
      opacity 1
  .overlay-button-save
    opacity 0
    &[data-state='saved']
      opacity 1
