extends ../../../components/main_layout/templates/index
include ../../../components/share/template

block head
  include meta

append locals
  assetPackage = 'gene'

block body
  .main-layout-container
    header#gene-header
      h1.avant-garde-header-center= gene.get('name')
      .avant-garde-button-white.follow-button
      #gene-share-buttons
        +share(gene.get('name') + ' on Artsy', gene.imageUrl())
    #gene-info-left
      #gene-description
        #gene-description-inner!= gene.mdToHtml('description')
    #gene-info-right
      .related-genes
    #gene-filter( data-state=gene.isSubjectMatter() ? 'artworks' : 'artists' )
      include filter