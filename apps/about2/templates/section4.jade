- section = sections[3]

.about2-container
  h1.about2-section-header!= section.header
  p.about2-section-preamble= section.preamble

//- "Images for learning..."
.about2-container
  .span2: +pull-blurb(section.pullBlurb1)
  .span4: img( data-src= section.pullBlurb1.src )

//- "Educational content"
.about2-container
  .span2: for image in firstHalf(section.pullBlurb2.images)
    a.about2-image-container( href= image.href )
      img( data-src= image.src )
      .about2-avant-garde-caption= image.author
      p!= image.caption
  .span2: for image in secondHalf(section.pullBlurb2.images)
    a.about2-image-container( href= image.href )
      img( data-src= image.src )
      .about2-avant-garde-caption= image.author
      p!= image.caption
  .span2: +pull-blurb(section.pullBlurb2)

//- "Artist Biographies"
#about2-section4-pull-blurb-3-container.about2-container
  - artwork = section.pullBlurb3.artwork
  a.span4( href=artwork.href ): img( data-src=artwork.src )
  .span2
    +pull-blurb(section.pullBlurb3)
    #about2-section4-pull-blurb-3-details
      a( href=artwork.href )
        include artwork_details

//- "Current Art News"
.about2-container
  .span3
    for image in section.pullBlurb4.leftImages
      .about2-image-container
        img( data-src= image.src )
        .about2-garamond-caption= image.caption
  .span3
    +pull-blurb(section.pullBlurb4)
    hr.is-invisible
    .span2: for image in section.pullBlurb4.rightImages
      a.about2-image-container( href=image.href )
        image( data-src= image.src )
        .about2-avant-garde-caption= image.author
        p= image.caption
