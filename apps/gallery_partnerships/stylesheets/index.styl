@import '../components/grid'
@import '../../../components/stylus_lib'
@import './edit'

container-width = 1120px
container-margin = 50px
section-margin = 120px
hero-unit-height = 435px
highlight-color = #6a0ac1
separator-color = #d4d4d4

//
// Page Container
//
.gallery-partnerships-container
  width container-width
  margin container-margin auto container-margin * 2 auto
  font-size 18px
  line-height 28px

//
// Hero Units
//
.gallery-partnerships-hero-unit-header
  margin-bottom 30px
  font-size 0
  h1, .gallery-partnerships-contact
    display inline-block
  h1
    width calc('100% - 230px')
  .gallery-partnerships-contact
    width 230px
    text-align right

.gallery-partnerships-contact
  font-size 23px

.gallery-partnerships-hero-unit-content
  position relative
  .preamble
    position absolute
    width 50%
    bottom container-margin
    right 0
    padding 0 container-margin 0 (container-margin / 2)
    color white
    &:before
      content ''
      width 13%
      border-top 2px solid white
      display block
      margin-bottom 10px

.gallery-partnerships-hero-unit-images
  position relative
  height hero-unit-height

.gallery-partnerships-hero-unit-image
  position absolute
  width 100%
  height 100%
  transition opacity 1.5s
  opacity 0
  &.is-active
    transition opacity 1s
    opacity 1

//
// Sections
//
.gallery-partnerships-section
  padding-top (section-margin / 2)
  padding-bottom (section-margin / 2)
  border-top 1px solid separator-color
  &:first-child
    padding-top section-margin
    border none

//
// Scetion Nav
//
.gallery-partnerships-section-nav
  padding 13px 0
  &.stuck
    position fixed
    width 100%
    top 0
    left 0
    right 0
    background-color white
    border-bottom 1px solid gray-lighter-color
    z-index 3
    > nav
      width container-width
      margin 0 auto
    .gallery-partnerships-nav-link:not(.avant-garde-button-black)
      color gray-color
      &.is-active
        color purple-color
      &:hover
        color highlight-color
  > nav
    display flex
    justify-content space-between

.gallery-partnerships-nav-link
  avant-garde()
  text-decoration none
  font-size 13px
  line-height 14px
  padding 10px
  &.internal:hover
    color highlight-color
  &.avant-garde-button-black.is-small
    font-size 13px

//
// Section Header
//
.gallery-partnerships-section-header
  margin-bottom 60px
  &.audience
    position relative
    z-index 1
  &.apply
    text-align center
    h3, .apply-button
      margin-bottom 50px
    .apply-button
      line-height 0.75em
      height 50px
      width 300px
      font-size 17px
      padding 20px 60px
  .grid-item
    vertical-align top

//
// Content of Each Section
//
.gallery-partnerships-section-content
  //
  // Network
  //
  .support-liaison
  .network-gallery-info
    avant-garde()
    text-align center
    line-height 1.5em
    font-size 14px
    margin 15px 0 10px 0
  .support-liaison-location
  .network-gallery-location
    color gray-dark-color

  //
  // Audience
  //
  &.audience
    position relative
    height 475px - (section-margin / 2)
  .audience-map
  .audience-quotes
    position absolute
    width 100%
    padding-right 40%
    bottom 0
    z-index 1
  .audience-map
    height 475px
    top -120px
    z-index 0
    padding-right 0
    img
      width 100%

  //
  // Support
  //
  .support-liaisons
    display flex
    justify-content space-between
    margin-bottom 30px
  .support-liaison
    position relative
    width 13%
    min-height 220px
    img
      width 100%
      margin-bottom 10px
    .previous
      position absolute
      opacity 1
      &.fade-out
        opacity 0
        transition opacity 1s
    .current
      position relative
      background-color white
      opacity 0
      &.fade-in
        opacity 1
        transition opacity 1s
  .support-quotes
    width 75%
    margin 0 auto
    .quote
      color black
      &:before
        border-color black

  //
  // Brwoser Images Slideshow
  //
  .browser-images-container
    position relative
    width 75%
    margin 0 auto
  .browser-frame, .browser-images
    &, img
      width 100%
  .browser-images
    position absolute
    top 0
  .browser-image
    position absolute
    left 0
    right 0
    padding 26px 3px 3px 3px
    transition opacity 1.5s
    opacity 0
    &.is-active
      transition opacity 1s
      opacity 1

  //
  // iPad/iPhone images Slideshos (override the Browser's)
  //
  .ipad-images-container
  .iphone-images-container
    display inline-block
  .ipad-images-container
    width 60%
  .iphone-images-container
    margin 0 10% 2%
    width 15%
  .ipad-image
    padding 27px 58px
  .iphone-image
    padding 42px 11px

  // Quotes
  .quote
    color highlight-color
    font-size 23px
    line-height 1.5
    &:before
      content ''
      width 45%
      border-top 2px solid highlight-color
      display inline-block
  .quote-text
    &:before
      content "\201C"
    &:after
      content "\201D"
  .quote-author
    margin-top 10px
    font-style italic
    &:before
      content "\2013"

//
// Page specific
//
.body-gallery-partnerships
  h1
    font-size 72px
    line-height 1em
  h2, h3
    font-size 42px
    line-height 1.15em
  h2
    font-style italic
    &:after
      content: "\2014"
  #main-layout-header
    position relative
  #main-layout-container
    margin-top 0 !important
    height 100% !important
  #main-layout-footer
    display none

//
// Apply A/B test
//
.gallery-partnerships-apply-form
  width 50%
  margin 0 auto
  > header
    margin 20px 0
    > h3
      margin-bottom 0 !important
      font-size 30px

  input
    &:focus
      focus()
        opacity 1
      placeholder(focus)

  .apply-button
    display inline-block
    width auto
    margin 20px 0 !important

  .gallery-partnerships-contact
    color gray-darkest-color

  .gallery-partnerships-privacy
    margin-bottom 20px