@import '../../../components/stylus_lib'

.fpff-fair-image-grid
.fpff-fair-cell-left
.fpff-fair-cell-center
.fpff-fair-cell-right
  float left
  height 100%
.fpff-fair-image-grid
  width 75%
  &:hover .hoverable-image-link:after
    opacity 0.5
.fpff-fair-cell-right
  width 25%
  padding-left 20px
  position relative
.fpff-fair-cell-left
  width 75%
.fpff-fair-cell-center
  width 25%
  padding-left 5px

// Featured fair components
.ap-featured-item
  height 350px

.fpff-button
  margin 20px 0

.fpff-fair-small-image
  width 100%
  height calc('50% - 2.5px')
  &:last-child
    margin-top 5px

.fpff-fair-small-image
.fpff-fair-cell-left
  > .hoverable-image-link
  > .hoverable-image-link > .hoverable-image
    width 100%
    height 100%
    background-size cover
    background-position center center
    prevent-content-shift()

.fpff-fair-cell-right
  // Clock overrides
  .clock
    margin 20px 0
    text-align left
  .clock-header
    margin 5px 0
    text-transform none
    font-size default-garamond-font-size

.fpff-fair-name
  margin-bottom 20px
  avant-garde()
  font-size default-avant-garde-font-size-font-size
