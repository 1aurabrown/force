if artwork.sale && artwork.sale.artworks
  - var auction = artwork.sale

  section.artwork-section.artwork-auction-artworks( class='js-artwork-auction-artworks' )
    header.artwork-auction-artworks__header
      h3.artwork-auction-artworks__header__name
        | Other works in
        = ' '
        a( href= auction.href )
          = auction.name

    - var columns = helpers.auction_artworks.masonry(auction.artworks)
    .artwork-masonry
      for column, i in columns
        .artwork-masonry__column
          for artwork in column
            include ../../../../components/auction_artwork_brick/index
