@import '../stylus_lib'

.bookmark-artist
  clearfix()
  border-bottom 1px solid gray-lighter-color
  &:last-child
    border-bottom none
  &:hover
    background-color gray-lightest-color
    transition background-color 0.125s
.bookmark-artist-name
.bookmark-artist-remove
  padding 10px
.bookmark-artist-name
  float left
.bookmark-artist-remove
  float right
  padding-left 20px
  cursor pointer
