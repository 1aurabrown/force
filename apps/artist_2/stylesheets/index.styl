@require '../../../components/stylus_lib'

#artist-page
  position relative
  margin-top 80px

#artist-fillwidth-section
#artist-related-shows-section
#artist-related-articles-section
#artist-related-artists-section
#artist-related-contemporary-section
  display none
  fade-in()

.artist-works-sort
  margin 20px 0

.artist-works-section-old
  border-top 1px solid gray-lighter-color
  h3
    padding 10px 0
    avant-garde()
    font-size 13px
  .loading-spinner
    position relative
    margin 150px 0

.artist-related-section
  border-top 1px solid gray-lighter-color
  margin 40px 0
.artist-related-section
  clearfix()

.artist-fillwidth-list-see-more
  display none

.artist-related-section-header
.artist-related-section-content
  float left
  padding 30px 0 10px 0

.artist-related-section-header
  width 26%
  padding-right 40px
  font-size 26px
  line-height 1.5

.artist-related-section-content
  width 100%

.artist-related-see-more
  margin 20px auto

#artist-related-moreinfo
  padding-top 40px

// Tab sections
.artist-section-header
  garamond-size('headline')
  margin-bottom 30px

.artist-page-content
  position relative
  margin 30px 0 80px 0
  .arv-container
    padding-top 20px

#artist-page-content-section
  position relative

.artist-page-section-block
  margin-bottom 60px
  padding-top 30px
  boreder-top 1px solid gray-lighter-color
  &:first-child
    margin-top 0
    padding-top 0
    border-top none

.arv-fillwidth-list
  width 100%

@require './header'
@require '../components/carousel'
@require '../components/current_show_auction'
@require './sections'
