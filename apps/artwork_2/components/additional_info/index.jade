include ../tabs/mixins

- var tabs = helpers.additional_info.build(artwork)

if tabs.length
  section.artwork-section.artwork-tabs( class='js-artwork-additional-info' )
    +nav(tabs, helpers.artists.name)

    .artwork-tabs__content
      for tab, i in tabs
        +tab(tab, i)
          case tab
            when 'description'
              include ./templates/description
            when 'exhibition_history'
              include ./templates/exhibition_history
            when 'bibliography'
              include ./templates/bibliography
            when 'provenance'
              include ./templates/provenance
