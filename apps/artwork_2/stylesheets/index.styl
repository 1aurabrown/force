artwork-page = {
  gutter: 30px,
  metadata: {
    width: 230px
  }
}

.artwork-page
  padding (gutter / 2) 0

.artwork
  clearfix()
  position relative

  &__overview
  &__metadata
    float left

  &__metadata
    width: artwork-page.metadata.width

  &__overview
    width calc('100% - %s' % (artwork-page.metadata.width + artwork-page.gutter))
    margin-right: artwork-page.gutter

    > section
      block-margins(10px, (gutter * 2))
      padding-top distance(25px, 'garamond-s-headline')
      garamond-size('s-body')
      border-top 1px solid gray-lighter-color
