#main-layout-container
  margin 0

#show
  padding-top 40px

  .main-layout-container
    margin: 0 40px

  .show-share
    float right
    margin-top 10px
    position absolute
    right 40px
    a
      text-decoration none
    .share-to-pinterest
      display: none

  .show-artworks
    margin 0 auto
    max-width 1200px

  .artwork-column
    margin 0 40px
    width calc('33% - 80px')

  .show-header-last
    border-bottom 1px solid dark-gray-border-color
    margin-bottom 50px
    padding-bottom 50px

  .profile-badge
    float left
    left 40px
    max-width 260px
    position absolute

  .profile-badge-icon, .profile-badge-initials
    float left
    margin-right 10px

  .profile-badge-name
    float left
    max-width 218px

.show-header
  margin 0 auto
  text-align center
  width calc('100% - 80px')

.show-heading-title
  garamond()
  font-size 36px
  line-height 1.25
  margin 0 auto
  width 100%
  margin-bottom 20px
  padding 0 260px

.show-subheading
  garamond()
  font-size 20px
  line-height 1
  margin-bottom 10px
  padding 0 260px
