.related-posts.is-grid
  h3.avant-garde-header-center
    | #{posts.length + remaining} #{(posts.length === 1 ? 'Post' : 'Posts')} About #{entityName}

  ul
    for post in posts
      - var profile = post.profile()
      li.related-post
        a.related-post-content( href="/post/#{post.id}" )
          figure
            if post.defaultImage()
              .rpc-thumbnail( style="background-image: url(#{post.defaultImage().imageUrlFor(300, 200)})" )

          if post.get('title')
            .rpc-title!= post.get('title')
          if profile.get('owner')
            .rpc-author By #{profile.get('owner').name}

  footer.related-posts-actions( class=(remaining > 0 ? 'is-hasremaining' : '') )
    if remaining > 0
      a.related-posts-show-all
        | Show All Featured Posts (#{remaining})
