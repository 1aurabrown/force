@import '../../../components/stylus_lib'

menu-width = 20%
content-width = 80%

#notifications-page
  padding-top 50px

#notifications-header
  margin-bottom 80px
  h1
    garamond-size('xl-headline')

#notifications-filter
  float left
  min-width menu-width
  .artsy-checkbox
    display block
    margin 32px 0px
  .filter-artist
    display block
  .filter-artist-count
    display inline
    color gray-dark-color
  .filter-artist-name
    text-decoration none
    display inline
    line-height 2em
  .filter-artist-clear
    display none
  .filter-artist[data-state=selected]
    .filter-artist-clear
      display inline
      text-decoration underline
      cursor pointer
    .filter-artist-name, .filter-artist-count, .filter-artist-clear
      color purple-color

.notifications-sub-header
  font-size 25px

#notifications-works, #notifications-artist-works
  float left
  position absolute
  width 900px
  margin-left 15%

#notifications-feed-spinner
  position relative
  height 250px

#notifications-artist-works-spinner
  display none

.notifications-list-item
  margin 20px 0
  border-top 1px solid gray-lighter-color

.notifications-list-item-header
  margin 20px 0
  clearfix()
  h4
    avant-garde()
    font-size default-avant-garde-font-size
  a
    text-decoration none

.notifications-works-added
  color gray-darker-color

.notifications-see-more
  margin 20px 0
  text-align right
  a
    font-size 13px

.notifications-search-header
  avant-garde('body')
  margin 40px 0 20px 0

#notifications-search-container
  margin-bottom 50px
