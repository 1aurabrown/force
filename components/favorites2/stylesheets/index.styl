@require '../../stylus_lib'
@require './circle_control'
@require './empty_hint'
@require './follows_item'
@require './header'
@require './collections'
@require './onboarding_modal'
@require './edit_modal'
@require './collection_list'
@require './empty_state'

.favorites2-artworks
  margin 0 auto
  position relative
  text-align center
  .loading-spinner
    display none
    position relative
    margin 150px 0
  h1
    padding 60px 0 26px 0
    margin-bottom 60px
    font-size 32px
    text-align left
    border-bottom 1px solid gray-lighter-color

.favorites2-actions
  position relative
  margin 10px auto
  max-width 1120px
  a
    text-decoration none
  .favorites2-share
    text-align center
  .favorites2-privacy
    position absolute
    right 0
    top 5px

.favorites2-artworks-list .artwork-item
  text-align left
  .overlay-button-save
    &[data-state='saved']
      opacity 0
  &:hover
    .overlay-button-save
      opacity 1

.favorites2-artworks-spinner
  margin 100px 0
  position relative
  display block !important

.favorites2-toggle-public
.favorites2-toggle-private
  display none

.favorites2-privacy[data-state=public] .favorites2-toggle-public
  display block

.favorites2-privacy[data-state=private] .favorites2-toggle-private
  display block