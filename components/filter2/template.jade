include ../bordered_pulldown/mixin

.filter-artworks(class=infiniteScroll ? '' : 'filter-artworks-no-infinite-scroll')
  .filter-artworks-sort-count
    .filter-sort-count
      h1.filter-heading.large-garamond-header
      h4.filter-sort-count-count Showing&nbsp;
        span.filter-sort-count-total= typeof total == 'number' ? total : '...'
      .filter-sort-count-pulldown
        +bordered-pulldown((pulldownVal || 'Recently Added'), 'Sort by:')
          a( data-sort='-published_at', href="#" ) Recently Added
          a( data-sort='-year', href="#" ) Artwork Year (desc.)
          a( data-sort='year', href="#" ) Artwork Year (asc.)
  .filter-artworks-list

  .filter-artworks-spinner
    .loading-spinner

  unless infiniteScroll
    .filter-artworks-see-more
      .avant-garde-button-text See More
