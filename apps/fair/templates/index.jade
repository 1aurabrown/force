extends ../../../components/main_layout/templates/microsite

block head
  include ../../profile/templates/meta

append locals
  assetPackage = 'fair'

block body
  #fair-page
    include ./header
    .fair-page-content
      if sd.SECTION == 'search'
        include ./search_results
      else if sd.SECTION == 'info'
        include ./info
      else if sd.SECTION == 'browse'
        #fair-browse-spacer
        include ./browse
      else if sd.SECTION == 'forYou'
        include ./for_you
      else if sd.SECTION == 'favorites'
        .favorites-container.main-layout-container
          include ./../../favorites_follows/templates/favorites_content
      else if sd.SECTION == 'follows'
        .following-container.main-layout-container
          include ./../../favorites_follows/templates/follows_content
    .fair-page-footer
