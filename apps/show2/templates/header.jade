header.show-header( class= hasCarousel ? 'has-carousel' : undefined )
  .show-header-cell
    h1.show-title
      if partner_show.fair
        = partner_show.partner.name
        br
        em= partner_show.fair.name
      else
        = ViewHelpers.title(partner_show)

    if partner_show.description
      .show-description
        != partner_show.description

  .show-header-cell
    .show-partner
      .entity-with-follow
        if partner_show.partner.isLinkable
          a.entity-link( href= partner_show.partner.href )
            = partner_show.partner.name
        else
          span.entity-link= partner_show.partner.name
        a.entity-follow.profile-follow( data-id= partner_show.partner.profile.id )

      nav.show-share.js-show-share
        +share(ViewHelpers.shareTitle(partner_show))

    .show-metadata
      if partner_show.fair
        include metadata/fair
      else
        .show-dates
          = ViewHelpers.runningDates(partner_show)
        if partner_show.location
          include metadata/location
        //- if show.related().showEvents.length
        //-   include metadata/events
