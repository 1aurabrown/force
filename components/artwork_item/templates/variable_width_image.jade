- image = artwork.defaultImage()

if !image.isCropped(artworkSize) && image.hasDimensions()
  .artwork-item-image( style= "padding-bottom: #{image.factor() * 100}%" )
    img(
      src= image.bestImageUrl([artworkSize, 'tall', 'large', 'larger', 'medium', 'small'])
      nopin= artwork.noPinAttr()
      alt= artwork.toAltText()
    )
else
  img.artwork-item-image(
    src= image.bestImageUrl([artworkSize, 'tall', 'large', 'larger', 'medium', 'small'])
    nopin= artwork.noPinAttr()
    alt= artwork.toAltText()
  )
