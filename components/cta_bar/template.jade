.vam-outer: .vam-inner

  if mode === 'link'
    h3.cta-bar-headline
      = headline
    a.cta-bar-button.avant-garde-button-dark( href=linkHref )
      = linkCopy
    .cta-bar-defer: a( href='#' )
      | Maybe Later
  else if mode === 'gallery-insights'
    .cta-bar-container
      .cta-bar-small
        .cta-bar-header
          h2= headline
          h3= subHeadline
        .cta-bar-small-form
          input.bordered-input( id ="cta-bar-form-input" placeholder='Enter your email address...', type='email', name='email', required value="#{email}")
          button.avant-garde-button-dark.js-articles-insights-subscribe Subscribe
          .cta-bar-defer: a( href='#' )
            | Close
      .cta-bar-thanks
        .cta-bar-header
          h2 Thank you.
          h3 You are now subscribed to Artsy Insights for Galleries
  else if mode === 'editorial-signup'
    .cta-bar-container-editorial
      .cta-bar-header-editorial
        h2 Subscribe to the Artsy editorial newsletter
        h3 Get the latest art stories and news delivered to your inbox
      .cta-bar-form-editorial
        input.bordered-input( id ="cta-bar-form-input" placeholder='Enter your email address...', type='email', name='email', required value="#{email}")
        button.avant-garde-button-dark.js-article-es Sign Me Up
      .cta-bar-defer.cta-bar-defer-editorial: a.icon-close( href='#' )
    .cta-bar-thanks.cta-bar-thanks-editorial
      .cta-bar-header-editorial
        h2 Thank you.
        h3 You are now subscribed to the Artsy editorial newsletter.
  else
    h3.cta-bar-headline
      = headline
    form.cta-bar-form
      input.bordered-input( id="cta-bar-form-input" placeholder='Enter your email address...', type='email', name='email', required )
      button.avant-garde-button-dark Join Now
    .cta-bar-defer: a( href='#' )
      | Maybe Later
