@import '../../components/stylus_lib'

#browse-page
  padding-top 40px

// Featured gene section
.browse-featured-gene-set
  text-align center

.browse-featured-gene
  display inline-block
  position relative
  background-color #000
  width calc('50% - 5px')
  &:hover
    > .bfg-image
      opacity 0.5
  &:first-child
    margin-right 5px
  &:last-child
    margin-left 5px

.bfg-image
  transition opacity 0.3s
  vertical-align bottom
  width 100%
  prevent-content-shift()

.bfg-title
  position absolute
  right 20px
  bottom 15px
  left 20px
  avant-garde()
  color #fff
  font-size 13px
  text-align left
  text-shadow 0 0 5px rgba(0,0,0,.125)

#browse-page-see-all
  text-align right
  position relative
  padding-right 20px
  &:hover::before
    opacity 1
  &::before
    position absolute
    right 0
    font-size 12px
    top 9px
    font-weight bold
    opacity 0.5

// Popular categories section
column-width = 25%

.browse-popular-categories
  clearfix()
  margin 20px auto

.bpc-column
  float left
  h1
    margin 5px 0 30px 0
    font-size
  a
    display block
    padding 5px 0
    font-size 17px

.bpc-subcolumn
  float left
  padding-right 20px
  margin-right 20px
  width calc('33.3% - 20px')
  border-right 1px solid light-gray-border-color
  &:last-child
    border-right 0
  > h3
    margin-bottom 30px
    avant-garde()
    font-size 13px

.bpc-dynamic
  width 100%

// Browse filter
#browse-filter-header
  border-bottom 1px solid light-gray-border-color
  padding 40px 0 25px 0
#browse-filter
  margin-top 20px
#browse-artworks
  margin-top 20px