@require '../stylus_lib'

.article-sa-footer-left, .article-sa-footer-right
  display: inline-block
  vertical-align: top
  width: 50%
  min-height: 300px
  height: 100%
  position: relative

.article-sa-title
  font-size: 72px
  font-style: italic

.article-sa-artsy-logo
  width: 126px
  max-height: 32px
  display: inline-block
  vertical-align: middle

.article-sa-logos
  position: absolute
  bottom: 0px

.article-sa-primary-logo
  display: inline-block
  vertical-align: top
  img
    max-height: 32px
    max-width: 100px

.article-sa-secondary-logo-text
  avant-garde-size('body')
  display: inline-block
  vertical-align: top
  margin-right: 10px
  margin-top: 2px

.article-sa-secondary-logo
  margin-top: 20px
  img
    display: inline-block
    vertical-align: top
    max-height: 20px

.article-sa-cta
  text-decoration: none
  font-weight: bold

.article-sa-related
  width: 60%
  border-top: 1px solid
  margin-left: auto
  a
    border-bottom: 1px solid
    font-size: 24px
    padding: 13px 0px
    text-align: center
    display: block
    &:hover
      color: white
      background: black
