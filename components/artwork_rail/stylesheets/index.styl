@require '../components/merry_go_round'
@require '../components/inquiry_questionnaire/stylesheets'
@require '../components/artwork_item/stylesheets'

.arv-container
  margin-top 20px
  padding-top 40px
  border-top 1px solid gray-lighter-color
  position relative
  &:first-child
    border-top none
    padding-top 0

.arv-header
  margin-bottom 30px
  position relative
  h1
    garamond-size('headline', true)
    font-size 25px

.arv-view-all
  position absolute
  right 0
  top 0

.arv-fillwidth-row
  padding-bottom 120px

.arv-carousel
  position relative
  max-width 100%
  max-height 360px

  &:hover
    .arv-carousel-nav__prev
    .arv-carousel-nav__next
      opacity 0.5

  .artwork-item-caption
    max-height 120px

.arv-carousel-nav
  position absolute
  width 100%
  height 100%
  top 0px
  left 0px
  pointer-events none

  &.is-hidden
    display none

  &__next
  &__prev
    position absolute
    top 50%
    transform translateY(-50%)
    text-align center
    cursor pointer
    user-select none
    pointer-events all
    transition opacity .25s
    opacity 0

    > i
      user-select none
    &:hover
      opacity 1 !important

  &__next
    left 100%
  &__prev
    right 100%
