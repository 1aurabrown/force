h1.avant-garde-header-center Share

.stacked-button-menu.share-menu
  .share-menu-buttons
    a.share-by-email(
      data-message='Share via email',
      data-service='email',
      href="mailto:?subject=#{description}&body=Check out #{description} on Artsy: #{url}",
      target='_blank'
      )
      i.icon-email
        | Email
    a.share-to-facebook(
      data-message='Post to Facebook',
      data-service='facebook',
      href="https://www.facebook.com/sharer/sharer.php?u=#{url}",
      target='_blank'
    )
      i.icon-facebook
      | Facebook
    a.share-to-twitter(
      data-message='Share on Twitter',
      data-service='twitter',
      href="https://twitter.com/intent/tweet?original_referer=#{url}&text=#{description}&url=#{url}&via=artsy",
      target='_blank'
    )
      i.icon-twitter
      | Twitter
    a.share-to-pinterest(
      data-message='Pin It on Pinterest',
      data-service='pinterest',
      href="https://pinterest.com/pin/create/button/?url=#{url}&media=#{media}&description=#{description}",
      target='_blank'
    )
      i.icon-pinterest
      | Pinterest
    a.share-to-tumblr(
      href=[
        "https://www.tumblr.com/share/photo",
        "?source=#{media}",
        "&caption=#{description}",
        "&clickthru=#{url}"].join('')
    )
      i.icon-tumblr
      | Tumblr

  span
    i.icon-link
    input.bordered-input(
      type='text'
      value= decodeURIComponent(url)
      readonly
    )
