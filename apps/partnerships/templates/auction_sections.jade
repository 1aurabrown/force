mixin experience(section)
  .partnerships-section-header
    .grid-2-up
      .grid-item
        h2= section.title
        h3!= section.heading
      .grid-item
        p.preamble!= section.preamble

  .partnerships-section-content.auctions
    img( src=section.logos.src )

mixin auction_audience(section)
  .partnerships-section-header.audience
    .grid-2-up
      .grid-item
        h2= section.title
        h3!= section.heading
      .grid-item
        p.preamble!= section.preamble

  .partnerships-section-content.audience
    .audience-map
      img( src=section.images[0].src )
    .audience-quotes
      - q = section.quotes[0]
      .quote
        .text= q.quote

mixin access(section)
  .partnerships-section-header.access
    .grid-2-up
      .grid-item
        h2= section.title
        h3!= section.heading
      .grid-item
        p.preamble!= section.preamble

  .partnerships-section-content.access
    .auction-access-img
      img( src=section.image.src )
    .audience-quotes
      .quote
        .quote-text= section.quote.quote
        .quote-author #{section.quote.author}, #{section.quote.title}

mixin visibility(section)
  .partnerships-section-header.visibility
    .grid-2-up
      .grid-item
        h2= section.title
        h3!= section.heading
      .grid-item
        p.preamble!= section.preamble

  .partnerships-section-content.visibility
    .visibility-left
      .browser-images-container
        .browser-frame
          img( src="/images/browser-window.jpg" )
        ul.browser-images.tools-images
          for image, i in section.browser_images
            li.browser-image.tools-image( class=(i === 0 ? 'is-active' : undefined) )
              img( src=image.src )

      .image-container-caption
        h4= section.browser_caption.title
        p= section.browser_caption.subtitle

    .visibility-right
      //- add social icons
      .mobile-images-container
        .mobile-frame
          img( src="/images/mobile-window.png" )
        ul.mobile-images.tools-images
          for image, i in section.mobile_images
            li.mobile-image.tools-image( class=(i === 0 ? 'is-active' : undefined) )
              img( src=image.src )

      .image-container-caption
        h4= section.mobile_caption.title
        p= section.mobile_caption.subtitle

mixin event_services(section)
  .partnerships-section-header.event-services
    .grid-2-up
      .grid-item
        h2= section.title
        h3!= section.heading
      .grid-item
        p.preamble!= section.preamble

  .partnerships-section-content.event-services
    .grid-2-up
      for image, i in section.images
        .grid-item
          img( src=image.src )
          .event-services-caption= image.caption

mixin auction_apply(section)
  .partnerships-section-header.apply
    .gallery-partnerships-apply-form
      header
        h3 Interested in partnering <br> with Artsy?
          aside Apply to join Artsy&rsquo;s invitation-only subscription service for auctions

      form.stacked-form.js-gallery-partnerships-apply-form(
        action='/apply/auction/2'
        method='get'
      )
        input.bordered-input( type='text', name='company', placeholder= 'Auction House Name', id='apply-name-field' required )

        .stacked-form-cell.grid-3-up
          .grid-item: input.bordered-input.is-block( type='text', name='first_name', placeholder='First Name', required )
          .grid-item: input.bordered-input.is-block( type='text', name='last_name', placeholder='Last Name', required  )
          .grid-item: input.bordered-input.is-block( type='text', name='title', placeholder= 'Title at auction house' )

        .stacked-form-cell.grid-2-up
          .grid-item: input.bordered-input.is-block( type='text', name='URL', placeholder='Website', required )
          .grid-item: input.bordered-input.is-block( type='email', name='email', placeholder='E-mail', required )

        button.avant-garde-button-black.apply-button.js-gallery-partnerships-apply-submit
          | Apply

        .gallery-partnerships-privacy
          | By clicking apply, you accept our&nbsp;
          a( href='/privacy' ) Privacy Policy
          | .

        .partnerships-contact Call us: +1 888 840 0704


section.partnerships-section( id= sections[0].slug, data-href="/auction-partnerships/#{sections[0].slug}" ): +experience(sections[0])
section.partnerships-section( id= sections[1].slug, data-href="/auction-partnerships/#{sections[1].slug}" ): +auction_audience(sections[1])
section.partnerships-section( id= sections[2].slug, data-href="/auction-partnerships/#{sections[2].slug}" ): +access(sections[2])
section.partnerships-section( id= sections[3].slug, data-href="/auction-partnerships/#{sections[3].slug}" ): +visibility(sections[3])
section.partnerships-section( id= sections[4].slug, data-href="/auction-partnerships/#{sections[4].slug}" ): +event_services(sections[4])
section.partnerships-section( id= sections[5].slug, data-href="/auction-partnerships/#{sections[5].slug}" ): +support(sections[5])
section.partnerships-section( id= sections[6].slug, data-href="/auction-partnerships/#{sections[6].slug}" ): +auction_apply(sections[6])
