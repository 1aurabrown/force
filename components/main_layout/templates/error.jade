extends ./index

block head
  include ./common_head

append locals
  - assetPackage = 'errors'

block body
  main#error-handler
    if code === 404
      h1 The page you were looking for doesn't exist.
    else
      h1 Internal Error
      if detail
        pre= detail
    p Please contact <a href="mailto:support@artsy.net">support@artsy.net</a> with any questions.
