@import '../components/merry_go_round'
@import '../components/fillwidth_row'

arrow-offset = -90px

.arv-container
  margin-top 20px
  padding-top 40px
  border-top 1px solid gray-lighter-color
  position relative
  &:first-child
    border-top none
    padding-top 0

.arv-header
  margin-bottom 30px
  position relative
  h1
    garamond-size('headline', true)
    font-size 25px

.arv-view-all
  position absolute
  right 0
  top 5px

.arv-fillwidth-row
  padding-bottom 80px

.arv-carousel
  position relative
  max-width 100%
  max-height 340px

  &:hover
    .arv-carousel-arrow
      opacity 1

  .arv-carousel-arrow:hover
    opacity 0.5

.arv-carousel-nav
  position absolute
  width 100%
  height 100%
  top 0px
  left 0px
  pointer-events none

  &.is-hidden
    display none

.arv-carousel-arrow
  cursor pointer
  pointer-events all
  transition opacity .25s
  opacity 0
  position absolute
  user-select none
  height 250px
  width 90px
  text-align center
  > i
    user-select none

.arv-carousel-arrow-next
  right arrow-offset
.arv-carousel-arrow-prev
  left arrow-offset



