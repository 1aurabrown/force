extends ../../../components/main_layout/templates/index

block head
  include ../../../components/main_layout/templates/profile_meta

append locals
  - assetPackage = 'user_profile'
  - bodyClass = bodyClass + ' user-profile-collection-body'

block body
  - isUser = user && user.get('id') == profile.get('owner').id
  #user-profile-collection.main-layout-container
    header
      a.contextual-return-link(
        href=(isUser ? '/favorites' : '/' + profile.get('id') + '/favorites')
      )
        i.icon-chevron-small-left
        | Back to works
      h1.garamond-header-center!= collection.get('name')
      nav#user-profile-collection-right
        a#user_profile-collection-right-slideshow View Slideshow
        if isUser
          a#user-profile-collection-right-edit Edit
          a#user-profile-collection-right-share Share
    #user-profile-collection-artworks
    #user-profile-collection-artworks-spinner
      .loading-spinner
  #user-profile-collection-slideshow
    #upc-slideshow-left
    #upc-slideshow-left
    #upc-slideshow-close
    ul