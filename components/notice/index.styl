@import '../stylus_lib'

#main-layout-notice
  display table
  width 100%
  &:empty
    display none
.notice-message
  position relative
  display table-cell
  height main-header-height
  padding 0 20px
  vertical-align middle
  text-align center
  background-color yellow-light-color
  border-bottom 1px solid darken(yellow-light-color, 10%)
.notice-message-close
  position absolute
  top 50%
  right 0
  transform translateY(-50%)
  padding 20px
  font-size 20px
  cursor pointer
