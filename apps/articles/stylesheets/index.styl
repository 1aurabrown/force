overflow-width = 1100px
body-width = 570px
gutter-size = 30px
artwork-height = 500px

#articles-show
  margin-top 120px
  h1
    width 900px
    margin auto
    font-size 40px
    line-height 48px
    text-align center
    padding-bottom (gutter-size / 2)

  h2
    text-align center

.body-welcome-header #articles-show
  margin-top 180px

#articles-lead-paragraph, .articles-section-text
  font-size 20px
  line-height 27px
  width body-width
  margin auto
  p
    margin-bottom 1em

#articles-lead-paragraph
  margin (gutter-size / 2) auto

#articles-slideshow-container
  height artwork-height + 200
  margin-bottom gutter-size
  .carousel-figure
    vertical-align top
  img
    height artwork-height
  iframe
    height artwork-height
    width 888px

#articles-show-author, .articles-social
  vertical-align middle

#articles-show-date
  avant-garde()
  font-size 11px
  margin-bottom 5px
  color gray-darker-color

#articles-show-author
  avant-garde()
  font-size default-avant-garde-font-size

.articles-social
  text-align center
  padding 10px 0 20px 0
  .articles-social__header
    avant-garde()
    font-size default-avant-garde-font-size
    margin-bottom 10px

  &.add-bottom
    margin-bottom (gutter-size * 3)

.articles-section-image
  width overflow-width
  margin auto
  margin-bottom gutter-size
  img
    max-width 100%
    display block
    margin auto
  figcaption
    margin-top 10px
    font-style italic
    color gray-dark-color
    text-align left

.articles-section-artworks
  position relative
  min-height (body-width * .33)

.articles-section-artworks[data-layout="column_width"]
  width body-width
  margin auto
  .loading-spinner
    display none
  li
    margin-bottom gutter-size
  .artwork-item-image-link
    width 100%
    img
      width 100%

.articles-section-artworks[data-layout="overflow_fillwidth"]
  width (overflow-width + gutter-size)
  margin 0 auto gutter-size auto
  text-align center
  &.is-loading
    [data-id]
      opacity 0
    height artwork-height
    .loading-spinner
      display block
  .loading-spinner
    display none
  [data-id]
    display inline-block
    vertical-align top
    padding 0
  .artwork-item-image-container img
    height auto
  .artwork-item-caption
    overflow ellipsis
  .overlay-container
    display none

.articles-section-video
  width body-width
  margin auto
  margin-bottom 1em
  iframe
    margin auto
    width body-width
    height (9 / 16 * body-width)

#articles-footer
  width body-width
  margin 80px auto
  h1
    avant-garde()
    font-size default-avant-garde-font-size - 1
  li, h1
    margin-bottom 20px
    padding-bottom 20px
    border-bottom 1px solid gray-lighter-color
  .articles-footer-list-left
    width 260px
    padding-right 40px
    img
      max-width 100%
  .articles-footer-list-right
    width 310px
    h2
      font-size 26px
      line-height 1.3em
      margin-bottom 10px
    h3
      avant-garde()
      font-size 12px
    a
      text-decoration none
  .articles-footer-list-right, .articles-footer-list-left
    vertical-align top
    display inline-block

@media (max-width: 600px)
  .body-responsive
    #articles-show h1
    #articles-lead-paragraph, .articles-section-text
    #articles-slideshow-container #articles-slideshow-inner
    .articles-section-image
    .articles-section-artworks
    .articles-section-artworks [data-id]
    .articles-section-video
    .articles-section-video iframe
    #articles-footer .articles-footer-list-left img
      width 100% !important
    .articles-section-video iframe
      height auto !important
    #articles-show
      margin-top 80px
      h1
        font-size 32px
        line-height 1.2em
    #articles-footer
      width 100%
      .articles-footer-list-left
        margin-bottom 10px
        padding 0
      .articles-footer-list-right, .articles-footer-list-left
        display block
        width 100%
      .articles-footer-list-right
        font-size 22px
        line-height 1.2em
    [data-layout="overflow_fillwidth"] [data-id]
      padding 0
      margin-bottom 20px

#articles-magazine-primary-article
  width 66%
  display inline-block
  vertical-align top
  padding-right 15px
  figure
    height 420px
  figcaption
    background #fff
    padding 30px
    position relative
    top 370px
    width 560px
    left calc(50% \- (@width / 2))
    text-align center
  .aaf-title
    position relative
    top -5px

.aaf-title
  font-size 26px
  line-height 34px

.aaf-author
  avant-garde()
  font-size 10px
  margin-top 10px

.aaf-img
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background center center
  background-size cover

.aaf-date
  color gray-dark-color
  display block
  margin-bottom 3px

.articles-article-figure
  position relative
  a
    text-decoration none

#articles-magazine-featured-aside, #articles-magazine-feed
  width 33%
  display inline-block
  vertical-align top
  padding-left (gutter-size / 2)
  figure
    margin-bottom 30px
    height 120px
  img
    width 100%
    padding-right (gutter-size / 2)
  figcaption
    padding-left 50%
    display inline-block
    vertical-align top
  img
    display inline-block
    vertical-align top
  .aaf-title
    font-size 22px
    line-height 27px
    max-height 84px
    overflow hidden
  .aaf-author
    margin-top 2px
    color gray-darkest-color
  .aaf-img
    width calc(50% \- (gutter-size / 2))
  .articles-article-figure
    display table
    figcaption
      display table-cell
      vertical-align middle

#articles-magazine-featured-aside
  figcaption
    display table-cell
    vertical-align middle
  figure
    display block
  a
    height 100%
    display table

#articles-magazine-featured-aside, #articles-magazine-primary-article
  margin-top 40px

#articles-magazine-feed
  margin-top 110px
  width 66%
  padding-right (gutter-size * 1.5)
  padding-left 0
  .avant-garde-header
    font-size 14px
    border-bottom 1px solid gray-lighter-color
    padding-bottom (gutter-size - 17)
  figure
    height 250px
    border-bottom 1px solid gray-lighter-color
    width 100%
    margin-bottom 0
  .aaf-img
    width golden-ratio-small-percent
    height calc(100% \- ((gutter-size - 10) * 2))
    top (gutter-size - 10)
  .aaf-title
    font-size 26px
    line-height 34px
    max-height 107px
    padding-right 80px
  .aaf-share
    position absolute
    right 0
    bottom 8px
    a
      display none
    a[data-service=twitter], a[data-service=facebook]
      display inline-block
  figcaption
    width 100% - golden-ratio-small-percent
    padding (gutter-size - 10) 0
    padding-left gutter-size
  button
    margin-top gutter-size
