.about-section6-links
  margin 60px 0
  &:first-child
    margin-right gutter-width * 2
.about-section6-link
  display block
  padding gutter-width 0
  font-size 40px
  border-bottom 1px solid gray-color
  transition border-color 0.5s
  .about-avant-garde-caption
    margin-bottom 20px
  &:hover
    .about-avant-garde-caption
      color purple-color

#about-section6-logo
  font-size columns(2) + gutters(2)
  line-height @font-size
  transition color 0.25s
  &:hover
    color purple-color

.about-section6-social-media
  margin-left 30px
  position absolute
  margin-top -6px
  .icon-twitter
    font-size 58px
    top 5px
  .icon-facebook
    font-size 48px
  .icon-instagram
    font-size 29px
    top -7px
    left 10px
  a
    position relative
    margin-right 5px

.about-section6-pull-blurb .avant-garde-button-white
  margin-right 25px

.about-section6-blurbs
  margin-bottom 0
  & + .about-container
    margin-top 0
