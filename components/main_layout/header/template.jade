header#main-layout-header
  if !user
    header#main-layout-welcome-header
      #main-layout-welcome-header-aside
        .mlwha-outer
          .mlwha-inner
            | Discover art from leading galleries,
            br
            | museums, and private collections.
      i#main-layout-welcome-logo.icon-logotype
  nav
    #main-layout-header-left
      a#main-layout-header-home-logo.icon-logoglyph( href='/' )
      include ./search_bar/template
    #main-layout-header-right
      if user
        a.header-post-button.icon-write( href='/post' )
      a( href='/browse' ) Browse
      a( href='/filter/artworks' ) Filter
      a( href='/partners' ) partners
      a( href='/posts' ) Posts
      a( href='/about' ) About
      if user
        if user.get('name')
          .header-user-name= user.get('name')
            #main-layout-header-user-nav
              include ./user_nav
        else
          .header-user-name account
            #main-layout-header-user-nav
              include ./user_nav
      else
        a.mlh-login( href='/log_in' ) Log in
        a.mlh-signup( href='/sign_up' ) Sign up
