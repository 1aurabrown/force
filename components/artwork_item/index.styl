@import '../stylus_lib/index.styl'
@import './overlay_controls'

.artwork-item-image-container
  margin-bottom 11px

.artwork-item-image-link
  display inline-block
  overflow hidden
  position relative

.artwork-item-caption
  color dark-gray-text-color
  font-size 15px
  line-height 1.3
  text-align left
  a
    color dark-gray-text-color
  .artwork-item-more-info
    color white
  p.artwork-item-overflow
    overflow ellipsis

.artwork-item-artist
  font-weight bold

.artwork-item-image
  background-color #f2f2f2

.artwork-item-blurb
  color black
  font-size 17px
  margin-bottom 1em
  margin-top 1em
  text-align left

.artwork-item-more-info
  font-size 11px
  line-height 1.6
  margin-top 1em
  padding 3px 12px 3px
