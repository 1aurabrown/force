@require '../../../components/gradient_blurb/index'

// Books
.merchandisable-items
  position relative
  display flex
  flex-direction row
  flex-wrap wrap
.merchandisable-item
  width 20%
  padding-right 20px
  text-decoration none
.merchandisable-item-metadata
  margin 20px 0
.merchandisable-item-image > img
  max-width 100%
  max-height 100%
.merchandisable-item-title
  font-weight bold
.merchandisable-item-publish-date
  color gray-darker-color

// Exhibitions
.filterable-list-item-travel
  margin-left 1em

// CV
.artist-cv-link-year
  margin-right 15px
  display inline-block

// Overview
.artist-overview-header
  margin-bottom 20px
  .sixty-forty-bisected-header
    margin 0
.artist-blurb
  fade-in()
#main-layout-footer
  transition opacity 1s
.gradient-blurb-read-more-container
  width 100%
  height 32px
  .gradient-blurb-read-more
    padding 8px 29px
    avant-garde-size(s-headline)
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    background-color white
    border 1px solid gray-lighter-color

  &::before
    content ''
    position absolute
    bottom 50%
    left 0
    right 0
    border-bottom 2px dotted gray-lighter-color
