mixin filter-dropdown(mainText, plural, attr, values)
  .filter-dropdown
    .filter-nav-main-text= mainText
    .filter-nav-active-text
    .icon-arrow-down
    nav
      a( data-attr=attr, data-val='' )
        span.filter-dropdown-text= "All " + plural
        span.filter-dropdown-count
        span.icon-check
      for val, label in values
        if label && val
          a( data-attr=attr, data-val=val )
            span.filter-dropdown-text= label
            span.filter-dropdown-count
            span.icon-check
