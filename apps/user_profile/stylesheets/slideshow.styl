#user-profile-collection-slideshow
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background white
  z-index 2
  display none

#upc-slideshow-left, #upc-slideshow-right
  background gray-color
  color white
  width fixed
  top 50%
  margin-top -41px
  padding 25px 10px
  position fixed
  cursor pointer
  transition background-color 0.3s
  z-index 2
  &:hover
    background black
  .icon-chevron-left, .icon-chevron-right
    font-size 24px

#upc-slideshow-right
  right 0

#upc-slideshow-close
  position fixed
  top 10px
  right 10px
  cursor pointer
  &:hover .icon-close
    color black
  .icon-close
    font-size 22px
    color gray-dark-color
    transition color 0.3s

#upc-slideshow-artworks
  height 100%
  figure
    text-align center
    opacity 0
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition opacity 0.4s ease-in-out
    &::before
      content '.'
      height 100%
      display inline-block
      vertical-align middle
    &.is-active
      opacity 1
    .ucp-slideshow-img-container
      display inline-block
      vertical-align middle
      img
        margin-bottom 10px
        max-height 748px