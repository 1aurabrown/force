
.abrv-inner( data-rail="followed_artists" )
  .abrv-header
    if artworks
      h1 Works by Artists you Follow
    else
      h1 Follow Artists and Keep Up-to-Date

    a.abrv-view-all( href="/works-for-you" )
      | View All

  .abrv-content
    .abrv-carousel.mgr-horizontal-nav( class='js-my-carousel' )
      if artworks && artworks.length
        ul.abrv-fillwidth-list.fillwidth-list.js-mgr-cells.mgr-cells( class=artists ? '' : 'mgr-cells--visible')
          li.abrv-context.mgr-cell.abrv-fillwidth-row( class='js-mgr-cell' )
            include context
          for artwork in artworks
            li.mgr-cell.abrv-fillwidth-row( class='js-mgr-cell' )
              include ../../../../../components/artwork_brick_rail/templates/brick
      else
        .abrv-context.abrv-context--float
          include context
        include search

      nav.mgr-navigation.js-mgr-navigation
        if artworks && artworks.length
          include ../../../../../components/merry_go_round/templates/horizontal_navigation
