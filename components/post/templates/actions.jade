include ../../share/template
.see-post.icon-chevron-down
.post-actions
  +share(post.shareTitle(), null)
  .post-modifier-actions
    if profile && profile.isCurrentProfile()
      a.post-edit Edit
    if (profile && profile.isCurrentProfile()) || (currentUser && currentUser.canAdministerContent())
      a.post-remove Delete

    if currentUser && currentUser.canAdministerContent()
      a.post-show-feature-dialog Posts
      if post.get('featured')
        a.post-unfeature Unfeature
      else
        a.post-feature Feature

      if post.get('flagged')
        a.post-flagged Flagged
      else
        a.post-flag Flag

    if (profile && !profile.isCurrentProfile()) && currentUser && currentUser.canRepost()
      if !post.get('reposts') || post.get('reposts').length == 0
        a.post-repost Repost
      else
        a.post-unrepost Unrepost
if currentUser && currentUser.canAdministerContent()
  include ./actions_feature
