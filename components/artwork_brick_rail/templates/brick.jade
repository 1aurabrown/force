.artwork-brick.artwork-brick--on-rail(
  class='js-artwork-brick'
  data-id= artwork.id
  data-type= 'artwork'
)
  .artwork-brick__image
    a( href= artwork.href )
      img.artwork-brick__image__img(
        src= artwork.image.thumb.url
        alt= artwork.title
        onerror='this.style.display="none";'
        height=imageHeight
      )

    .artwork-brick__image__save(
      class='js-artwork-brick-save-controls'
      data-id= artwork.id
    )
      //- Rendered client-side
  .artwork-brick__metadata
    include ../../artwork_brick/templates/metadata
    include ../../artwork_brick/templates/contact
