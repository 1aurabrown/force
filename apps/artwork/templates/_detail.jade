.artwork-meta
  #artwork-lot-number
    //- Rendered client-side

  //- Primary artwork metadata
  h1
    if artists.length
      for artist in artists.models
        .artwork-detail-artist
          a.entity-link( href= artist.href() )
            = artist.get('name')
          a.entity-follow.artist-follow( data-id= artist.id )
    else if artwork.get('cultural_maker')
      .artwork-detail-artist
        span.entity-link
          = artwork.get('cultural_maker')

    if artwork.get('title')
      span.artwork-detail-title
        em= artwork.get('title')
        if artwork.get('date')
          | , #{artwork.get('date')}
    if artwork.get('series')
      h2.artwork-detail-series From the series&nbsp;
        em= artwork.get('series')

  .artwork-detail-secondary-metadata
    h2.artwork-detail-medium= artwork.get('medium')
    if artwork.get('duration')
      .artwork-detail-duration
        = artwork.get('duration')
    if artwork.get('manufacturer')
      .artwork-detail-manufacturer
        = artwork.get('manufacturer')
    unless artwork.isMultipleEditions()
      .artwork-detail-dimensions
        .amd-imperial!= artwork.dimensions({ metric: 'in', format: 'superscript' })
        .amd-metric= artwork.dimensions({ metric: 'cm', format: 'decimal' })
    if artwork.editionStatus()
      .artwork-edition-status
        = artwork.editionStatus()

    //- Image rights/credits
    if artwork.get('image_rights')
      .artwork-meta-photo-credit= artwork.get('image_rights')

    //- Edition Sets
    if artwork.isMultipleEditions()
      form.artwork-edition-sets
        for edition, i in artwork.editions.models
          label.artwork-edition-set
            if artwork.isEditionAcquireable(edition)
              .aes-radio
                input.aes-radio-button(
                  type= 'radio'
                  value= edition.id
                  name= 'edition'
                  checked= i === 0 ? true : undefined
                )
            .aes-details
              .aes-imperial!= edition.dimensions({ metric: 'in', format: 'superscript' })
              .aes-metric= edition.dimensions({ metric: 'cm', format: 'decimal' })
              .aes-edition-size= edition.get('editions')
            .aes-price= edition.priceDisplay()

  //- Partner link
  unless artwork.isContactable()
    .artwork-meta-partner
      if artwork.partnerLink()
        a( href= artwork.partnerLink() )
          = artwork.partnerName()
      else
        = artwork.partnerName()

  //- Price/sale message
  unless auctionId
    if artwork.isPriceDisplayable()
      .artwork-meta-price
        .artwork-meta-price-label( class=(artwork.get('sold') ? 'is-sold' : 'is-not-sold') )
          = artwork.priceLabel()
        .artwork-meta-price-amount= artwork.priceDisplay()
    else
      if artwork.artworkPageSaleMessage()
        .artwork-meta-price
          = artwork.artworkPageSaleMessage()

  //- Auction
  #auction-detail
    //- Rendered client-side

.artwork-actions
  //- Contact info
  if artwork.isContactable()
    - partner = artwork.related().partner

    //- Gallery/Institution link
    if artwork.partnerLink()
      h2.artwork-detail-header
        = partner.get('name')
      span#artwork-partner-locations
        //- Rendered client-side

    //- Phone number
    #artwork-partner-phone-container
      //- Rendered client-side

  //- Embedded inquiry form
  //-
  //- Intentionally not nested under the `isContactable` flag
  //- May become contactable later on depending on the state
  //- of any related auctions(-promos)
  #artwork-detail-contact.artwork-contact-form.js-artwork-detail-contact
    //- Rendered client-side

  //- Buy
  if artwork.get('acquireable')
    a.avant-garde-button-black.artwork-buy-button.artwork-contact-buy-button
      | Buy

  if artwork.showActionsList(user)
    nav.artwork-actions-list
      if artwork.get('website')
        a( href= artwork.get('website'), target='_blank' )
          i.icon-website
          | Visit Website

      if artwork.isDownloadable(user)
        a.artwork-download-button(
          href= "#{artwork.href()}/download/#{artwork.downloadableFilename()}"
          target='_blank'
          download
        )
          i.icon-download
          if artwork.defaultImage().get('downloadable')
            | Download Image
          else
            | Admin Download

      //- Administrative actions
      if user && user.isAdmin()
        a( href="#{sd.ADMIN_URL}/artworks/artwork/#{artwork.id}", target='_blank' )
          i.icon-edit
          | Edit
        a( href="#{sd.GENOME_URL}/genome/artworks?artwork_ids=#{artwork.id}", target='_blank' )
          i.icon-link
          | Genome
