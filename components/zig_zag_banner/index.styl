@import '../components/stylus_lib'

banner-box-width    = 345px
banner-box-height   = 105px
// I
one-width       = 150px
one-height      = 56px
one-arrow-size  = 40px
// II
two-height      = 64px
two-mask-width  = 65px
// III
three-width   = 260px
three-height  = 72px

.zig-zag-banner
  position absolute
  top 0
  left 0
  width banner-box-width
  height banner-box-height
  margin-left -(@width + 10)
  margin-top -(one-height / 2)
  pointer-events none

.zzb-one
.zzb-two
.zzb-three
  transition width 0.3s ease-in-out
  overflow hidden
  width 0
  pointer-events all

.zzb-one
  position absolute
  top 0
  right 0
  height one-height
  &.is-in
    width one-width

.zzb-arrow
  position absolute
  top 0
  right one-arrow-size
  width (one-width - one-arrow-size)
  height one-height
  background-color purple-color
  // Hack to anti-alias the arrow-head in Firefox
  -moz-transform scale(.9999)
  &:after
    display block
    position absolute
    left 100%
    content ''
    width 0
    height 0
    border solid transparent
    border-top-width (one-height / 2)
    border-bottom-width (one-height / 2)
    border-left one-arrow-size solid purple-color

.zzb-two
  position absolute
  height 100%
  left (banner-box-width - one-width)
  &.is-in
    width two-mask-width
  &:after
    display block
    position absolute
    content ''
    background-color darken(purple-color, 65%)
    height two-height
    width three-width
    transform rotate(27deg)
    transform-origin 0 0

.zzb-three
  position absolute
  height three-height
  bottom 0
  right (banner-box-width - three-width)
  background-color purple-color
  &.is-in
    width three-width

// Banner content
.zzb-message
  position absolute
  top 13px
  bottom @top
  right 30px
  left 70px
  width 210px
  garamond()
  text-transform none
  text-align left
  color white
  line-height 1.25
  font-size 16px
.zzb-close
  display block
  position absolute
  left 11px
  top 50%
  transform translateY(-50%)
  padding 7px 10px
  background-color white
  color purple-color
  font-size 26px
  border 3px solid purple-color
  cursor pointer
  &:hover
    border-color white
