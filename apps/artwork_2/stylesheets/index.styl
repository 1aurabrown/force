@require '../../../components/stylus_lib'

@require '../components/banner/index'
@require '../components/images/index'
@require '../components/actions/index'
@require '../components/metadata/index'

artwork-page = {
  gutter: 20px,
  metadata: {
    width: 230px
  }
}

.artwork-page
  padding 15px 0

.artwork
  clearfix()
  position relative

  &__overview
  &__metadata
    float left

  &__metadata
    width: artwork-page.metadata.width

  &__overview
    width calc('100% - %s' % (artwork-page.metadata.width + artwork-page.gutter))
    text-align center
    margin-right: artwork-page.gutter
    border-bottom 1px solid gray-lighter-color

.artwork-fold
  block-margins(20px)
