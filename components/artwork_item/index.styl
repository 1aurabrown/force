@import '../stylus_lib/index.styl'

.artwork-item
  .artwork-item-image-container
    margin-bottom 11px

  .artwork-item-image-link
    display inline-block
    overflow hidden
    position relative

  .artwork-item-caption
    color dark-gray-text-color
    font-size 15px
    line-height 1.3
    a
      color dark-gray-text-color

  .artwork-item-artist
    font-weight bold

.artwork-item
  .overlay-container
    right 10px
    bottom 15px
  .overlay-button-save
    opacity 0
  &:hover .overlay-button-save
    opacity 1

