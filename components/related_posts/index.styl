@import '../stylus_lib'
@import '../profile_badge'

.related-posts
  opacity 0
  transition opacity 0.5s
  &.is-complete
    opacity 1

.related-post
  display table
  width 100%
  text-align left
  border-top 1px solid light-gray-border-color
  transition background-color 0.125s
  a
    text-decoration none
  &:hover
    background-color faint-gray-background-hover-color
    .rpc-title
      color highlight-color
  .rpc-title
    font-size 18px
.related-post-content
.related-post-profile
  display table-cell
  padding 10px
.related-post-content
  vertical-align top
  font-size 14px
.related-post-profile
  text-align center
  vertical-align middle
  width 150px
  .profile-badge-icon
    display inline-block
    width 72px
    height 72px
  .profile-badge-name
    font-size 10px
    text-align center

.related-posts-show-all
  float right
  avant-garde()
  font-size 12px
  text-decoration none

.related-posts-no-posts
  margin-top 20px
  padding 20px 60px
  text-align center
  border 1px solid light-gray-border-color
  .related-posts-no-posts-text
    font-size 18px
    line-height 150%
    margin-bottom 20px

.related-posts-actions
  margin 20px 0
  &.is-hasremaining > .related-posts-add-button
    float left

// Accomodate icon
.related-posts-add-button
  padding-left 24px
  > i
    margin-right 5px
    line-height 0
    vertical-align -8px
