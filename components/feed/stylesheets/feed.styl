// Stylesheet for displaying feed items on the homepage
.feed
  margin-bottom: 50px
  min-width: 900px
  min-height: 500px
  text-align: left

section.feed-items
  margin 0px auto

  article.feed-item
    margin 0px auto
    padding: 60px 0px
    width: 100%
    border-bottom: 1px solid light-gray-border-color
    overflow: visible
    text-align: left
    position: relative
    &:last-child
      border-bottom: 0px solid

    .feed-large-artworks-columns
      width 100%
      .artwork-column
        width: 22.3%
        margin: 0 1.8%
        &:first-child
          margin-left 0%
        &:last-child
          margin-right 0%

    //
    // see all artworks for partner shows
    .see-more
      margin-top: 20px
      margin-bottom: 0px
      height: 22px
      text-align center
      position relative
      avant-garde()
      cursor pointer
      font-size 13px
      transition color 0.25s
      .loading-spinner-small
        display none
      &.is-loading
        color transparent
        .loading-spinner-small
          display block

    .feed-left-column
      width: 404px
      margin-right: 80px
      z-index: 4

    .feed-column
      display: inline-block
      vertical-align: top
      text-align: left
      font-size: 17px
      line-height: 141%
      z-index: 1
      width: 100%
      .feed-item-top-section
        margin-bottom 20px
        position relative
        width 100%

      .feed-item-share-section
        position absolute
        bottom 0px
        right 0px
        a
          text-decoration none
        .share-to-pinterest
          display none

      .fair-location
        display: none

      .exhibitor, .heading
        font-size: 32px
        line-height: 110%
        margin-bottom: 0px
        margin-top: 0px
        a
          text-decoration: none

      .updated
        text-transform: uppercase
        color: #888
        font-size: 11px
        padding-top: 4px
        padding-left: 10px

      .timeframe
        margin-top: 5px

      .location
        margin-top: 2px
