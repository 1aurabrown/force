@require '../../stylus_lib'

gutter-unit = 60px

.articles-grid
  &__figure
    box-sizing content-box
    display inline-block
    vertical-align top
    width 30%
    padding 0 2.5%
    &:nth-child(3n+1)
      padding-left 0
    &:nth-child(3n)
      padding-right 0
    &:nth-last-child(-n+3)
      margin-bottom 0
    &.is-center-aligned
      width 100%
  &__img-container
    display block
    position relative
    width 100%
  &__img
    width 100%
    padding-bottom 66.66%
    background-color gray-lightest-color
    background-size cover
    background-position center center
  &__overlay
    position absolute
    top 0
    bottom 0
    width 100%
    background-color black
    opacity 0
    transition opacity 0.3s ease-in-out
    &:hover
      opacity 0.4
  &__figcaption
    margin 30px 0 60px 0
  &__title
    garamond-size('s-headline')
    text-decoration none
  &__author
    margin-top 20px
  &__author-name
    display inline-block
    avant-garde-size('s-headline')
  &__author-name-editorial
    display inline-block
    garamond-size('l-caption')
    font-weight bold
  &__more-button
    max-width 1250px
    margin auto
