@import '../../../components/stylus_lib'

fade-duration = 0.2s

#home-hero-units
  position relative
  height 470px
  background black

.home-hero-unit
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  background center center no-repeat
  background-size cover
  transition opacity fade-duration ease-out
  opacity 0
  z-index 0
  &.home-hero-unit-active
    opacity 1
    z-index 1
    transition opacity fade-duration ease-in fade-duration
  > a
    text-decoration none
    display block
    width 100%
    height 100%
    padding 0 layout-side-margin
    padding-top main-header-height + 65px
    position absolute
    top 0
    left 0
  h1, h2
    display block
  h1
    text-transform uppercase
    letter-spacing 1px
    font-size 21px
  h2
    font-size 27px
    line-height 1.3em
  img
    margin 34px 0
    display inline-block
  .avant-garde-button
    margin-top 40px
    padding 10px 20px
    border 3px solid black
    background transparent

.home-hero-unit-center
  text-align center
  h1, h2, img
    margin-left auto
    margin-right auto

.home-hero-unit-right
  text-align right

.home-hero-unit-black
  h1, h2
    color white
  .avant-garde-button
    border-color white
    color white
    &:hover, &:focus, &:active
      color black
      background white