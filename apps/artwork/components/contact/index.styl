@import '../../../../components/stylus_lib'

#artwork-contact-form
  margin 15px 0
  input
  textarea
    width 100%
    margin-bottom 10px
    border-color transparify(gray-lighter-color, black)
    placeholder(color transparify(gray-dark-color, black),)
    &:focus
      border-color purple-color
  textarea
    margin-bottom 5px
  button
    margin-bottom 10px

#artwork-contact-form-errors
  color red-color
  padding-bottom 7px

.artwork-contact-buy-button
.artwork-contact-button
  margin-bottom 12px
  border-bottom 1px dotted
  border-color transparify(gray-lighter-color, black)
  padding-bottom 7px

.artwork-contact-button
  margin-top 10px

.artwork-contact-privacy
  margin-bottom 10px
  color gray-darkest-color
  font-size default-garamond-font-size - 1
  line-height 1.2

#artwork-inquiry-sent-immediate
  border-top 1px dotted
  border-bottom 1px dotted
  border-color transparify(gray-lighter-color, black)
  margin 10px 0
  padding 10px 0
  display none
  color rgb(70,117,22)

.artwork-inquiry-bold-header
  font-weight bold

#artwork-inquiry-sent
  border-top 1px dotted
  border-bottom 1px dotted
  border-color transparify(gray-lighter-color, black)
  margin 10px 0
  padding 10px 0
  color rgb(70,117,22)
  .artwork-inquiry-send-new
    text-decoration underline
    cursor pointer

