  .partner-overview-container
    for module in layout
      if module.component || module.template
        section.partner-overview-section( data-module=module.name )
          if module.title
            h3.partner-overview-section-title= module.title
          if module.viewAll
            .partner-overview-section-view-all
              a( href=module.viewAll ) View All
          .partner-overview-section-content
