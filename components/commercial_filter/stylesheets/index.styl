padding-unit = 15px

.cf-sidebar
  width 25%
  height 100%
  min-height 100px
  float left

.cf-right
  float left
  width 74%
  min-height 100%
  hr
    margin (padding-unit * 2) padding-unit

.cf-artworks
  transition opacity 0.25s
  .artwork-column
    margin 0 padding-unit
    width: calc(33% \- (padding-unit * 2))
  .artwork-item-image-container img
    width 100%
  &[data-loading='true']
    opacity 0.5
    pointer-events none

.cf-pagination
  padding 0 padding-unit

@require '../filters/medium'
@require '../../../node_modules/artsy-ezel-components/pagination'
