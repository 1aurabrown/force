@import './hero_units.styl'
@import './featured_items.styl'
@import './footer_links.styl'

hero-units-height = 470px

#home-body
  margin auto

#home-foreground
  z-index 1
  width 100%
  background white
  position relative
  top hero-units-height
  margin-bottom -106px
  padding-bottom 100px

html[data-useragent*="iPad"]
  #home-foreground
    top hero-units-height - 70

#home-hero-units
  height hero-units-height
  position fixed
  top 0
  width 100%
  background black
  z-index 1
  position fixed

#home-unsubscribe
  text-align center
  margin-top 200px
