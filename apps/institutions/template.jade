extends ../../components/main_layout/templates/index

mixin partner-tab-nav
  nav.featured-partners-nav.garamond-tablist
    a.garamond-tab( data-tab="galleries" href="/galleries" ) Galleries A&#8211;Z
    span &nbsp;&nbsp;|&nbsp;&nbsp;
    a.garamond-tab.is-active( data-tab: "institutions", href='/institutions' ) Institutions A&#8211;Z

block head
  include meta

append locals
  assetPackage = 'featured_partners'

block body
  #featured-partners.main-layout-container
    header.featured-partners-header
      .featured-partners-header-info
        .featured-partners-count
          span.featured-partners-count-value= partnerCount
          | &nbsp;
          span.featured-partners-count-label Selected Institutional Partners
        .featured-partners-partner-invite
          | Interested in partnering with Artsy?&nbsp;
          a( target='_blank', href='https://artsy.wufoo.com/forms/artsy-partnership-request-form/' ) Contact us
      +partner-tab-nav
      h1.featured-partners-title Institutions, Museums, and Nonprofits

    section.featured-partners-institutions-list
      include ../../components/a_to_z_list/template

    footer
      +partner-tab-nav
