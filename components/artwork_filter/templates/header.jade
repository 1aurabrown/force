h2
  - var forSale = filter.forSaleCount()
  if total == forSale
    | #{total} work#{total > 1 ? 's' : ''} for sale
  else
    | #{total} work#{total > 1 ? 's' : ''}, #{forSale} for sale

include ../../bordered_pulldown/mixin

+bordered-pulldown(filter.currentSort(), 'Sort by:')
  for label, value in filter.sorts
    a(
      data-value= value
      data-key='sort'
      href='?sort=#{value}'
    )= label
